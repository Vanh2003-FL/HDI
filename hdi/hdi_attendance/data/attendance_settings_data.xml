<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Default Attendance Settings -->
        <record id="default_attendance_settings" model="attendance.settings">
            <field name="name">Cài đặt chấm công mặc định</field>
            <field name="enforce_location_checkin" eval="True"/>
            <field name="enforce_location_checkout" eval="False"/>
            <field name="max_checkin_distance">100</field>
            <field name="max_checkout_distance">500</field>
            <field name="late_tolerance_minutes">15</field>
            <field name="early_leave_tolerance_minutes">15</field>
            <field name="auto_checkout_hours">12</field>
            <field name="standard_working_hours">8</field>
            <field name="overtime_threshold_hours">8</field>
            <field name="max_working_hours_per_day">12</field>
            <field name="lunch_break_duration">1</field>
            <field name="auto_deduct_break" eval="True"/>
            <field name="notify_missing_checkin" eval="True"/>
            <field name="notify_missing_checkout" eval="True"/>
            <field name="notify_late_checkin" eval="True"/>
            <field name="notify_early_checkout" eval="True"/>
            <field name="allow_explanation" eval="True"/>
            <field name="explanation_deadline_days">3</field>
            <field name="require_manager_approval" eval="True"/>
            <field name="round_attendance_time" eval="False"/>
            <field name="rounding_minutes">15</field>
            <field name="enable_ip_restriction" eval="False"/>
            <field name="enable_mobile_checkin" eval="True"/>
            <field name="require_photo_checkin" eval="False"/>
            <field name="enable_kiosk_mode" eval="False"/>
            <field name="kiosk_pin_required" eval="True"/>
        </record>
    </data>
</odoo>