<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Attendance Groups -->
    <record id="group_hdi_attendance_user" model="res.groups">
        <field name="name">HDI Attendance User</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="implied_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
        <field name="comment">User can view and manage own attendance records</field>
    </record>

    <record id="group_hdi_attendance_manager" model="res.groups">
        <field name="name">HDI Attendance Manager</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="implied_ids" eval="[(4, ref('group_hdi_attendance_user')), (4, ref('hr.group_hr_manager'))]"/>
        <field name="comment">Manager can view and manage attendance for their team</field>
    </record>

    <record id="group_hdi_attendance_officer" model="res.groups">
        <field name="name">HDI Attendance Officer</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="implied_ids" eval="[(4, ref('group_hdi_attendance_manager'))]"/>
        <field name="comment">HR Officer can manage all attendance records and settings</field>
    </record>

    <!-- Record Rules -->
    <record id="hdi_attendance_user_rule" model="ir.rule">
        <field name="name">HDI Attendance: User Access Own Records</field>
        <field name="model_id" ref="model_hr_attendance"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_hdi_attendance_user'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <record id="hdi_attendance_manager_rule" model="ir.rule">
        <field name="name">HDI Attendance: Manager Access Team Records</field>
        <field name="model_id" ref="model_hr_attendance"/>
        <field name="domain_force">[('employee_id.parent_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_hdi_attendance_manager'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <record id="hdi_attendance_exception_user_rule" model="ir.rule">
        <field name="name">HDI Attendance Exception: User Access Own Records</field>
        <field name="model_id" ref="model_attendance_exception"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_hdi_attendance_user'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record id="hdi_attendance_explanation_user_rule" model="ir.rule">
        <field name="name">HDI Attendance Explanation: User Access Own Records</field>
        <field name="model_id" ref="model_attendance_explanation"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_hdi_attendance_user'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>
</odoo>
