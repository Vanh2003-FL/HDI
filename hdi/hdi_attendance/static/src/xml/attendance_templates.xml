<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <!-- HDI Attendance Kiosk Template -->
    <t t-name="hdi_attendance.KioskTemplate">
        <div class="o_hr_attendance_kiosk">
            <div class="o_hr_attendance_kiosk_content">
                <h1>Chấm công HDI</h1>
                <div class="o_hr_attendance_employee">
                    <t t-if="state.employee">
                        <img t-att-src="state.employee.image_url" alt="Employee"/>
                        <h2 t-esc="state.employee.name"/>
                    </t>
                </div>
                <div class="o_hr_attendance_actions">
                    <button class="btn btn-primary btn-lg" t-on-click="checkInOut">
                        <t t-if="state.employee and state.employee.attendance_state == 'checked_out'">
                            <i class="fa fa-sign-in"/> Check In
                        </t>
                        <t t-else="">
                            <i class="fa fa-sign-out"/> Check Out
                        </t>
                    </button>
                </div>
            </div>
        </div>
    </t>
</templates>
