<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Attendance Exception Tree View -->
        <record id="view_attendance_exception_tree" model="ir.ui.view">
            <field name="name">attendance.exception.tree</field>
            <field name="model">attendance.exception</field>
            <field name="arch" type="xml">
                <tree string="Ngoại lệ chấm công" decoration-info="state == 'submitted'" decoration-success="state == 'resolved'" decoration-danger="state == 'rejected'">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="exception_type"/>
                    <field name="exception_date"/>
                    <field name="state"/>
                    <field name="priority"/>
                    <button name="action_submit" string="Gửi" type="object" icon="fa-send" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_approve" string="Duyệt" type="object" icon="fa-check" attrs="{'invisible': [('state', '!=', 'submitted')]}"/>
                    <button name="action_reject" string="Từ chối" type="object" icon="fa-times" attrs="{'invisible': [('state', '!=', 'submitted')]}"/>
                </tree>
            </field>
        </record>

        <!-- Attendance Exception Form View -->
        <record id="view_attendance_exception_form" model="ir.ui.view">
            <field name="name">attendance.exception.form</field>
            <field name="model">attendance.exception</field>
            <field name="arch" type="xml">
                <form string="Ngoại lệ chấm công">
                    <header>
                        <button name="action_submit" string="Gửi" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_approve" string="Duyệt" type="object" class="btn-success" attrs="{'invisible': [('state', '!=', 'submitted')]}"/>
                        <button name="action_reject" string="Từ chối" type="object" class="btn-danger" attrs="{'invisible': [('state', '!=', 'submitted')]}"/>
                        <button name="action_resolve" string="Giải quyết" type="object" class="btn-info" attrs="{'invisible': [('state', '!=', 'approved')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,resolved"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Tiêu đề ngoại lệ"/>
                            </h1>
                        </div>

                        <group>
                            <group name="basic_info" string="Thông tin cơ bản">
                                <field name="employee_id"/>
                                <field name="attendance_id"/>
                                <field name="exception_type"/>
                                <field name="exception_date"/>
                                <field name="priority"/>
                            </group>
                            
                            <group name="status_info" string="Trạng thái xử lý">
                                <field name="submitted_by" readonly="1"/>
                                <field name="submitted_date" readonly="1"/>
                                <field name="approved_by" readonly="1"/>
                                <field name="approved_date" readonly="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Mô tả" name="description">
                                <group>
                                    <field name="description" nolabel="1" placeholder="Mô tả chi tiết ngoại lệ..."/>
                                </group>
                            </page>
                            <page string="Lý do" name="reason">
                                <group>
                                    <field name="reason" nolabel="1" placeholder="Lý do gây ra ngoại lệ..."/>
                                </group>
                            </page>
                            <page string="Giải quyết" name="resolution">
                                <group>
                                    <field name="resolution" nolabel="1" placeholder="Cách giải quyết..."/>
                                    <field name="manager_comment" placeholder="Nhận xét của quản lý..."/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Attendance Explanation Tree View -->
        <record id="view_attendance_explanation_tree" model="ir.ui.view">
            <field name="name">attendance.explanation.tree</field>
            <field name="model">attendance.explanation</field>
            <field name="arch" type="xml">
                <tree string="Giải trình chấm công" decoration-info="state == 'pending'" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'">
                    <field name="attendance_id"/>
                    <field name="employee_id"/>
                    <field name="explanation"/>
                    <field name="state"/>
                    <field name="create_date"/>
                    <button name="action_approve" string="Duyệt" type="object" icon="fa-check" attrs="{'invisible': [('state', '!=', 'pending')]}"/>
                    <button name="action_reject" string="Từ chối" type="object" icon="fa-times" attrs="{'invisible': [('state', '!=', 'pending')]}"/>
                </tree>
            </field>
        </record>

        <!-- Attendance Explanation Form View -->
        <record id="view_attendance_explanation_form" model="ir.ui.view">
            <field name="name">attendance.explanation.form</field>
            <field name="model">attendance.explanation</field>
            <field name="arch" type="xml">
                <form string="Giải trình chấm công">
                    <header>
                        <button name="action_approve" string="Duyệt" type="object" class="btn-success" attrs="{'invisible': [('state', '!=', 'pending')]}"/>
                        <button name="action_reject" string="Từ chối" type="object" class="btn-danger" attrs="{'invisible': [('state', '!=', 'pending')]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group name="attendance_info" string="Thông tin chấm công">
                                <field name="attendance_id"/>
                                <field name="employee_id"/>
                            </group>
                            <group name="approval_info" string="Thông tin duyệt">
                                <field name="approved_by" readonly="1"/>
                                <field name="approved_date" readonly="1"/>
                            </group>
                        </group>

                        <group>
                            <field name="explanation" string="Giải trình" nolabel="1"/>
                        </group>

                        <group>
                            <field name="manager_comment" string="Nhận xét của quản lý" nolabel="1" placeholder="Nhận xét của quản lý..."/>
                        </group>

                        <group name="documents" string="Tài liệu hỗ trợ">
                            <field name="supporting_documents" widget="many2many_binary" nolabel="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>