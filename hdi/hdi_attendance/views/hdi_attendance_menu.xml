<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Menu chính -->
        <menuitem
            id="menu_hdi_attendance_root"
            name="HDI Chấm công"
            sequence="30"
            web_icon="hdi_attendance,static/description/icon.png"
        />

        <!-- My Attendance -->
        <menuitem
            id="menu_hdi_my_attendance"
            name="Chấm công của tôi"
            parent="menu_hdi_attendance_root"
            action="hr_attendance.hr_attendance_action_my_attendances"
            sequence="10"
        />

        <!-- Check-in/Check-out -->
        <menuitem
            id="menu_hdi_attendance_checkin"
            name="Check-in/Check-out"
            parent="menu_hdi_attendance_root"
            action="action_attendance_checkin_wizard"
            sequence="20"
        />

        <!-- Attendance Management -->
        <menuitem
            id="menu_hdi_attendance_management"
            name="Quản lý chấm công"
            parent="menu_hdi_attendance_root"
            sequence="30"
        />

        <menuitem
            id="menu_hdi_attendance_list"
            name="Danh sách chấm công"
            parent="menu_hdi_attendance_management"
            action="action_hdi_attendance_list"
            sequence="10"
        />

        <menuitem
            id="menu_hdi_attendance_exceptions"
            name="Ngoại lệ chấm công"
            parent="menu_hdi_attendance_management"
            action="action_attendance_exception_list"
            sequence="20"
        />

        <menuitem
            id="menu_hdi_attendance_explanations"
            name="Giải trình chấm công"
            parent="menu_hdi_attendance_management"
            action="action_attendance_explanation_list"
            sequence="30"
        />

        <!-- Configuration -->
        <menuitem
            id="menu_hdi_attendance_config"
            name="Cấu hình"
            parent="menu_hdi_attendance_root"
            sequence="40"
        />

        <menuitem
            id="menu_hdi_work_locations"
            name="Địa điểm làm việc"
            parent="menu_hdi_attendance_config"
            action="action_hr_work_location_list"
            sequence="10"
        />

        <menuitem
            id="menu_hdi_attendance_settings"
            name="Cài đặt chấm công"
            parent="menu_hdi_attendance_config"
            action="action_attendance_settings"
            sequence="20"
        />

        <!-- Reports -->
        <menuitem
            id="menu_hdi_attendance_reports"
            name="Báo cáo"
            parent="menu_hdi_attendance_root"
            sequence="50"
        />

        <menuitem
            id="menu_hdi_attendance_report_wizard"
            name="Tạo báo cáo"
            parent="menu_hdi_attendance_reports"
            action="action_attendance_report_wizard"
            sequence="10"
        />

        <!-- Actions -->
        <record id="action_attendance_checkin_wizard" model="ir.actions.act_window">
            <field name="name">Chấm công Check-in/Check-out</field>
            <field name="res_model">attendance.checkin.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

        <record id="action_hdi_attendance_list" model="ir.actions.act_window">
            <field name="name">Danh sách chấm công</field>
            <field name="res_model">hr.attendance</field>
            <field name="view_mode">tree,form,calendar,kanban</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record id="action_attendance_exception_list" model="ir.actions.act_window">
            <field name="name">Ngoại lệ chấm công</field>
            <field name="res_model">attendance.exception</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record id="action_attendance_explanation_list" model="ir.actions.act_window">
            <field name="name">Giải trình chấm công</field>
            <field name="res_model">attendance.explanation</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record id="action_hr_work_location_list" model="ir.actions.act_window">
            <field name="name">Địa điểm làm việc</field>
            <field name="res_model">hr.work.location</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record id="action_attendance_settings" model="ir.actions.act_window">
            <field name="name">Cài đặt chấm công</field>
            <field name="res_model">attendance.settings</field>
            <field name="view_mode">form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="target">inline</field>
        </record>

        <record id="action_attendance_report_wizard" model="ir.actions.act_window">
            <field name="name">Tạo báo cáo chấm công</field>
            <field name="res_model">attendance.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>
    </data>
</odoo>