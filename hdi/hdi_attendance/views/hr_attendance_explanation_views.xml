<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Attendance Explanation Detail Tree (inline) -->
    <record id="view_hr_attendance_explanation_detail_tree" model="ir.ui.view">
        <field name="name">hr.attendance.explanation.detail.tree</field>
        <field name="model">hr.attendance.explanation.detail</field>
        <field name="arch" type="xml">
            <list string="Chi tiết điều chỉnh" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="type"/>
                <field name="time" widget="float_time"/>
                <field name="date" readonly="1"/>
            </list>
        </field>
    </record>

    <!-- Approval Approver Tree (inline) -->
    <record id="view_approval_approver_tree" model="ir.ui.view">
        <field name="name">approval.approver.tree</field>
        <field name="model">approval.approver</field>
        <field name="arch" type="xml">
            <list string="Người phê duyệt" create="0" delete="0">
                <field name="sequence"/>
                <field name="user_id"/>
                <field name="role_selection"/>
                <field name="status" widget="badge" 
                       decoration-info="status=='pending'"
                       decoration-success="status=='approved'"
                       decoration-danger="status=='refused'"/>
                <field name="approval_date"/>
            </list>
        </field>
    </record>

    <!-- Attendance Explanation Tree View -->
    <record id="view_hr_attendance_explanation_tree" model="ir.ui.view">
        <field name="name">hr.attendance.explanation.tree</field>
        <field name="model">hr.attendance.explanation</field>
        <field name="arch" type="xml">
            <list string="Giải trình chấm công" 
                  decoration-info="state=='new'" 
                  decoration-warning="state=='to_approve'" 
                  decoration-success="state=='approved'" 
                  decoration-danger="state=='refuse'"
                  decoration-muted="state=='cancel'">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="employee_barcode"/>
                <field name="explanation_date"/>
                <field name="submission_type_id"/>
                <field name="submission_code" column_invisible="True"/>
                <field name="hr_attendance_id"/>
                <field name="check_need_approve" column_invisible="True"/>
                <field name="state" widget="badge" 
                       decoration-info="state=='new'"
                       decoration-warning="state=='to_approve'"
                       decoration-success="state=='approved'"
                       decoration-danger="state=='refuse'"
                       decoration-muted="state=='cancel'"/>
                <button name="send_approve" string="Gửi duyệt" type="object" 
                        class="btn-primary" 
                        invisible="state != 'new'"/>
                <button name="button_approve" string="Duyệt" type="object" 
                        class="btn-success" 
                        invisible="not check_need_approve or not condition_visible_button_refuse_approve"/>
                <button name="button_refuse" string="Từ chối" type="object" 
                        class="btn-danger" 
                        invisible="not check_need_approve or not condition_visible_button_refuse_approve"/>
            </list>
        </field>
    </record>

    <!-- Attendance Explanation Form View -->
    <record id="view_hr_attendance_explanation_form" model="ir.ui.view">
        <field name="name">hr.attendance.explanation.form</field>
        <field name="model">hr.attendance.explanation</field>
        <field name="arch" type="xml">
            <form string="Giải trình chấm công">
                <header>
                    <button name="send_approve" string="Gửi duyệt" type="object" 
                            class="oe_highlight" invisible="state != 'new'"/>
                    <button name="button_approve" string="Phê duyệt" type="object" 
                            class="oe_highlight" 
                            invisible="not condition_visible_button_refuse_approve"/>
                    <button name="button_refuse" string="Từ chối" type="object" 
                            invisible="not condition_visible_button_refuse_approve"/>
                    <button name="button_cancel" string="Hủy" type="object" 
                            invisible="state in ['approved', 'refuse', 'cancel']" 
                            confirm="Bạn có chắc muốn hủy bản ghi này?"/>
                    <!-- <button name="action_view_timesheet" string="Xem Timesheet" type="object" 
                            class="btn-info" invisible="not show_action_view_timesheet"/> -->
                    <field name="state" widget="statusbar" 
                           statusbar_visible="new,to_approve,approved"/>
                </header>
                <sheet>
                    <!-- <div class="oe_button_box" name="button_box">
                        <button name="action_view_timesheet" type="object" 
                                class="oe_stat_button" icon="fa-calendar" 
                                invisible="not show_action_view_timesheet">
                            <field name="ts_ids" widget="statinfo" string="Timesheets"/>
                        </button>
                    </div> -->
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Thông tin chung">
                            <field name="employee_id"/>
                            <field name="employee_barcode"/>
                            <field name="explanation_date"/>
                            <field name="submission_type_id"/>
                            <field name="submission_code" invisible="1"/>
                            <field name="used_explanation_date" invisible="1"/>
                        </group>
                        <group string="Bản ghi chấm công">
                            <field name="hr_attendance_id" 
                                   invisible="submission_code == 'MA'"
                                   domain="[('employee_id', '=', employee_id)]"/>
                            <field name="missing_hr_attendance_id" 
                                   readonly="1"
                                   invisible="submission_code != 'MA'"/>
                        </group>
                    </group>
                    
                    <!-- Detail Lines -->
                    <notebook>
                        <page string="Chi tiết điều chỉnh" 
                              invisible="submission_code in ['TSDA', 'TSNDA']">
                            <field name="line_ids" 
                                   context="{'default_explanation_id': id}">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="type"/>
                                    <field name="time" widget="float_time"/>
                                    <field name="date" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Giải trình">
                            <group>
                                <field name="explanation_reason" nolabel="1" 
                                       placeholder="Nhập lý do giải trình chi tiết..."/>
                                <field name="attachment_ids" widget="many2many_binary"/>
                            </group>
                        </page>
                        
                        <page string="Quy trình phê duyệt">
                            <field name="approver_ids" readonly="1">
                                <tree create="0" delete="0">
                                    <field name="sequence"/>
                                    <field name="user_id"/>
                                    <field name="role_selection"/>
                                    <field name="status" widget="badge"/>
                                    <field name="approval_date"/>
                                    <field name="approval_note"/>
                                </tree>
                            </field>
                            <group string="Lý do từ chối" invisible="state != 'refuse'">
                                <field name="reason_for_refuse" nolabel="1" readonly="1"/>
                            </group>
                        </page>
                        
                        <page string="Timesheets" invisible="not ts_ids">
                            <field name="ts_ids" readonly="1">
                                <tree>
                                    <field name="date"/>
                                    <field name="name"/>
                                    <field name="project_id"/>
                                    <field name="task_id"/>
                                    <field name="unit_amount" widget="float_time" sum="Total"/>
                                    <field name="en_state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    
                    <!-- Hidden fields for conditions -->
                    <field name="condition_visible_button_refuse_approve" invisible="1"/>
                    <field name="check_need_approve" invisible="1"/>
                    <!-- <field name="show_action_view_timesheet" invisible="1"/> -->
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Attendance Explanation Search View -->
    <record id="view_hr_attendance_explanation_search" model="ir.ui.view">
        <field name="name">hr.attendance.explanation.search</field>
        <field name="model">hr.attendance.explanation</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm giải trình">
                <field name="name" filter_domain="['|', ('name', 'ilike', self), ('employee_id', 'ilike', self)]"/>
                <field name="employee_id"/>
                <field name="employee_barcode"/>
                <field name="submission_type_id"/>
                <field name="explanation_date"/>
                
                <filter string="Của tôi" name="my_explanations" 
                        domain="[('employee_id.user_id', '=', uid)]"/>
                <filter string="Cần tôi duyệt" name="need_my_approve" 
                        domain="[('check_need_approve', '=', True)]"/>
                <separator/>
                <filter string="Mới" name="filter_new" 
                        domain="[('state', '=', 'new')]"/>
                <filter string="Chờ duyệt" name="filter_to_approve" 
                        domain="[('state', '=', 'to_approve')]"/>
                <filter string="Đã duyệt" name="filter_approved" 
                        domain="[('state', '=', 'approved')]"/>
                <filter string="Từ chối" name="filter_refuse" 
                        domain="[('state', '=', 'refuse')]"/>
                <filter string="Đã hủy" name="filter_cancel" 
                        domain="[('state', '=', 'cancel')]"/>
                <separator/>
                <filter string="Tháng này" name="filter_this_month" 
                        domain="[('explanation_date', '&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('explanation_date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                <filter string="Tháng trước" name="filter_last_month" 
                        domain="[('explanation_date', '&gt;=', (context_today() - relativedelta(months=1, day=1)).strftime('%Y-%m-%d')),
                                 ('explanation_date', '&lt;=', (context_today() - relativedelta(months=1, day=31)).strftime('%Y-%m-%d'))]"/>
                
                <group expand="0" string="Nhóm theo">
                    <filter string="Nhân viên" name="group_employee" 
                            context="{'group_by': 'employee_id'}"/>
                    <filter string="Trạng thái" name="group_state" 
                            context="{'group_by': 'state'}"/>
                    <filter string="Loại giải trình" name="group_submission_type" 
                            context="{'group_by': 'submission_type_id'}"/>
                    <filter string="Ngày" name="group_date" 
                            context="{'group_by': 'explanation_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="hr_attendance_explanation_my_action" model="ir.actions.act_window">
        <field name="name">Giải trình chấm công của tôi</field>
        <field name="res_model">hr.attendance.explanation</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('employee_id.user_id', '=', uid)]</field>
        <field name="context">{'search_default_my_explanations': 1, 'search_default_filter_new': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo giải trình chấm công mới
            </p>
            <p>
                Giải trình cho các trường hợp: đi muộn, về sớm, thiếu chấm công, điều chỉnh giờ...
            </p>
        </field>
    </record>

    <record id="hr_attendance_explanation_need_approve_action" model="ir.actions.act_window">
        <field name="name">Giải trình cần phê duyệt</field>
        <field name="res_model">hr.attendance.explanation</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('check_need_approve', '=', True)]</field>
        <field name="context">{'search_default_need_my_approve': 1}</field>
    </record>

    <record id="hr_attendance_explanation_action" model="ir.actions.act_window">
        <field name="name">Tất cả giải trình chấm công</field>
        <field name="res_model">hr.attendance.explanation</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_to_approve': 1}</field>
    </record>
</odoo>
