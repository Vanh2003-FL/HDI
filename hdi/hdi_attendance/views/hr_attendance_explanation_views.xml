<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Attendance Explanation Tree View -->
    <record id="view_hr_attendance_explanation_tree" model="ir.ui.view">
        <field name="name">hr.attendance.explanation.tree</field>
        <field name="model">hr.attendance.explanation</field>
        <field name="arch" type="xml">
            <tree string="Giải trình chấm công" decoration-info="state=='draft'" 
                  decoration-warning="state=='submitted'" decoration-success="state=='approved'" 
                  decoration-danger="state=='refused'">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="date"/>
                <field name="submission_type_id"/>
                <field name="state" widget="badge" 
                       decoration-info="state=='draft'"
                       decoration-warning="state=='submitted'"
                       decoration-success="state=='approved'"
                       decoration-danger="state=='refused'"/>
            </tree>
        </field>
    </record>

    <!-- Attendance Explanation Form View -->
    <record id="view_hr_attendance_explanation_form" model="ir.ui.view">
        <field name="name">hr.attendance.explanation.form</field>
        <field name="model">hr.attendance.explanation</field>
        <field name="arch" type="xml">
            <form string="Giải trình chấm công">
                <header>
                    <button name="action_submit" string="Gửi phê duyệt" type="object" 
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_approve" string="Phê duyệt" type="object" 
                            class="oe_highlight" invisible="state != 'submitted'" 
                            groups="hr_attendance.group_hr_attendance_manager"/>
                    <button name="action_refuse" string="Từ chối" type="object" 
                            invisible="state != 'submitted'" 
                            groups="hr_attendance.group_hr_attendance_manager"/>
                    <button name="action_reset_to_draft" string="Đặt lại nháp" type="object" 
                            invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,submitted,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" readonly="state != 'draft'"/>
                            <field name="date" readonly="state != 'draft'"/>
                            <field name="submission_type_id" readonly="state != 'draft'"/>
                            <field name="attendance_id" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="expected_check_in" readonly="state != 'draft'"/>
                            <field name="expected_check_out" readonly="state != 'draft'"/>
                            <field name="actual_check_in" readonly="state != 'draft'"/>
                            <field name="actual_check_out" readonly="state != 'draft'"/>
                        </group>
                    </group>
                    <group string="Giải trình">
                        <field name="reason" readonly="state != 'draft'" nolabel="1" 
                               placeholder="Nhập lý do giải trình..."/>
                        <field name="attachment_ids" widget="many2many_binary" 
                               readonly="state != 'draft'"/>
                    </group>
                    <group string="Phê duyệt" invisible="state in ['draft', 'submitted']">
                        <field name="approver_id" readonly="1"/>
                        <field name="approval_date" readonly="1"/>
                        <field name="refusal_reason" readonly="1" 
                               invisible="state != 'refused'"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Attendance Explanation Search View -->
    <record id="view_hr_attendance_explanation_search" model="ir.ui.view">
        <field name="name">hr.attendance.explanation.search</field>
        <field name="model">hr.attendance.explanation</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm giải trình">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="submission_type_id"/>
                <filter string="Của tôi" name="my_explanations" 
                        domain="[('employee_id.user_id', '=', uid)]"/>
                <filter string="Nháp" name="filter_draft" 
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Chờ duyệt" name="filter_need_approve" 
                        domain="[('state', '=', 'submitted')]"/>
                <filter string="Đã duyệt" name="filter_approved" 
                        domain="[('state', '=', 'approved')]"/>
                <filter string="Từ chối" name="filter_refused" 
                        domain="[('state', '=', 'refused')]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Nhân viên" name="group_employee" 
                            context="{'group_by': 'employee_id'}"/>
                    <filter string="Trạng thái" name="group_state" 
                            context="{'group_by': 'state'}"/>
                    <filter string="Ngày" name="group_date" 
                            context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="hr_attendance_explanation_my_action" model="ir.actions.act_window">
        <field name="name">Giải trình chấm công của tôi</field>
        <field name="res_model">hr.attendance.explanation</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('employee_id.user_id', '=', uid)]</field>
        <field name="context">{'search_default_filter_need_approve': 1}</field>
    </record>

    <record id="hr_attendance_explanation_action" model="ir.actions.act_window">
        <field name="name">Tất cả giải trình chấm công</field>
        <field name="res_model">hr.attendance.explanation</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_need_approve': 1}</field>
    </record>
</odoo>
