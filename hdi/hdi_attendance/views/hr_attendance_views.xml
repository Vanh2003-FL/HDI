<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Attendance Form View -->
    <record id="view_attendance_form_inherit_hdi" model="ir.ui.view">
        <field name="name">hr.attendance.form.inherit.hdi</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='check_out']" position="after">
                <field name="note"/>
                <field name="explanation_required" invisible="1"/>
                <field name="explanation_id" readonly="1"/>
            </xpath>
            <xpath expr="//sheet" position="inside">
                <div class="oe_button_box" name="button_box" invisible="not explanation_required">
                    <button name="button_create_explanation" string="Giải trình chấm công" 
                            class="btn-primary" type="object" icon="fa-pencil-square-o"/>
                </div>
            </xpath>
        </field>
    </record>

    <!-- My Attendance Action -->
    <record id="own_hr_attendance_action" model="ir.actions.act_window">
        <field name="name">Chấm công của tôi</field>
        <field name="res_model">hr.attendance</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('employee_id.user_id', '=', uid)]</field>
        <field name="context">{'search_default_today': 1}</field>
    </record>

    <!-- Search View Enhancement -->
    <record id="hr_attendance_view_filter_inherit_hdi" model="ir.ui.view">
        <field name="name">hr.attendance.view.filter.inherit.hdi</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='myattendances']" position="after">
                <filter string="Cần giải trình" name="need_explanation" 
                        domain="[('explanation_required', '=', True), ('explanation_id', '=', False)]"/>
            </xpath>
        </field>
    </record>
</odoo>
