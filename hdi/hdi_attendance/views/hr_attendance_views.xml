<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_hdi_attendance_tree" model="ir.ui.view">
            <field name="name">hdi.attendance.tree</field>
            <field name="model">hr.attendance</field>
            <field name="arch" type="xml">
                <tree string="Chấm công" decoration-danger="hdi_is_missing_checkout" decoration-warning="hdi_is_late or hdi_is_early_leave" decoration-success="hdi_attendance_state == 'normal'">
                    <field name="employee_id"/>
                    <field name="check_in_date"/>
                    <field name="check_in" widget="datetime"/>
                    <field name="check_out" widget="datetime"/>
                    <field name="hdi_work_shift"/>
                    <field name="hdi_work_location_id"/>
                    <field name="worked_hours" widget="float_time" sum="Total"/>
                    <field name="hdi_overtime_hours" widget="float_time" sum="Total OT"/>
                    <field name="hdi_attendance_state"/>
                    <field name="hdi_is_late" invisible="1"/>
                    <field name="hdi_is_early_leave" invisible="1"/>
                    <field name="hdi_is_missing_checkout" invisible="1"/>
                    <button name="action_explain_attendance" type="object" icon="fa-comment" title="Giải trình" attrs="{'invisible': [('hdi_can_explain', '=', False)]}"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_hdi_attendance_form" model="ir.ui.view">
            <field name="name">hdi.attendance.form</field>
            <field name="model">hr.attendance</field>
            <field name="arch" type="xml">
                <form string="Chi tiết chấm công">
                    <header>
                        <button name="action_explain_attendance" string="Giải trình" type="object" class="btn-primary" attrs="{'invisible': [('hdi_can_explain', '=', False)]}"/>
                        <field name="hdi_attendance_state" widget="statusbar" statusbar_visible="normal,late,early_leave,missing_checkout,explained"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_explain_attendance" type="object" class="oe_stat_button" icon="fa-comment" attrs="{'invisible': [('hdi_explanation_count', '=', 0)]}">
                                <field name="hdi_explanation_count" widget="statinfo" string="Giải trình"/>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="employee_id" readonly="1"/>
                            </h1>
                            <h2>
                                <field name="check_in_date" readonly="1"/>
                            </h2>
                        </div>

                        <group>
                            <group name="time_info" string="Thông tin thời gian">
                                <field name="check_in" widget="datetime"/>
                                <field name="check_out" widget="datetime"/>
                                <field name="worked_hours" widget="float_time"/>
                                <field name="hdi_expected_hours" widget="float_time"/>
                                <field name="hdi_overtime_hours" widget="float_time"/>
                            </group>
                            
                            <group name="work_info" string="Thông tin công việc">
                                <field name="hdi_work_shift"/>
                                <field name="hdi_work_location_id"/>
                                <field name="hdi_checkout_location_id"/>
                            </group>
                        </group>

                        <group>
                            <group name="status_info" string="Trạng thái">
                                <field name="hdi_is_late"/>
                                <field name="hdi_late_minutes" widget="float_time" attrs="{'invisible': [('hdi_is_late', '=', False)]}"/>
                                <field name="hdi_is_early_leave"/>
                                <field name="hdi_early_leave_minutes" widget="float_time" attrs="{'invisible': [('hdi_is_early_leave', '=', False)]}"/>
                                <field name="hdi_is_missing_checkout"/>
                                <field name="hdi_can_explain" invisible="1"/>
                            </group>
                            
                            <group name="location_info" string="Thông tin vị trí">
                                <field name="check_in_latitude"/>
                                <field name="check_in_longitude"/>
                                <field name="check_in_distance"/>
                                <field name="check_out_latitude"/>
                                <field name="check_out_longitude"/>
                                <field name="check_out_distance"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Giải trình" name="explanations">
                                <field name="hdi_explanation_ids">
                                    <tree>
                                        <field name="explanation"/>
                                        <field name="state"/>
                                        <field name="create_date"/>
                                        <button name="action_approve" string="Duyệt" type="object" icon="fa-check" attrs="{'invisible': [('state', '!=', 'pending')]}"/>
                                        <button name="action_reject" string="Từ chối" type="object" icon="fa-times" attrs="{'invisible': [('state', '!=', 'pending')]}"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Ghi chú" name="notes">
                                <field name="note" placeholder="Ghi chú về chấm công..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Calendar View -->
        <record id="view_hdi_attendance_calendar" model="ir.ui.view">
            <field name="name">hdi.attendance.calendar</field>
            <field name="model">hr.attendance</field>
            <field name="arch" type="xml">
                <calendar string="Lịch chấm công" date_start="check_in" date_stop="check_out" color="color" mode="month">
                    <field name="employee_id"/>
                    <field name="hdi_work_shift"/>
                    <field name="worked_hours"/>
                    <field name="hdi_attendance_state"/>
                </calendar>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_hdi_attendance_kanban" model="ir.ui.view">
            <field name="name">hdi.attendance.kanban</field>
            <field name="model">hr.attendance</field>
            <field name="arch" type="xml">
                <kanban string="Chấm công" default_group_by="hdi_attendance_state">
                    <field name="employee_id"/>
                    <field name="check_in_date"/>
                    <field name="check_in"/>
                    <field name="check_out"/>
                    <field name="worked_hours"/>
                    <field name="hdi_work_location_id"/>
                    <field name="hdi_attendance_state"/>
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click" t-attf-style="border-left: 5px solid #{record.color.raw_value};">
                                <div class="oe_kanban_content">
                                    <div class="oe_kanban_header">
                                        <strong><field name="employee_id"/></strong>
                                        <span class="float-end"><field name="check_in_date"/></span>
                                    </div>
                                    <div class="oe_kanban_body">
                                        <p>
                                            <i class="fa fa-clock-o"/> <field name="check_in" widget="datetime"/>
                                            <t t-if="record.check_out.raw_value">
                                                - <field name="check_out" widget="datetime"/>
                                            </t>
                                        </p>
                                        <p>
                                            <i class="fa fa-map-marker"/> <field name="hdi_work_location_id"/>
                                        </p>
                                        <p>
                                            <i class="fa fa-time"/> <field name="worked_hours" widget="float_time"/> giờ
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_hdi_attendance_search" model="ir.ui.view">
            <field name="name">hdi.attendance.search</field>
            <field name="model">hr.attendance</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm chấm công">
                    <field name="employee_id"/>
                    <field name="check_in_date"/>
                    <field name="hdi_work_location_id"/>
                    <field name="hdi_work_shift"/>
                    
                    <filter name="my_attendances" string="Chấm công của tôi" domain="[('employee_id.user_id', '=', uid)]"/>
                    <filter name="today" string="Hôm nay" domain="[('check_in_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                    <filter name="this_week" string="Tuần này" domain="[('check_in_date', '>=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')), ('check_in_date', '&lt;=', (context_today() + datetime.timedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                    <filter name="this_month" string="Tháng này" domain="[('check_in_date', '>=', context_today().strftime('%Y-%m-01'))]"/>
                    
                    <separator/>
                    <filter name="late" string="Đi muộn" domain="[('hdi_is_late', '=', True)]"/>
                    <filter name="early_leave" string="Về sớm" domain="[('hdi_is_early_leave', '=', True)]"/>
                    <filter name="missing_checkout" string="Thiếu checkout" domain="[('hdi_is_missing_checkout', '=', True)]"/>
                    <filter name="with_explanation" string="Có giải trình" domain="[('hdi_explanation_ids', '!=', False)]"/>
                    
                    <group expand="0" string="Nhóm theo">
                        <filter name="group_employee" string="Nhân viên" context="{'group_by': 'employee_id'}"/>
                        <filter name="group_date" string="Ngày" context="{'group_by': 'check_in_date'}"/>
                        <filter name="group_location" string="Địa điểm" context="{'group_by': 'hdi_work_location_id'}"/>
                        <filter name="group_shift" string="Ca làm việc" context="{'group_by': 'hdi_work_shift'}"/>
                        <filter name="group_status" string="Trạng thái" context="{'group_by': 'hdi_attendance_state'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>