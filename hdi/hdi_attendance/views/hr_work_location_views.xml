<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Work Location Tree View -->
        <record id="view_hr_work_location_tree" model="ir.ui.view">
            <field name="name">hr.work.location.tree</field>
            <field name="model">hr.work.location</field>
            <field name="arch" type="xml">
                <tree string="Địa điểm làm việc" decoration-bf="is_default">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="address"/>
                    <field name="total_checkins"/>
                    <field name="total_checkouts"/>
                    <field name="today_checkins"/>
                    <field name="today_checkouts"/>
                    <field name="is_default"/>
                    <field name="is_active"/>
                    <button name="action_open_map" type="object" icon="fa-map-marker" title="Xem trên bản đồ" attrs="{'invisible': [('latitude', '=', 0)]}"/>
                </tree>
            </field>
        </record>

        <!-- Work Location Form View -->
        <record id="view_hr_work_location_form" model="ir.ui.view">
            <field name="name">hr.work.location.form</field>
            <field name="model">hr.work.location</field>
            <field name="arch" type="xml">
                <form string="Địa điểm làm việc">
                    <header>
                        <button name="action_open_map" string="Xem trên bản đồ" type="object" class="btn-primary" attrs="{'invisible': [('latitude', '=', 0)]}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_attendances" type="object" class="oe_stat_button" icon="fa-calendar-check-o">
                                <div class="o_stat_info">
                                    <field name="total_checkins" widget="statinfo" string="Check-ins"/>
                                </div>
                            </button>
                            <button name="action_view_attendances" type="object" class="oe_stat_button" icon="fa-calendar-times-o">
                                <div class="o_stat_info">
                                    <field name="total_checkouts" widget="statinfo" string="Check-outs"/>
                                </div>
                            </button>
                        </div>

                        <widget name="web_ribbon" title="Mặc định" bg_color="bg-success" attrs="{'invisible': [('is_default', '=', False)]}"/>
                        <widget name="web_ribbon" title="Không hoạt động" bg_color="bg-danger" attrs="{'invisible': [('is_active', '=', True)]}"/>

                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Tên địa điểm làm việc"/>
                            </h1>
                            <h2>
                                <field name="code" placeholder="Mã viết tắt"/>
                            </h2>
                        </div>

                        <group>
                            <group name="basic_info" string="Thông tin cơ bản">
                                <field name="address" placeholder="Địa chỉ đầy đủ"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="is_default"/>
                                <field name="is_active"/>
                            </group>
                            
                            <group name="gps_info" string="Tọa độ GPS">
                                <field name="latitude"/>
                                <field name="longitude"/>
                                <field name="google_maps_url" widget="url" readonly="1"/>
                            </group>
                        </group>

                        <group>
                            <group name="radius_settings" string="Cài đặt bán kính">
                                <field name="allowed_checkin_radius" widget="integer"/>
                                <field name="allowed_checkout_radius" widget="integer"/>
                            </group>
                            
                            <group name="contact_info" string="Thông tin liên hệ">
                                <field name="contact_person"/>
                                <field name="contact_phone" widget="phone"/>
                                <field name="contact_email" widget="email"/>
                            </group>
                        </group>

                        <group name="stats" string="Thống kê hôm nay">
                            <group>
                                <field name="today_checkins" readonly="1"/>
                                <field name="today_checkouts" readonly="1"/>
                            </group>
                            <group>
                                <field name="total_checkins" readonly="1"/>
                                <field name="total_checkouts" readonly="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Nhân viên được phép" name="employees">
                                <field name="employee_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="department_id"/>
                                        <field name="job_id"/>
                                        <field name="hdi_default_work_shift"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Lịch làm việc" name="schedule">
                                <field name="work_schedule_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="dayofweek"/>
                                        <field name="hour_from" widget="float_time"/>
                                        <field name="hour_to" widget="float_time"/>
                                        <field name="is_active"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Mô tả" name="description">
                                <field name="description" placeholder="Mô tả chi tiết về địa điểm làm việc..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Work Location Kanban View -->
        <record id="view_hr_work_location_kanban" model="ir.ui.view">
            <field name="name">hr.work.location.kanban</field>
            <field name="model">hr.work.location</field>
            <field name="arch" type="xml">
                <kanban string="Địa điểm làm việc">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="address"/>
                    <field name="today_checkins"/>
                    <field name="today_checkouts"/>
                    <field name="is_default"/>
                    <field name="is_active"/>
                    <field name="latitude"/>
                    <field name="longitude"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                                <t t-if="record.is_default.raw_value">
                                                    <span class="badge badge-success">Mặc định</span>
                                                </t>
                                            </strong>
                                            <br/>
                                            <span class="o_kanban_record_subtitle">
                                                <field name="code"/>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <p><i class="fa fa-map-marker"/> <field name="address"/></p>
                                        <div class="row">
                                            <div class="col-6">
                                                <span class="badge badge-info">
                                                    <i class="fa fa-sign-in"/> <field name="today_checkins"/>
                                                </span>
                                            </div>
                                            <div class="col-6">
                                                <span class="badge badge-warning">
                                                    <i class="fa fa-sign-out"/> <field name="today_checkouts"/>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <button name="action_open_map" type="object" class="btn btn-sm btn-primary" attrs="{'invisible': [('latitude', '=', 0)]}">
                                            <i class="fa fa-map"/> Xem bản đồ
                                        </button>
                                        <button name="action_view_attendances" type="object" class="btn btn-sm btn-secondary">
                                            <i class="fa fa-calendar"/> Xem chấm công
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Work Location Search View -->
        <record id="view_hr_work_location_search" model="ir.ui.view">
            <field name="name">hr.work.location.search</field>
            <field name="model">hr.work.location</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm địa điểm làm việc">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="address"/>
                    
                    <filter name="active" string="Hoạt động" domain="[('is_active', '=', True)]"/>
                    <filter name="default" string="Mặc định" domain="[('is_default', '=', True)]"/>
                    <filter name="with_gps" string="Có GPS" domain="[('latitude', '!=', 0), ('longitude', '!=', 0)]"/>
                    
                    <group expand="0" string="Nhóm theo">
                        <filter name="group_company" string="Công ty" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                        <filter name="group_active" string="Trạng thái" context="{'group_by': 'is_active'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>