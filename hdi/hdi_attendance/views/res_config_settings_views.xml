<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Settings View -->
    <record id="res_config_settings_view_form_inherit_hdi_attendance" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hdi.attendance</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_attendance.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='hr_presence_control_settings']" position="after">
                <h2>HDI Attendance Settings</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="attendance_require_geolocation"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="attendance_require_geolocation"/>
                            <div class="text-muted">
                                Bắt buộc nhân viên bật GPS khi chấm công
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="attendance_allow_manual_checkin"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="attendance_allow_manual_checkin"/>
                            <div class="text-muted">
                                Cho phép nhân viên chấm công thủ công
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="attendance_explanation_required_days"/>
                            <field name="attendance_explanation_required_days" class="o_light_label"/>
                            <div class="text-muted">
                                Số ngày tối đa cho phép tạo giải trình chấm công
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
