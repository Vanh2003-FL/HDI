<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Attendance configuration in Settings -->
        <record id="res_config_settings_view_form_attendance" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.attendance</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="HDI Attendance" string="HDI Chấm công" data-key="hdi_attendance">
                        <h2>HDI Chấm công</h2>
                        
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="hdi_enforce_location_checkin"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="hdi_enforce_location_checkin"/>
                                    <div class="text-muted">
                                        Bắt buộc nhân viên phải ở gần địa điểm làm việc khi check-in
                                    </div>
                                    <div class="content-group mt16" attrs="{'invisible': [('hdi_enforce_location_checkin', '=', False)]}">
                                        <div class="row">
                                            <label for="hdi_max_checkin_distance" string="Khoảng cách tối đa (m)" class="col-3 o_light_label"/>
                                            <field name="hdi_max_checkin_distance" class="col-2"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="hdi_enforce_location_checkout"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="hdi_enforce_location_checkout"/>
                                    <div class="text-muted">
                                        Bắt buộc nhân viên phải ở gần địa điểm làm việc khi check-out
                                    </div>
                                    <div class="content-group mt16" attrs="{'invisible': [('hdi_enforce_location_checkout', '=', False)]}">
                                        <div class="row">
                                            <label for="hdi_max_checkout_distance" string="Khoảng cách tối đa (m)" class="col-3 o_light_label"/>
                                            <field name="hdi_max_checkout_distance" class="col-2"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="hdi_notify_missing_checkin"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="hdi_notify_missing_checkin"/>
                                    <div class="text-muted">
                                        Gửi thông báo khi nhân viên quên check-in
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="hdi_notify_missing_checkout"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="hdi_notify_missing_checkout"/>
                                    <div class="text-muted">
                                        Gửi thông báo khi nhân viên quên check-out
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="hdi_late_tolerance_minutes" string="Dung sai đi muộn"/>
                                    <div class="text-muted">
                                        Số phút dung sai trước khi coi là đi muộn
                                    </div>
                                    <div class="content-group">
                                        <div class="row">
                                            <field name="hdi_late_tolerance_minutes" class="col-2"/> phút
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="hdi_standard_working_hours" string="Giờ làm việc tiêu chuẩn"/>
                                    <div class="text-muted">
                                        Số giờ làm việc tiêu chuẩn trong 1 ngày
                                    </div>
                                    <div class="content-group">
                                        <div class="row">
                                            <field name="hdi_standard_working_hours" class="col-2"/> giờ/ngày
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>