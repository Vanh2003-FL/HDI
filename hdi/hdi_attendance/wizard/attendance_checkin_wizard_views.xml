<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Wizard Check-in/Check-out Form -->
        <record id="view_attendance_checkin_wizard_form" model="ir.ui.view">
            <field name="name">attendance.checkin.wizard.form</field>
            <field name="model">attendance.checkin.wizard</field>
            <field name="arch" type="xml">
                <form string="Chấm công Check-in/Check-out">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="attendance_mode" widget="radio" options="{'horizontal': true}"/>
                            </h1>
                            <h2>
                                <field name="employee_id" readonly="1"/>
                            </h2>
                        </div>

                        <group>
                            <group name="attendance_info" string="Thông tin chấm công">
                                <field name="work_location_id" required="1"/>
                                <field name="work_shift"/>
                                <field name="can_check_in" invisible="1"/>
                                <field name="can_check_out" invisible="1"/>
                                <field name="current_attendance_id" invisible="1"/>
                            </group>
                            
                            <group name="location_info" string="Thông tin vị trí">
                                <field name="latitude" readonly="1"/>
                                <field name="longitude" readonly="1"/>
                                <field name="distance_to_location" readonly="1"/>
                                <button name="action_get_location" string="Lấy vị trí hiện tại" type="object" class="btn-secondary"/>
                            </group>
                        </group>

                        <group name="status_info" string="Trạng thái">
                            <field name="last_checkin_info" readonly="1" nolabel="1" colspan="2"/>
                        </group>

                        <group name="warning_info" attrs="{'invisible': [('location_warning', '=', False)]}">
                            <div class="alert alert-warning" role="alert" colspan="2">
                                <field name="location_warning" readonly="1" nolabel="1"/>
                            </div>
                        </group>

                        <group>
                            <field name="note" placeholder="Ghi chú thêm (nếu có)..." colspan="2"/>
                        </group>
                    </sheet>
                    
                    <footer>
                        <button name="action_process" string="Xác nhận" type="object" class="btn-primary"/>
                        <button string="Hủy" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>