<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Wizard Explanation Form -->
        <record id="view_attendance_explanation_wizard_form" model="ir.ui.view">
            <field name="name">attendance.explanation.wizard.form</field>
            <field name="model">attendance.explanation.wizard</field>
            <field name="arch" type="xml">
                <form string="Giải trình chấm công">
                    <sheet>
                        <div class="oe_title">
                            <h1>Giải trình chấm công</h1>
                            <h2>
                                <field name="employee_id" readonly="1"/>
                            </h2>
                        </div>

                        <group>
                            <group name="attendance_info" string="Thông tin chấm công">
                                <field name="attendance_id" readonly="1"/>
                                <field name="current_checkin" readonly="1"/>
                                <field name="current_checkout" readonly="1"/>
                            </group>
                            
                            <group name="manager_info" string="Thông tin phê duyệt">
                                <field name="manager_id" readonly="1"/>
                                <field name="notify_manager"/>
                            </group>
                        </group>

                        <group name="issues" string="Các vấn đề phát hiện">
                            <div class="alert alert-info" role="alert" colspan="2">
                                <field name="attendance_issues" readonly="1" nolabel="1"/>
                            </div>
                        </group>

                        <group>
                            <group name="explanation_info" string="Thông tin giải trình">
                                <field name="explanation_type" required="1"/>
                                <field name="explanation" required="1" placeholder="Vui lòng mô tả chi tiết lý do và tình huống..." colspan="2"/>
                            </group>
                        </group>

                        <group name="time_adjustment" string="Điều chỉnh thời gian (nếu cần)">
                            <group>
                                <field name="proposed_checkin"/>
                                <field name="start_time_explanation" placeholder="Giải thích về thời gian check-in đề xuất"/>
                            </group>
                            <group>
                                <field name="proposed_checkout"/>
                                <field name="end_time_explanation" placeholder="Giải thích về thời gian check-out đề xuất"/>
                            </group>
                        </group>

                        <group name="attachments" string="Tài liệu đính kèm">
                            <field name="attachment_ids" widget="many2many_binary" nolabel="1" colspan="2"/>
                        </group>
                    </sheet>
                    
                    <footer>
                        <button name="action_submit_explanation" string="Gửi giải trình" type="object" class="btn-primary"/>
                        <button name="action_cancel" string="Hủy" type="object" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>