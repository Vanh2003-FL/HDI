<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Reason for Refuse Wizard -->
    <record id="view_reason_for_refuse_wizard_form" model="ir.ui.view">
        <field name="name">reason.for.refuse.wizard.form</field>
        <field name="model">reason.for.refuse.wizard</field>
        <field name="arch" type="xml">
            <form string="Từ chối giải trình">
                <group>
                    <field name="hr_attendance_explanation_id" invisible="1"/>
                    <field name="reason_for_refuse" placeholder="Nhập lý do từ chối chi tiết..." nolabel="1"/>
                </group>
                <footer>
                    <button string="Xác nhận từ chối" name="action_refuse" type="object" class="btn-primary"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

