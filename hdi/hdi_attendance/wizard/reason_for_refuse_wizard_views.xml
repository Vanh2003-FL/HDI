    <!-- Report Timekeeping Wizard -->
    <record id="view_report_timekeeping_wizard_form" model="ir.ui.view">
        <field name="name">report.timekeeping.wizard.form</field>
        <field name="model">report.timekeeping.wizard</field>
        <field name="arch" type="xml">
            <form string="Báo cáo chấm công">
                <group>
                    <group string="Thời gian">
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group string="Lọc">
                        <field name="employee_ids" widget="many2many_tags"/>
                        <field name="department_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <group>
                    <group string="Tùy chọn">
                        <field name="include_explanations"/>
                        <field name="include_gps"/>
                        <field name="group_by"/>
                    </group>
                    <group string="Định dạng">
                        <field name="report_format" widget="radio"/>
                    </group>
                </group>
                <footer>
                    <button string="Tạo báo cáo" name="action_generate_report" type="object" class="btn-primary"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Report Timekeeping Action -->
    <record id="action_report_timekeeping_wizard" model="ir.actions.act_window">
        <field name="name">Báo cáo chấm công</field>
        <field name="res_model">report.timekeeping.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
