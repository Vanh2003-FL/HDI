<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Fleet Vehicle Form -->
    <record id="view_fleet_vehicle_form_wms" model="ir.ui.view">
        <field name="name">fleet.vehicle.form.wms</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <field name="availability_status" widget="statusbar"/>
                </header>
            </xpath>
            
            <xpath expr="//page[@name='information']" position="after">
                <page string="WMS Integration" name="wms_integration">
                    <group>
                        <group string="Warehouse">
                            <field name="warehouse_id"/>
                            <field name="vehicle_category"/>
                        </group>
                        <group string="Statistics">
                            <field name="total_deliveries"/>
                            <field name="total_distance_km"/>
                            <field name="average_fuel_consumption"/>
                            <field name="on_time_delivery_rate" widget="progressbar"/>
                        </group>
                    </group>
                    
                    <group string="Capacity">
                        <group>
                            <field name="max_weight_kg"/>
                            <field name="max_volume_m3"/>
                            <field name="max_pallets"/>
                        </group>
                    </group>
                    
                    <group string="GPS Tracking">
                        <group>
                            <field name="has_gps"/>
                            <field name="gps_device_id"/>
                        </group>
                        <group>
                            <field name="current_latitude" readonly="1"/>
                            <field name="current_longitude" readonly="1"/>
                            <field name="current_speed" readonly="1"/>
                            <field name="last_gps_update" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <button name="action_view_assignments" string="View Assignments" 
                                type="object" class="btn-primary" icon="fa-tasks"/>
                        <button name="action_view_gps_tracking" string="GPS History" 
                                type="object" class="btn-info" icon="fa-map-marker"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Fleet Vehicle Tree -->
    <record id="view_fleet_vehicle_tree_wms" model="ir.ui.view">
        <field name="name">fleet.vehicle.tree.wms</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-success">availability_status == 'available'</attribute>
                <attribute name="decoration-info">availability_status == 'assigned'</attribute>
                <attribute name="decoration-warning">availability_status == 'in_transit'</attribute>
                <attribute name="decoration-danger">availability_status == 'maintenance'</attribute>
            </xpath>
            
            <xpath expr="//field[@name='model_id']" position="after">
                <field name="vehicle_category"/>
                <field name="warehouse_id"/>
                <field name="availability_status" widget="badge"/>
                <field name="active_assignment_count"/>
            </xpath>
        </field>
    </record>
</odoo>
