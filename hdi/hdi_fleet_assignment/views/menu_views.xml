<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree view cho Fleet Assignment -->
    <record id="view_fleet_assignment_tree" model="ir.ui.view">
        <field name="name">Danh sách phân công xe</field>
        <field name="model">fleet.assignment</field>
        <field name="arch" type="xml">
            <list string="Danh sách phân công xe">
                <field name="name" string="Tên phân công"/>
                <field name="vehicle_id" string="Xe"/>
                <field name="picking_ids" string="Phiếu điều chuyển"/>
            </list>
        </field>
    </record>

    <!-- Form view cho Fleet Assignment -->
    <record id="view_fleet_assignment_form" model="ir.ui.view">
        <field name="name">Chi tiết phân công xe</field>
        <field name="model">fleet.assignment</field>
        <field name="arch" type="xml">
            <form string="Chi tiết phân công xe">
                <sheet>
                    <group>
                        <field name="name" string="Tên phân công"/>
                        <field name="vehicle_id" string="Xe"/>
                        <field name="picking_ids" string="Phiếu điều chuyển"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action để mở menu -->
    <record id="action_fleet_assign" model="ir.actions.act_window">
        <field name="name">Phân công xe</field>
        <field name="res_model">fleet.assignment</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_fleet_assignment_tree"/>
    </record>

    <!-- Menu -->
    <menuitem id="menu_fleet_assign_root"
              name="Phân công xe"
              parent="stock.menu_stock_warehouse_mgmt"
              sequence="57"
              action="action_fleet_assign"/>
</odoo>
