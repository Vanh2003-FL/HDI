<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sequence for Assignment Reference -->
    <data noupdate="1">
        <record id="seq_picking_vehicle_assign" model="ir.sequence">
            <field name="name">Vehicle Assignment</field>
            <field name="code">picking.vehicle.assign</field>
            <field name="prefix">VA/</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
    </data>

    <!-- Picking Vehicle Assignment Form -->
    <record id="view_picking_vehicle_assign_form" model="ir.ui.view">
        <field name="name">picking.vehicle.assign.form</field>
        <field name="model">picking.vehicle.assign</field>
        <field name="arch" type="xml">
            <form string="Vehicle Assignment">
                <header>
                    <button name="action_assign" string="Assign Vehicle" type="object" 
                            class="btn-primary" states="draft" icon="fa-check"/>
                    <button name="action_start_transit" string="Start Transit" type="object" 
                            class="btn-success" states="assigned" icon="fa-play"/>
                    <button name="action_complete" string="Complete" type="object" 
                            class="btn-info" states="in_transit" icon="fa-check-square"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            states="draft,assigned" icon="fa-times"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_deliveries" type="object" 
                                class="oe_stat_button" icon="fa-truck">
                            <field name="delivery_count" widget="statinfo" string="Deliveries"/>
                        </button>
                        <button name="action_view_route_map" type="object" 
                                class="oe_stat_button" icon="fa-map">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Route Map</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Vehicle &amp; Driver">
                            <field name="vehicle_id"/>
                            <field name="driver_id"/>
                            <field name="delivery_date"/>
                            <field name="sequence"/>
                        </group>
                        <group string="Route">
                            <field name="route_plan_id"/>
                            <field name="planned_distance_km"/>
                            <field name="actual_distance_km"/>
                        </group>
                    </group>
                    
                    <group string="Schedule">
                        <group>
                            <field name="planned_start_time"/>
                            <field name="planned_end_time"/>
                        </group>
                        <group>
                            <field name="actual_start_time"/>
                            <field name="actual_end_time"/>
                        </group>
                    </group>
                    
                    <group string="Load Details">
                        <group>
                            <label for="total_weight_kg"/>
                            <div class="o_row">
                                <field name="total_weight_kg"/> kg
                            </div>
                            <label for="total_volume_m3"/>
                            <div class="o_row">
                                <field name="total_volume_m3"/> mÂ³
                            </div>
                            <field name="total_pallets"/>
                        </group>
                        <group>
                            <field name="weight_utilization" widget="progressbar"/>
                            <field name="volume_utilization" widget="progressbar"/>
                        </group>
                    </group>
                    
                    <group string="Fuel">
                        <group>
                            <field name="fuel_consumed"/>
                            <field name="fuel_cost" widget="monetary"/>
                        </group>
                    </group>
                    
                    <group string="SLA" attrs="{'invisible': [('state', '!=', 'completed')]}">
                        <group>
                            <field name="is_on_time" widget="boolean_toggle"/>
                            <field name="delay_minutes" attrs="{'invisible': [('delay_minutes', '=', 0)]}"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Deliveries" name="deliveries">
                            <field name="delivery_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="partner_shipping_id"/>
                                    <field name="scheduled_date"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Assignment notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Picking Vehicle Assignment Tree -->
    <record id="view_picking_vehicle_assign_tree" model="ir.ui.view">
        <field name="name">picking.vehicle.assign.tree</field>
        <field name="model">picking.vehicle.assign</field>
        <field name="arch" type="xml">
            <tree string="Vehicle Assignments" decoration-success="state == 'completed'" 
                  decoration-info="state == 'in_transit'" decoration-warning="state == 'assigned'">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="driver_id"/>
                <field name="delivery_date"/>
                <field name="delivery_count"/>
                <field name="planned_distance_km"/>
                <field name="actual_distance_km"/>
                <field name="weight_utilization" widget="progressbar"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <!-- Picking Vehicle Assignment Action -->
    <record id="action_picking_vehicle_assign" model="ir.actions.act_window">
        <field name="name">Vehicle Assignments</field>
        <field name="res_model">picking.vehicle.assign</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
