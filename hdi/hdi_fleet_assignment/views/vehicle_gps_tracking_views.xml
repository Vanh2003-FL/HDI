<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vehicle GPS Tracking Tree -->
    <record id="view_vehicle_gps_tracking_tree" model="ir.ui.view">
        <field name="name">vehicle.gps.tracking.tree</field>
        <field name="model">vehicle.gps.tracking</field>
        <field name="arch" type="xml">
            <tree string="GPS Tracking" decoration-success="is_moving == True" 
                  decoration-muted="is_idle == True">
                <field name="vehicle_id"/>
                <field name="timestamp"/>
                <field name="latitude"/>
                <field name="longitude"/>
                <field name="speed"/>
                <field name="heading"/>
                <field name="is_moving" widget="boolean_toggle"/>
                <field name="is_idle" invisible="1"/>
                <field name="battery_level" widget="progressbar"/>
                <button name="action_view_on_map" string="View on Map" type="object" 
                        class="btn-link" icon="fa-map-marker"/>
            </tree>
        </field>
    </record>

    <!-- Vehicle GPS Tracking Form -->
    <record id="view_vehicle_gps_tracking_form" model="ir.ui.view">
        <field name="name">vehicle.gps.tracking.form</field>
        <field name="model">vehicle.gps.tracking</field>
        <field name="arch" type="xml">
            <form string="GPS Tracking">
                <sheet>
                    <group>
                        <group>
                            <field name="vehicle_id"/>
                            <field name="assignment_id"/>
                            <field name="timestamp"/>
                        </group>
                        <group>
                            <field name="is_moving" widget="boolean_toggle"/>
                            <field name="battery_level" widget="progressbar"/>
                        </group>
                    </group>
                    
                    <group string="Location">
                        <group>
                            <field name="latitude"/>
                            <field name="longitude"/>
                            <field name="altitude"/>
                        </group>
                        <group>
                            <field name="accuracy"/>
                            <field name="address"/>
                        </group>
                    </group>
                    
                    <group string="Motion">
                        <group>
                            <field name="speed"/>
                            <field name="heading"/>
                        </group>
                    </group>
                    
                    <group>
                        <button name="action_view_on_map" string="View on Google Maps" 
                                type="object" class="btn-primary" icon="fa-map-marker"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vehicle GPS Tracking Action -->
    <record id="action_vehicle_gps_tracking" model="ir.actions.act_window">
        <field name="name">GPS Tracking</field>
        <field name="res_model">vehicle.gps.tracking</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
