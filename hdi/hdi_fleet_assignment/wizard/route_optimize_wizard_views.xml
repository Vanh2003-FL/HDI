<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Route Optimize Wizard Form -->
    <record id="view_route_optimize_wizard_form" model="ir.ui.view">
        <field name="name">route.optimize.wizard.form</field>
        <field name="model">route.optimize.wizard</field>
        <field name="arch" type="xml">
            <form string="Route Optimization">
                <sheet>
                    <group>
                        <group string="Basic Info">
                            <field name="delivery_date"/>
                            <field name="warehouse_id"/>
                        </group>
                        <group string="Selection">
                            <field name="delivery_count" readonly="1"/>
                            <field name="vehicle_count" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Deliveries" name="deliveries">
                            <field name="delivery_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="partner_shipping_id"/>
                                    <field name="scheduled_date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Vehicles" name="vehicles">
                            <field name="vehicle_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="license_plate"/>
                                    <field name="vehicle_category"/>
                                    <field name="max_weight_kg"/>
                                    <field name="max_volume_m3"/>
                                    <field name="availability_status"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Optimization Settings" name="settings">
                            <group>
                                <group>
                                    <field name="optimization_method" widget="radio"/>
                                    <field name="max_stops_per_vehicle"/>
                                </group>
                                <group>
                                    <field name="max_weight_utilization"/>
                                    <field name="max_volume_utilization"/>
                                </group>
                            </group>
                            
                            <div class="alert alert-info">
                                <h4>Optimization Methods:</h4>
                                <ul>
                                    <li><strong>Nearest Neighbor:</strong> Fast greedy algorithm, good for small routes</li>
                                    <li><strong>Genetic Algorithm:</strong> Better optimization, may take longer</li>
                                    <li><strong>Manual:</strong> No automatic optimization, manual assignment</li>
                                </ul>
                            </div>
                        </page>
                        
                        <page string="Results" name="results">
                            <group>
                                <group>
                                    <field name="total_routes" readonly="1"/>
                                    <field name="total_distance" readonly="1"/>
                                </group>
                            </group>
                            
                            <field name="route_plan_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="stop_count"/>
                                    <field name="total_distance_km"/>
                                    <field name="estimated_duration_hours" widget="float_time"/>
                                    <field name="is_optimized" widget="boolean_toggle"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Run Optimization" name="action_optimize" type="object" 
                            class="btn-primary" icon="fa-magic"/>
                    <button string="Confirm Routes" name="action_confirm_routes" type="object" 
                            class="btn-success" icon="fa-check" 
                            attrs="{'invisible': [('total_routes', '=', 0)]}"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Route Optimize Wizard Action -->
    <record id="action_route_optimize_wizard" model="ir.actions.act_window">
        <field name="name">Route Optimizer</field>
        <field name="res_model">route.optimize.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
