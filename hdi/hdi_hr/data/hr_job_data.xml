<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sample Job Positions -->
        <record id="job_developer" model="hr.job">
            <field name="name">Lập trình viên</field>
            <field name="hdi_job_code">DEV</field>
            <field name="hdi_job_level">entry</field>
            <field name="department_id" ref="dept_it"/>
        </record>

        <record id="job_senior_developer" model="hr.job">
            <field name="name">Lập trình viên cao cấp</field>
            <field name="hdi_job_code">SR-DEV</field>
            <field name="hdi_job_level">senior</field>
            <field name="department_id" ref="dept_it"/>
            <field name="hdi_min_experience">3</field>
        </record>

        <record id="job_hr_staff" model="hr.job">
            <field name="name">Nhân viên Nhân sự</field>
            <field name="hdi_job_code">HR-STAFF</field>
            <field name="hdi_job_level">entry</field>
            <field name="department_id" ref="dept_hr"/>
        </record>
    </data>
</odoo>
