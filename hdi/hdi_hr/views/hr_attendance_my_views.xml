<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- My Attendance Calendar View -->
    <record id="view_hdi_my_attendance_calendar" model="ir.ui.view">
        <field name="name">hdi.my.attendance.calendar</field>
        <field name="model">hr.attendance</field>
        <field name="arch" type="xml">
            <calendar date_start="check_in" 
                      date_stop="check_out" 
                      mode="month"
                      quick_create="0"
                      create="0"
                      delete="0"
                      color="color"
                      event_open_popup="1">
                <field name="employee_id" invisible="1"/>
                <field name="check_in_date"/>
                <field name="check_out_date"/>
                <field name="worked_hours" widget="float_time"/>
                <field name="color" invisible="1"/>
            </calendar>
        </field>
    </record>
    
    <!-- My Attendance List View -->
    <record id="view_hdi_my_attendance_list" model="ir.ui.view">
        <field name="name">hdi.my.attendance.list</field>
        <field name="model">hr.attendance</field>
        <field name="arch" type="xml">
            <list string="Lịch sử chấm công của tôi" 
                  create="0" 
                  delete="0"
                  edit="0"
                  decoration-danger="hdi_is_late or hdi_is_early_leave"
                  decoration-warning="hdi_is_missing_checkout">
                <field name="check_in_date"/>
                <field name="hdi_day_of_week"/>
                <field name="check_in" widget="datetime"/>
                <field name="check_out" widget="datetime"/>
                <field name="worked_hours" widget="float_time" sum="Total Hours"/>
                <field name="hdi_is_late" column_invisible="1"/>
                <field name="hdi_is_early_leave" column_invisible="1"/>
                <field name="hdi_is_missing_checkout" column_invisible="1"/>
                <field name="color" column_invisible="1"/>
                <button name="action_create_explanation" 
                        string="Giải trình" 
                        type="object" 
                        class="btn-link"
                        icon="fa-commenting"
                        invisible="not hdi_can_explain"/>
                <field name="hdi_can_explain" column_invisible="1"/>
            </list>
        </field>
    </record>
    
    <!-- My Attendance Kanban View -->
    <record id="view_hdi_my_attendance_kanban" model="ir.ui.view">
        <field name="name">hdi.my.attendance.kanban</field>
        <field name="model">hr.attendance</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" create="0" delete="0">
                <field name="employee_id"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="worked_hours"/>
                <field name="hdi_is_late"/>
                <field name="hdi_is_early_leave"/>
                <field name="hdi_is_missing_checkout"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="check_in_date"/>
                                        <span class="ms-2 badge" 
                                              t-if="record.hdi_is_late.raw_value"
                                              t-attf-class="badge-danger">Đi muộn</span>
                                        <span class="ms-2 badge" 
                                              t-if="record.hdi_is_early_leave.raw_value"
                                              t-attf-class="badge-warning">Về sớm</span>
                                        <span class="ms-2 badge" 
                                              t-if="record.hdi_is_missing_checkout.raw_value"
                                              t-attf-class="badge-info">Thiếu checkout</span>
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-6">
                                        <span>Check-in:</span>
                                        <field name="check_in" widget="datetime"/>
                                    </div>
                                    <div class="col-6">
                                        <span>Check-out:</span>
                                        <field name="check_out" widget="datetime"/>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <strong>Giờ làm việc: </strong>
                                        <field name="worked_hours" widget="float_time"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- My Attendance Form View -->
    <record id="view_hdi_my_attendance_form" model="ir.ui.view">
        <field name="name">hdi.my.attendance.form</field>
        <field name="model">hr.attendance</field>
        <field name="arch" type="xml">
            <form string="Chi tiết chấm công" create="0" delete="0">
                <header>
                    <button name="action_create_explanation" 
                            string="Giải trình chấm công" 
                            type="object"
                            class="btn-primary"
                            invisible="not hdi_can_explain"/>
                    <field name="hdi_attendance_state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" 
                                type="object" 
                                name="action_view_explanations"
                                icon="fa-commenting"
                                invisible="not hdi_explanation_count">
                            <field name="hdi_explanation_count" widget="statinfo" string="Giải trình"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="employee_id" readonly="1"/>
                        </h1>
                        <div class="o_row">
                            <field name="check_in_date" readonly="1"/>
                            <span class="mx-2">-</span>
                            <field name="hdi_day_of_week" readonly="1"/>
                        </div>
                    </div>
                    
                    <group>
                        <group string="Thông tin Check-in">
                            <field name="check_in" widget="datetime"/>
                            <field name="hdi_check_in_status"/>
                            <field name="hdi_late_minutes" widget="float_time" 
                                   invisible="not hdi_is_late"/>
                        </group>
                        <group string="Thông tin Check-out">
                            <field name="check_out" widget="datetime"/>
                            <field name="hdi_check_out_status"/>
                            <field name="hdi_early_leave_minutes" widget="float_time"
                                   invisible="not hdi_is_early_leave"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Thống kê">
                            <field name="worked_hours" widget="float_time"/>
                            <field name="hdi_expected_hours" widget="float_time"/>
                            <field name="hdi_overtime_hours" widget="float_time"
                                   invisible="hdi_overtime_hours &lt;= 0"/>
                        </group>
                        <group string="Trạng thái">
                            <field name="hdi_is_late" widget="boolean"/>
                            <field name="hdi_is_early_leave" widget="boolean"/>
                            <field name="hdi_is_missing_checkout" widget="boolean"/>
                            <field name="hdi_can_explain" invisible="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Lịch sử giải trình" name="explanations"
                              invisible="not hdi_explanation_count">
                            <field name="hdi_explanation_ids" mode="list">
                                <list string="Giải trình" create="0" delete="0">
                                    <field name="create_date"/>
                                    <field name="hdi_reason"/>
                                    <field name="hdi_explanation_state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- My Attendance Search View -->
    <record id="view_hdi_my_attendance_search" model="ir.ui.view">
        <field name="name">hdi.my.attendance.search</field>
        <field name="model">hr.attendance</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm chấm công">
                <field name="check_in_date"/>
                <field name="check_in"/>
                <field name="check_out"/>
                
                <separator/>
                <filter name="filter_this_month" 
                        string="Tháng này"
                        domain="[('check_in_date', '&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),
                                ('check_in_date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                <filter name="filter_last_month" 
                        string="Tháng trước"
                        domain="[('check_in_date', '&gt;=', (context_today() + relativedelta(months=-1, day=1)).strftime('%Y-%m-%d')),
                                ('check_in_date', '&lt;=', (context_today() + relativedelta(months=-1, day=31)).strftime('%Y-%m-%d'))]"/>
                
                <separator/>
                <filter name="filter_late" 
                        string="Đi muộn" 
                        domain="[('hdi_is_late', '=', True)]"/>
                <filter name="filter_early_leave" 
                        string="Về sớm" 
                        domain="[('hdi_is_early_leave', '=', True)]"/>
                <filter name="filter_missing_checkout" 
                        string="Thiếu checkout" 
                        domain="[('hdi_is_missing_checkout', '=', True)]"/>
                
                <separator/>
                <filter name="filter_weekday" 
                        string="Ngày thường"
                        domain="[('hdi_day_of_week', 'not in', ['Thứ 7', 'Chủ nhật'])]"/>
                <filter name="filter_weekend" 
                        string="Cuối tuần"
                        domain="[('hdi_day_of_week', 'in', ['Thứ 7', 'Chủ nhật'])]"/>
                
                <group expand="0" string="Nhóm theo">
                    <filter name="group_by_month" 
                            string="Tháng" 
                            context="{'group_by': 'check_in_date:month'}"/>
                    <filter name="group_by_week" 
                            string="Tuần" 
                            context="{'group_by': 'check_in_date:week'}"/>
                    <filter name="group_by_day" 
                            string="Ngày" 
                            context="{'group_by': 'check_in_date'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- My Attendance Action -->
    <record id="action_hdi_my_attendance" model="ir.actions.act_window">
        <field name="name">Chấm công của tôi</field>
        <field name="res_model">hr.attendance</field>
        <field name="view_mode">calendar,list,kanban,form</field>
        <field name="domain">[('employee_id.user_id', '=', uid)]</field>
        <field name="context">{
            'default_employee_id': employee_id,
            'search_default_filter_this_month': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Chưa có bản ghi chấm công nào!
            </p>
            <p>
                Bấm nút "Check In" trên thanh menu để bắt đầu chấm công.
            </p>
        </field>
    </record>

</odoo>
