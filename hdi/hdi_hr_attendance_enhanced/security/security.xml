<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Security Groups -->
    <record id="group_attendance_officer" model="res.groups">
        <field name="name">Attendance Officer</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="implied_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
    </record>
    
    <record id="group_attendance_admin" model="res.groups">
        <field name="name">Attendance Administrator</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="implied_ids" eval="[(4, ref('group_attendance_officer'))]"/>
    </record>
    
    <!-- Record Rules -->
    <record id="hr_attendance_log_user_rule" model="ir.rule">
        <field name="name">Employee can see own attendance logs</field>
        <field name="model_id" ref="model_hr_attendance_log"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
    
    <record id="hr_attendance_log_officer_rule" model="ir.rule">
        <field name="name">HR Officer can see all attendance logs</field>
        <field name="model_id" ref="model_hr_attendance_log"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
    </record>

</odoo>
