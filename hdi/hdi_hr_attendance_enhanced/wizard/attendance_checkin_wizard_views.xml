<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_attendance_checkin_wizard_form" model="ir.ui.view">
        <field name="name">attendance.checkin.wizard.form</field>
        <field name="model">attendance.checkin.wizard</field>
        <field name="arch" type="xml">
            <form string="Chấm công Manual">
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="work_location_id"/>
                    </group>
                    <group string="GPS (Optional)">
                        <field name="latitude"/>
                        <field name="longitude"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Check In" name="action_check_in" type="object" class="btn-primary"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
