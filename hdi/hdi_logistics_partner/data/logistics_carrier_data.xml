<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sequence for Tracking Number -->
    <record id="seq_logistics_tracking" model="ir.sequence">
        <field name="name">Logistics Tracking</field>
        <field name="code">logistics.tracking</field>
        <field name="prefix">TRACK/</field>
        <field name="padding">5</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>

    <!-- Default Carriers -->
    <record id="carrier_viettel_post" model="logistics.partner">
        <field name="name">Viettel Post</field>
        <field name="code">VTP</field>
        <field name="partner_type">viettel_post</field>
        <field name="api_url">https://partner.viettelpost.vn/v2</field>
        <field name="api_key">YOUR_API_KEY</field>
        <field name="api_token">YOUR_TOKEN</field>
        <field name="support_cod" eval="True"/>
        <field name="support_tracking" eval="True"/>
        <field name="support_label_print" eval="True"/>
        <field name="state">draft</field>
        <field name="sequence">10</field>
    </record>

    <record id="carrier_ghn" model="logistics.partner">
        <field name="name">Giao HÃ ng Nhanh (GHN)</field>
        <field name="code">GHN</field>
        <field name="partner_type">ghn</field>
        <field name="api_url">https://online-gateway.ghn.vn</field>
        <field name="api_token">YOUR_TOKEN</field>
        <field name="shop_id">YOUR_SHOP_ID</field>
        <field name="support_cod" eval="True"/>
        <field name="support_tracking" eval="True"/>
        <field name="support_label_print" eval="True"/>
        <field name="support_bulk_create" eval="True"/>
        <field name="state">draft</field>
        <field name="sequence">20</field>
    </record>

    <record id="carrier_jnt" model="logistics.partner">
        <field name="name">J&amp;T Express</field>
        <field name="code">JNT</field>
        <field name="partner_type">jnt</field>
        <field name="api_url">https://api.jtexpress.vn</field>
        <field name="api_key">YOUR_API_KEY</field>
        <field name="client_code">YOUR_CLIENT_CODE</field>
        <field name="support_cod" eval="True"/>
        <field name="support_tracking" eval="True"/>
        <field name="support_label_print" eval="True"/>
        <field name="state">draft</field>
        <field name="sequence">30</field>
    </record>

    <record id="carrier_ninja_van" model="logistics.partner">
        <field name="name">Ninja Van</field>
        <field name="code">NV</field>
        <field name="partner_type">ninja_van</field>
        <field name="api_url">https://api.ninjavan.co/vn</field>
        <field name="api_token">YOUR_TOKEN</field>
        <field name="support_cod" eval="True"/>
        <field name="support_tracking" eval="True"/>
        <field name="support_label_print" eval="True"/>
        <field name="state">draft</field>
        <field name="sequence">40</field>
    </record>

    <!-- Default Rate Tables (Example) -->
    <record id="rate_ghn_standard_0_1kg" model="logistics.rate">
        <field name="partner_id" ref="carrier_ghn"/>
        <field name="service_type">standard</field>
        <field name="weight_from">0</field>
        <field name="weight_to">1</field>
        <field name="base_rate">20000</field>
        <field name="per_kg_rate">5000</field>
        <field name="fuel_surcharge_percent">5</field>
        <field name="cod_fee_percent">2</field>
        <field name="is_default" eval="True"/>
    </record>

    <record id="rate_ghn_express_0_1kg" model="logistics.rate">
        <field name="partner_id" ref="carrier_ghn"/>
        <field name="service_type">express</field>
        <field name="weight_from">0</field>
        <field name="weight_to">1</field>
        <field name="base_rate">30000</field>
        <field name="per_kg_rate">7000</field>
        <field name="fuel_surcharge_percent">5</field>
        <field name="cod_fee_percent">2</field>
    </record>
</odoo>
