<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Logistics Partner Form -->
    <record id="view_logistics_partner_form" model="ir.ui.view">
        <field name="name">logistics.partner.form</field>
        <field name="model">logistics.partner</field>
        <field name="arch" type="xml">
            <form string="Logistics Partner">
                <header>
                    <button name="action_test_connection" string="Test API" type="object" 
                            class="btn-primary" states="draft" icon="fa-plug"/>
                    <button name="action_activate" string="Activate" type="object" 
                            class="btn-success" states="test" icon="fa-check"/>
                    <button name="action_suspend" string="Suspend" type="object" 
                            class="btn-warning" states="active" icon="fa-pause"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,test,active"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_shipments" type="object" class="oe_stat_button" 
                                icon="fa-truck">
                            <field name="shipment_count" widget="statinfo" string="Shipments"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="code" class="text-break" placeholder="e.g., GHN"/>
                        </h1>
                        <h2>
                            <field name="name" placeholder="e.g., Giao HÃ ng Nhanh"/>
                        </h2>
                    </div>
                    
                    <group>
                        <group string="Basic Info">
                            <field name="partner_type"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group string="Statistics">
                            <field name="total_revenue" widget="monetary"/>
                            <field name="average_delivery_time" widget="float_time"/>
                            <field name="on_time_rate" widget="percentage"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="API Configuration" name="api_config">
                            <group>
                                <group>
                                    <field name="api_url"/>
                                    <field name="api_key" password="True"/>
                                    <field name="api_secret" password="True"/>
                                </group>
                                <group>
                                    <field name="api_token" password="True"/>
                                    <field name="shop_id"/>
                                    <field name="client_code"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Features" name="features">
                            <group>
                                <field name="support_cod"/>
                                <field name="support_tracking"/>
                                <field name="support_label_print"/>
                                <field name="support_bulk_create"/>
                            </group>
                        </page>
                        
                        <page string="Services" name="services">
                            <field name="service_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="service_type"/>
                                    <field name="estimated_days"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Rate Tables" name="rates">
                            <field name="rate_ids">
                                <tree>
                                    <field name="service_type"/>
                                    <field name="weight_from"/>
                                    <field name="weight_to"/>
                                    <field name="base_rate"/>
                                    <field name="per_kg_rate"/>
                                    <field name="is_default"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Contact" name="contact">
                            <group>
                                <field name="contact_person"/>
                                <field name="contact_phone" widget="phone"/>
                                <field name="contact_email" widget="email"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Logistics Partner Tree -->
    <record id="view_logistics_partner_tree" model="ir.ui.view">
        <field name="name">logistics.partner.tree</field>
        <field name="model">logistics.partner</field>
        <field name="arch" type="xml">
            <tree string="Logistics Partners">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="partner_type"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'active'" 
                       decoration-info="state == 'test'"
                       decoration-muted="state == 'draft'"/>
                <field name="shipment_count"/>
                <field name="on_time_rate" widget="progressbar"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Logistics Partner Action -->
    <record id="action_logistics_partner" model="ir.actions.act_window">
        <field name="name">3PL Carriers</field>
        <field name="res_model">logistics.partner</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
