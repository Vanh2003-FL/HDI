<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Logistics Rate Form -->
    <record id="view_logistics_rate_form" model="ir.ui.view">
        <field name="name">logistics.rate.form</field>
        <field name="model">logistics.rate</field>
        <field name="arch" type="xml">
            <form string="Rate Configuration">
                <sheet>
                    <group>
                        <group string="Basic Info">
                            <field name="partner_id"/>
                            <field name="service_type"/>
                            <field name="is_default"/>
                            <field name="active"/>
                        </group>
                        <group string="Weight Range">
                            <field name="weight_from"/>
                            <field name="weight_to"/>
                        </group>
                    </group>
                    
                    <group string="Zones">
                        <group>
                            <field name="from_zone_id"/>
                        </group>
                        <group>
                            <field name="to_zone_id"/>
                        </group>
                    </group>
                    
                    <group string="Pricing">
                        <group>
                            <field name="base_rate" widget="monetary"/>
                            <field name="per_kg_rate" widget="monetary"/>
                        </group>
                        <group>
                            <field name="fuel_surcharge_percent"/>
                            <field name="remote_area_fee" widget="monetary"/>
                            <field name="cod_fee_percent"/>
                        </group>
                    </group>
                    
                    <group string="Validity">
                        <group>
                            <field name="valid_from"/>
                        </group>
                        <group>
                            <field name="valid_to"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Logistics Rate Tree -->
    <record id="view_logistics_rate_tree" model="ir.ui.view">
        <field name="name">logistics.rate.tree</field>
        <field name="model">logistics.rate</field>
        <field name="arch" type="xml">
            <tree string="Rate Tables" editable="bottom">
                <field name="partner_id"/>
                <field name="service_type"/>
                <field name="weight_from"/>
                <field name="weight_to"/>
                <field name="base_rate" widget="monetary"/>
                <field name="per_kg_rate" widget="monetary"/>
                <field name="fuel_surcharge_percent"/>
                <field name="is_default"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Logistics Rate Action -->
    <record id="action_logistics_rate" model="ir.actions.act_window">
        <field name="name">Rate Tables</field>
        <field name="res_model">logistics.rate</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
