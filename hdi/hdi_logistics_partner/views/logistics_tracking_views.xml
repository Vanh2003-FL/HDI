<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Logistics Tracking Form -->
    <record id="view_logistics_tracking_form" model="ir.ui.view">
        <field name="name">logistics.tracking.form</field>
        <field name="model">logistics.tracking</field>
        <field name="arch" type="xml">
            <form string="Shipment Tracking">
                <header>
                    <button name="action_create_shipment" string="Create with Carrier" 
                            type="object" class="btn-primary" states="draft" icon="fa-send"/>
                    <button name="action_update_tracking" string="Update Status" type="object" 
                            class="btn-info" icon="fa-refresh"/>
                    <button name="action_print_label" string="Print Label" type="object" 
                            class="btn-secondary" icon="fa-print"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <h2>
                            <field name="carrier_tracking_ref" readonly="1" placeholder="Tracking Number"/>
                        </h2>
                    </div>
                    
                    <group>
                        <group string="Shipment Info">
                            <field name="delivery_id"/>
                            <field name="sale_order_id"/>
                            <field name="partner_id"/>
                            <field name="service_type"/>
                        </group>
                        <group string="Dates">
                            <field name="created_date"/>
                            <field name="shipped_date"/>
                            <field name="estimated_delivery_date"/>
                            <field name="delivered_date"/>
                        </group>
                    </group>
                    
                    <group string="Package Details">
                        <group>
                            <label for="weight"/>
                            <div class="o_row">
                                <field name="weight"/> kg
                            </div>
                            <field name="volumetric_weight"/>
                            <field name="chargeable_weight"/>
                        </group>
                        <group>
                            <label for="length"/>
                            <div class="o_row">
                                <field name="length"/> x 
                                <field name="width"/> x 
                                <field name="height"/> cm
                            </div>
                        </group>
                    </group>
                    
                    <group string="COD">
                        <group>
                            <field name="is_cod"/>
                            <field name="cod_amount" attrs="{'invisible': [('is_cod', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="cod_collected" attrs="{'invisible': [('is_cod', '=', False)]}"/>
                            <field name="cod_remitted" attrs="{'invisible': [('is_cod', '=', False)]}"/>
                        </group>
                    </group>
                    
                    <group string="Costs">
                        <group>
                            <field name="shipping_cost" widget="monetary"/>
                            <field name="cod_fee" widget="monetary"/>
                            <field name="fuel_surcharge" widget="monetary"/>
                        </group>
                        <group>
                            <field name="total_cost" widget="monetary" class="oe_subtotal_footer_separator"/>
                        </group>
                    </group>
                    
                    <group string="SLA">
                        <group>
                            <field name="sla_days"/>
                            <field name="is_on_time" widget="boolean_toggle"/>
                            <field name="is_late" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="delay_days" attrs="{'invisible': [('delay_days', '=', 0)]}"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Tracking Events" name="events">
                            <field name="event_ids">
                                <tree>
                                    <field name="event_time"/>
                                    <field name="event_type" widget="badge"/>
                                    <field name="event_description"/>
                                    <field name="location"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="POD" name="pod">
                            <group>
                                <group>
                                    <field name="pod_receiver_name"/>
                                    <field name="pod_signature" widget="image"/>
                                </group>
                                <group>
                                    <field name="pod_photo" widget="image"/>
                                    <field name="pod_notes"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Logistics Tracking Tree -->
    <record id="view_logistics_tracking_tree" model="ir.ui.view">
        <field name="name">logistics.tracking.tree</field>
        <field name="model">logistics.tracking</field>
        <field name="arch" type="xml">
            <tree string="Shipment Tracking" decoration-success="state == 'delivered'" 
                  decoration-danger="is_late == True" decoration-info="state == 'in_transit'">
                <field name="name"/>
                <field name="carrier_tracking_ref"/>
                <field name="delivery_id"/>
                <field name="partner_id"/>
                <field name="service_type"/>
                <field name="weight"/>
                <field name="state" widget="badge"/>
                <field name="shipped_date"/>
                <field name="estimated_delivery_date"/>
                <field name="delivered_date"/>
                <field name="is_on_time" invisible="1"/>
                <field name="is_late" invisible="1"/>
                <field name="total_cost" sum="Total"/>
            </tree>
        </field>
    </record>

    <!-- Logistics Tracking Action -->
    <record id="action_logistics_tracking" model="ir.actions.act_window">
        <field name="name">Shipment Tracking</field>
        <field name="res_model">logistics.tracking</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
