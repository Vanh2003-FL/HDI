<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit WMS Delivery Form -->
    <record id="view_wms_delivery_form_3pl" model="ir.ui.view">
        <field name="name">wms.delivery.form.3pl</field>
        <field name="model">wms.delivery</field>
        <field name="inherit_id" ref="wms_delivery.view_wms_delivery_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_create_shipment" string="Create 3PL Shipment" 
                        type="object" class="btn-success" icon="fa-truck"
                        attrs="{'invisible': [('use_3pl', '=', False)]}"/>
                <button name="action_view_tracking" string="View Tracking" 
                        type="object" class="btn-info" icon="fa-map-marker"
                        attrs="{'invisible': [('tracking_id', '=', False)]}"/>
            </xpath>
            
            <xpath expr="//group[@name='general_info']" position="after">
                <group string="3PL Integration" name="3pl_info">
                    <group>
                        <field name="use_3pl"/>
                        <field name="logistics_partner_id" attrs="{'invisible': [('use_3pl', '=', False)]}"/>
                        <field name="service_type" attrs="{'invisible': [('use_3pl', '=', False)]}"/>
                    </group>
                    <group>
                        <field name="carrier_tracking_ref" readonly="1"/>
                        <field name="tracking_state" widget="badge" readonly="1"/>
                        <field name="estimated_shipping_cost" widget="monetary"/>
                        <field name="actual_shipping_cost" widget="monetary" readonly="1"/>
                    </group>
                </group>
                
                <group string="COD" name="cod_info" attrs="{'invisible': [('use_3pl', '=', False)]}">
                    <group>
                        <field name="is_cod"/>
                        <field name="cod_amount" attrs="{'invisible': [('is_cod', '=', False)]}"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
