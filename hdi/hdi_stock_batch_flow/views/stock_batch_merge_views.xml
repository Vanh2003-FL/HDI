<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Stock Batch Merge List View -->
    <record id="view_stock_batch_merge_tree" model="ir.ui.view">
        <field name="name">stock.batch.merge.tree</field>
        <field name="model">stock.batch.merge</field>
        <field name="arch" type="xml">
            <list string="Batch Merge Operations" decoration-info="state == 'draft'" decoration-success="state == 'done'" decoration-muted="state == 'cancel'">
                <field name="name"/>
                <field name="date"/>
                <field name="product_id"/>
                <field name="warehouse_id"/>
                <field name="merge_type"/>
                <field name="source_count"/>
                <field name="total_source_quantity" sum="Total"/>
                <field name="target_batch_id"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'confirmed'" decoration-success="state == 'done'"/>
                <field name="user_id" widget="many2one_avatar_user"/>
            </list>
        </field>
    </record>

    <!-- Stock Batch Merge Form View -->
    <record id="view_stock_batch_merge_form" model="ir.ui.view">
        <field name="name">stock.batch.merge.form</field>
        <field name="model">stock.batch.merge</field>
        <field name="arch" type="xml">
            <form string="Batch Merge">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_execute" string="Execute Merge" type="object" class="oe_highlight" invisible="state != 'confirmed'"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state in ['done', 'cancel']"/>
                    <button name="action_draft" string="Set to Draft" type="object" invisible="state != 'cancel'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_target_batch" type="object" class="oe_stat_button" icon="fa-cube" invisible="state != 'done'">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Target</span>
                                <span class="o_stat_text">Batch</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group name="product_info">
                            <field name="product_id"/>
                            <field name="warehouse_id"/>
                            <field name="location_id"/>
                        </group>
                        <group name="operation_info">
                            <field name="date"/>
                            <field name="merge_type"/>
                            <field name="user_id" widget="many2one_avatar_user"/>
                        </group>
                    </group>
                    <group name="reason">
                        <field name="reason" placeholder="Reason for merging batches..."/>
                    </group>
                    <notebook>
                        <page string="Source Batches" name="source_batches">
                            <field name="source_batch_ids">
                                <list editable="bottom" decoration-success="state == 'done'">
                                    <field name="sequence" widget="handle"/>
                                    <field name="source_batch_id"/>
                                    <field name="available_quantity"/>
                                    <field name="quantity" sum="Total"/>
                                    <field name="product_id" column_invisible="1"/>
                                    <field name="state" column_invisible="1"/>
                                    <field name="note"/>
                                </list>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_source_quantity"/>
                            </group>
                        </page>
                        <page string="Target Batch" name="target_batch">
                            <group>
                                <group>
                                    <field name="create_new_target"/>
                                    <field name="new_target_name" invisible="not create_new_target"/>
                                    <field name="target_batch_id" invisible="create_new_target"/>
                                </group>
                                <group>
                                    <field name="target_quantity_before"/>
                                    <field name="target_quantity_after"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="note" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Stock Batch Merge Search View -->
    <record id="view_stock_batch_merge_search" model="ir.ui.view">
        <field name="name">stock.batch.merge.search</field>
        <field name="model">stock.batch.merge</field>
        <field name="arch" type="xml">
            <search string="Batch Merge">
                <field name="name"/>
                <field name="product_id"/>
                <field name="target_batch_id"/>
                <field name="warehouse_id"/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="confirmed" string="Confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter name="done" string="Done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter name="my_operations" string="My Operations" domain="[('user_id', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_warehouse" string="Warehouse" context="{'group_by': 'warehouse_id'}"/>
                    <filter name="group_product" string="Product" context="{'group_by': 'product_id'}"/>
                    <filter name="group_type" string="Merge Type" context="{'group_by': 'merge_type'}"/>
                    <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                    <filter name="group_date" string="Date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Stock Batch Merge Action -->
    <record id="action_stock_batch_merge" model="ir.actions.act_window">
        <field name="name">Batch Merge Operations</field>
        <field name="res_model">stock.batch.merge</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Batch Merge Operation
            </p>
            <p>
                Merge multiple small batches/remnants into a single consolidated batch.
            </p>
        </field>
    </record>
</odoo>
