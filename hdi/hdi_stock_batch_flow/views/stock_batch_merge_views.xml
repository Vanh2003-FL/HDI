<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_stock_batch_merge_tree" model="ir.ui.view">
        <field name="name">stock.batch.merge.tree</field>
        <field name="model">stock.batch.merge</field>
        <field name="arch" type="xml">
            <tree string="Batch Merge">
                <field name="name"/>
                <field name="date"/>
                <field name="product_id"/>
                <field name="total_quantity"/>
                <field name="target_lot_id"/>
                <field name="location_id"/>
                <field name="state" widget="badge" decoration-success="state == 'done'" decoration-info="state == 'confirmed'" decoration-muted="state == 'cancel'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_stock_batch_merge_form" model="ir.ui.view">
        <field name="name">stock.batch.merge.form</field>
        <field name="model">stock.batch.merge</field>
        <field name="arch" type="xml">
            <form string="Batch Merge">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_done" string="Process Merge" type="object" class="oe_highlight" invisible="state != 'confirmed'"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state in ['done', 'cancel']"/>
                    <button name="action_draft" string="Reset to Draft" type="object" invisible="state != 'cancel'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_id" readonly="state != 'draft'"/>
                            <field name="location_id" readonly="state != 'draft'"/>
                            <field name="source_lot_ids" widget="many2many_tags" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="date" readonly="state != 'draft'"/>
                            <field name="target_lot_id" readonly="state != 'draft'" domain="[('product_id', '=', product_id)]"/>
                            <field name="target_lot_name" readonly="state != 'draft'" placeholder="Or enter new lot name"/>
                            <field name="total_quantity"/>
                            <field name="uom_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Merge Lines">
                            <field name="merge_line_ids" readonly="state != 'draft'">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="source_lot_id" domain="[('product_id', '=', parent.product_id)]"/>
                                    <field name="quantity"/>
                                    <field name="available_quantity" readonly="1"/>
                                    <field name="notes"/>
                                    <field name="product_id" column_invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_stock_batch_merge" model="ir.actions.act_window">
        <field name="name">Batch Merge</field>
        <field name="res_model">stock.batch.merge</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new batch merge
            </p>
            <p>
                Merge multiple small batches into one large batch.
            </p>
        </field>
    </record>
</odoo>
