<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Stock Batch Split List View -->
    <record id="view_stock_batch_split_tree" model="ir.ui.view">
        <field name="name">stock.batch.split.tree</field>
        <field name="model">stock.batch.split</field>
        <field name="arch" type="xml">
            <list string="Batch Split Operations" decoration-info="state == 'draft'" decoration-success="state == 'done'" decoration-muted="state == 'cancel'">
                <field name="name"/>
                <field name="date"/>
                <field name="parent_batch_id"/>
                <field name="product_id"/>
                <field name="warehouse_id"/>
                <field name="split_type"/>
                <field name="child_count"/>
                <field name="total_child_quantity" sum="Total"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'confirmed'" decoration-success="state == 'done'"/>
                <field name="user_id" widget="many2one_avatar_user"/>
            </list>
        </field>
    </record>

    <!-- Stock Batch Split Form View -->
    <record id="view_stock_batch_split_form" model="ir.ui.view">
        <field name="name">stock.batch.split.form</field>
        <field name="model">stock.batch.split</field>
        <field name="arch" type="xml">
            <form string="Batch Split">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_execute" string="Execute Split" type="object" class="oe_highlight" invisible="state != 'confirmed'"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state in ['done', 'cancel']"/>
                    <button name="action_draft" string="Set to Draft" type="object" invisible="state != 'cancel'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_child_batches" type="object" class="oe_stat_button" icon="fa-cubes" invisible="state != 'done'">
                            <field name="child_count" widget="statinfo" string="Child Batches"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group name="parent_info">
                            <field name="parent_batch_id"/>
                            <field name="product_id"/>
                            <field name="parent_quantity"/>
                        </group>
                        <group name="operation_info">
                            <field name="warehouse_id"/>
                            <field name="location_id"/>
                            <field name="date"/>
                            <field name="split_type"/>
                            <field name="user_id" widget="many2one_avatar_user"/>
                        </group>
                    </group>
                    <group name="reason">
                        <field name="reason" placeholder="Reason for splitting this batch..."/>
                    </group>
                    <notebook>
                        <page string="Child Batches" name="child_batches">
                            <field name="child_batch_ids">
                                <list editable="bottom" decoration-success="state == 'done'">
                                    <field name="sequence" widget="handle"/>
                                    <field name="new_lot_name"/>
                                    <field name="quantity" sum="Total"/>
                                    <field name="qr_code" widget="image" width="50"/>
                                    <field name="state" column_invisible="1"/>
                                    <field name="new_lot_id" readonly="1" optional="show"/>
                                    <field name="note"/>
                                </list>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_child_quantity"/>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="note" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Stock Batch Split Search View -->
    <record id="view_stock_batch_split_search" model="ir.ui.view">
        <field name="name">stock.batch.split.search</field>
        <field name="model">stock.batch.split</field>
        <field name="arch" type="xml">
            <search string="Batch Split">
                <field name="name"/>
                <field name="parent_batch_id"/>
                <field name="product_id"/>
                <field name="warehouse_id"/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="confirmed" string="Confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter name="done" string="Done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter name="my_operations" string="My Operations" domain="[('user_id', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_warehouse" string="Warehouse" context="{'group_by': 'warehouse_id'}"/>
                    <filter name="group_product" string="Product" context="{'group_by': 'product_id'}"/>
                    <filter name="group_type" string="Split Type" context="{'group_by': 'split_type'}"/>
                    <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                    <filter name="group_date" string="Date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Stock Batch Split Action -->
    <record id="action_stock_batch_split" model="ir.actions.act_window">
        <field name="name">Batch Split Operations</field>
        <field name="res_model">stock.batch.split</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Batch Split Operation
            </p>
            <p>
                Split a large batch/lot into multiple smaller batches for better inventory control.
            </p>
        </field>
    </record>
</odoo>
