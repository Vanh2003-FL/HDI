<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_batch_merge_wizard_form" model="ir.ui.view">
        <field name="name">batch.merge.wizard.form</field>
        <field name="model">batch.merge.wizard</field>
        <field name="arch" type="xml">
            <form string="Quick Batch Merge">
                <group>
                    <group>
                        <field name="product_id"/>
                        <field name="warehouse_id"/>
                        <field name="location_id"/>
                    </group>
                    <group>
                        <field name="source_batch_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="create_new_target"/>
                        <field name="new_target_name" invisible="not create_new_target"/>
                        <field name="target_batch_id" invisible="create_new_target"/>
                    </group>
                    <group>
                        <field name="reason"/>
                    </group>
                </group>
                <footer>
                    <button name="action_create_merge" string="Create Merge" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_batch_merge_wizard" model="ir.actions.act_window">
        <field name="name">Quick Batch Merge</field>
        <field name="res_model">batch.merge.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
