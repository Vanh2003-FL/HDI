<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_picking_picklist_tree" model="ir.ui.view">
        <field name="name">picking.picklist.tree</field>
        <field name="model">picking.picklist</field>
        <field name="arch" type="xml">
            <list string="Danh sách lệnh lấy hàng" 
                  decoration-info="state == 'draft'" 
                  decoration-warning="state == 'assigned'"
                  decoration-primary="state == 'in_progress'"
                  decoration-success="state == 'done'">
                <field name="name" string="Mã lệnh"/>
                <field name="picking_id" string="Phiếu xuất kho"/>
                <field name="picker_id" string="Nhân viên"/>
                <field name="picklist_date" string="Ngày tạo"/>
                <field name="total_lines" string="Số dòng" sum="Total"/>
                <field name="picked_lines" string="Đã lấy" sum="Total"/>
                <field name="progress" string="Tiến độ" widget="progressbar"/>
                <field name="state" string="Trạng thái" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'assigned'"
                       decoration-primary="state == 'in_progress'"
                       decoration-success="state == 'done'"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_picking_picklist_form" model="ir.ui.view">
        <field name="name">picking.picklist.form</field>
        <field name="model">picking.picklist</field>
        <field name="arch" type="xml">
            <form string="Lệnh lấy hàng">
                <header>
                    <button name="action_assign_picker" string="Phân công nhân viên" 
                            type="object" class="oe_highlight" 
                            invisible="state != 'draft'"/>
                    <button name="action_start_picking" string="Bắt đầu lấy hàng" 
                            type="object" class="oe_highlight" 
                            invisible="state != 'assigned'"/>
                    <button name="action_validate" string="Hoàn thành" 
                            type="object" class="oe_highlight" 
                            invisible="state != 'in_progress'"/>
                    <button name="action_cancel" string="Hủy" 
                            type="object" 
                            invisible="state in ['done', 'cancel']"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,assigned,in_progress,done"
                           options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" 
                                name="action_view_picking" icon="fa-truck">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Phiếu xuất kho</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Thông tin cơ bản">
                            <field name="picking_id" string="Phiếu xuất kho"/>
                            <field name="picker_id" string="Nhân viên lấy hàng"/>
                            <field name="picklist_date" string="Ngày lệnh"/>
                            <field name="company_id" string="Công ty" groups="base.group_multi_company"/>
                        </group>
                        <group string="Tiến độ">
                            <field name="total_lines" string="Tổng số dòng"/>
                            <field name="picked_lines" string="Đã lấy"/>
                            <field name="progress" string="Hoàn thành (%)" widget="progressbar"/>
                            <field name="staging_location_id" string="Vị trí tập kết"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Chi tiết lấy hàng" name="lines">
                            <field name="line_ids">
                                <list editable="bottom" decoration-success="is_picked == True">
                                    <field name="sequence" string="STT" widget="handle"/>
                                    <field name="product_id" string="Sản phẩm"/>
                                    <field name="location_id" string="Vị trí lấy hàng"/>
                                    <field name="lot_id" string="Batch/Lô"
                                           invisible="parent.state == 'draft'"
                                           domain="[('product_id', '=', product_id), ('product_qty', '>', 0)]"/>
                                    <field name="qty_ordered" string="SL yêu cầu"/>
                                    <field name="picked_qty" string="SL đã lấy"/>
                                    <field name="uom_id" string="ĐVT" optional="show"/>
                                    <field name="is_picked" string="Đã lấy" widget="boolean_toggle"/>
                                </list>
                            </field>
                        </page>
                        <page string="Ghi chú" name="notes">
                            <field name="notes" placeholder="Ghi chú cho Picker..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_picking_picklist" model="ir.actions.act_window">
        <field name="name">Lệnh lấy hàng</field>
        <field name="res_model">picking.picklist</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_in_progress': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo lệnh lấy hàng mới
            </p>
            <p>
                Lệnh lấy hàng (Picklist) giúp nhân viên kho biết cần lấy sản phẩm nào, ở vị trí nào để chuẩn bị xuất kho.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_picking_picklist"
        name="Lệnh lấy hàng (Picklist)"
        parent="hdi_wms_operation.menu_dispatch_operations"
        action="action_picking_picklist"
        sequence="20"/>
</odoo>
