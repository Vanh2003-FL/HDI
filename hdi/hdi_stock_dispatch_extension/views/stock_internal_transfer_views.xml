<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Gộp vào menu WMS Operations -->
    <!-- <menuitem id="menu_dispatch_root"
        name="Quản lý xuất kho"
        parent="stock.menu_stock_warehouse_mgmt"
        sequence="53"/> -->

    <record id="view_stock_internal_transfer_tree" model="ir.ui.view">
        <field name="name">Danh sách điều chuyển nội bộ</field>
        <field name="model">stock.internal.transfer</field>
        <field name="arch" type="xml">
            <list string="Danh sách điều chuyển nội bộ" decoration-info="state == 'waiting'" decoration-warning="state == 'in_progress'" decoration-success="state == 'approved'">
                <field name="name" string="Mã phiếu"/>
                <field name="transfer_date" string="Ngày điều chuyển"/>
                <field name="product_id" string="Sản phẩm"/>
                <field name="location_src_id" string="Vị trí nguồn"/>
                <field name="location_dest_id" string="Vị trí đích"/>
                <field name="quantity" string="Số lượng"/>
                <field name="assigned_user_id" string="Nhân viên thực hiện"/>
                <field name="state" string="Trạng thái" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="view_stock_internal_transfer_form" model="ir.ui.view">
        <field name="name">Chi tiết điều chuyển nội bộ</field>
        <field name="model">stock.internal.transfer</field>
        <field name="arch" type="xml">
            <form string="Chi tiết điều chuyển nội bộ">
                <header>
                    <button name="action_assign" string="Phân công" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_start" string="Bắt đầu điều chuyển" type="object" class="oe_highlight" invisible="state != 'waiting'"/>
                    <button name="action_verify_stock" string="Kiểm tra tồn kho" type="object" invisible="state != 'in_progress'"/>
                    <button name="action_complete" string="Hoàn thành" type="object" class="oe_highlight" invisible="state != 'in_progress' or not stock_verified"/>
                    <button name="action_approve" string="Duyệt" type="object" class="oe_highlight" invisible="state != 'done'"/>
                    <button name="action_cancel" string="Huỷ" type="object" invisible="state in ['approved', 'cancel']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,waiting,in_progress,done,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_id" string="Sản phẩm"/>
                            <field name="transfer_type" string="Loại điều chuyển"/>
                            <field name="lot_id" string="Batch/Lot" invisible="transfer_type != 'batch'"/>
                            <field name="barcode_item_ids" string="Mã vạch" widget="many2many_tags" invisible="transfer_type != 'barcode'"/>
                            <field name="quantity" string="Số lượng"/>
                        </group>
                        <group>
                            <field name="location_src_id" string="Vị trí nguồn"/>
                            <field name="suggested_location_id" string="Vị trí đề xuất" readonly="1"/>
                            <field name="location_dest_id" string="Vị trí đích"/>
                            <field name="assigned_user_id" string="Nhân viên thực hiện"/>
                            <field name="transfer_date" string="Ngày điều chuyển"/>
                            <field name="completion_date" string="Ngày hoàn thành" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="stock_verified" string="Đã kiểm tra tồn kho"/>
                        <field name="notes" string="Ghi chú" placeholder="Ghi chú điều chuyển..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_stock_internal_transfer" model="ir.actions.act_window">
        <field name="name">Danh sách điều chuyển nội bộ</field>
        <field name="res_model">stock.internal.transfer</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Gộp vào menu Xuất kho -->
    <menuitem id="menu_internal_transfer"
        name="Danh sách điều chuyển nội bộ"
        parent="hdi_wms_operation.menu_dispatch_operations"
        action="action_stock_internal_transfer"
        sequence="20"/>
</odoo>
