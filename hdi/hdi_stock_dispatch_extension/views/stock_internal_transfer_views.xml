<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_internal_transfer_tree" model="ir.ui.view">
        <field name="name">stock.internal.transfer.tree</field>
        <field name="model">stock.internal.transfer</field>
        <field name="arch" type="xml">
            <list string="Internal Transfers" decoration-info="state == 'waiting'" decoration-warning="state == 'in_progress'" decoration-success="state == 'approved'">
                <field name="name"/>
                <field name="transfer_date"/>
                <field name="product_id"/>
                <field name="location_src_id"/>
                <field name="location_dest_id"/>
                <field name="quantity"/>
                <field name="assigned_user_id"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="view_stock_internal_transfer_form" model="ir.ui.view">
        <field name="name">stock.internal.transfer.form</field>
        <field name="model">stock.internal.transfer</field>
        <field name="arch" type="xml">
            <form string="Internal Transfer">
                <header>
                    <button name="action_assign" string="Assign" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_start" string="Start Transfer" type="object" class="oe_highlight" invisible="state != 'waiting'"/>
                    <button name="action_verify_stock" string="Verify Stock" type="object" invisible="state != 'in_progress'"/>
                    <button name="action_complete" string="Complete" type="object" class="oe_highlight" invisible="state != 'in_progress' or not stock_verified"/>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight" invisible="state != 'done'"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state in ['approved', 'cancel']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,waiting,in_progress,done,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="transfer_type"/>
                            <field name="lot_id" invisible="transfer_type != 'batch'"/>
                            <field name="barcode_item_ids" widget="many2many_tags" invisible="transfer_type != 'barcode'"/>
                            <field name="quantity"/>
                        </group>
                        <group>
                            <field name="location_src_id"/>
                            <field name="suggested_location_id" readonly="1"/>
                            <field name="location_dest_id"/>
                            <field name="assigned_user_id"/>
                            <field name="transfer_date"/>
                            <field name="completion_date" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="stock_verified"/>
                        <field name="notes" placeholder="Transfer notes..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_stock_internal_transfer" model="ir.actions.act_window">
        <field name="name">Internal Transfers</field>
        <field name="res_model">stock.internal.transfer</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_internal_transfer"
        name="Internal Transfers"
        parent="menu_dispatch_root"
        action="action_stock_internal_transfer"
        sequence="20"/>
</odoo>
