<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequence for Odd Items -->
        <record id="seq_stock_odd_item" model="ir.sequence">
            <field name="name">Stock Odd Item</field>
            <field name="code">stock.odd.item</field>
            <field name="prefix">ODD/</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Scheduled Action: Auto-identify odd items -->
        <record id="ir_cron_auto_identify_odd_items" model="ir.cron">
            <field name="name">Auto-identify Odd Items</field>
            <field name="model_id" ref="model_stock_odd_item"/>
            <field name="state">code</field>
            <field name="code">model.auto_identify_odd_items()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
