<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_barcode_item_tree" model="ir.ui.view">
        <field name="name">barcode.item.tree</field>
        <field name="model">barcode.item</field>
        <field name="arch" type="xml">
            <list string="Hàng lẻ mã vạch" decoration-success="state == 'confirmed'" decoration-warning="state == 'scanned'">
                <field name="name"/>
                <field name="product_id"/>
                <field name="location_id"/>
                <field name="receipt_date"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="view_barcode_item_form" model="ir.ui.view">
        <field name="name">barcode.item.form</field>
        <field name="model">barcode.item</field>
        <field name="arch" type="xml">
            <form string="Hàng lẻ mã vạch">
                <header>
                    <button name="action_scan" string="Quét" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_confirm" string="Xác nhận" type="object" class="oe_highlight" invisible="state != 'placed'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,scanned,placed,confirmed"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="location_id"/>
                        </group>
                        <group>
                            <field name="receipt_id"/>
                            <field name="receipt_date"/>
                            <field name="picking_id"/>
                            <field name="picked_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Ghi chú..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
</odoo>
