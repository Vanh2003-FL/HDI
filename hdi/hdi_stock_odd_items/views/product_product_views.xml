<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_product_form_odd" model="ir.ui.view">
        <field name="name">product.product.form.odd</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Odd Items" name="odd_items">
                    <group>
                        <field name="standard_pack_qty"/>
                        <field name="odd_item_count"/>
                        <field name="total_odd_quantity"/>
                        <button name="action_view_odd_items" string="View Odd Items" type="object" class="btn-link"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
