<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_odd_item_tree" model="ir.ui.view">
        <field name="name">stock.odd.item.tree</field>
        <field name="model">stock.odd.item</field>
        <field name="arch" type="xml">
            <list string="Odd Items" decoration-info="state == 'identified'" decoration-success="state == 'stored'">
                <field name="name"/>
                <field name="date"/>
                <field name="product_id"/>
                <field name="quantity" sum="Total"/>
                <field name="standard_pack_qty"/>
                <field name="percentage_of_standard" widget="progressbar"/>
                <field name="location_id"/>
                <field name="lot_id"/>
                <field name="reason"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="view_stock_odd_item_form" model="ir.ui.view">
        <field name="name">stock.odd.item.form</field>
        <field name="model">stock.odd.item</field>
        <field name="arch" type="xml">
            <form string="Odd Item">
                <header>
                    <button name="action_mark_stored" string="Mark as Stored" type="object" class="oe_highlight" invisible="state != 'identified'"/>
                    <button name="action_create_merge_operation" string="Merge with Others" type="object" invisible="state not in ['identified', 'stored']"/>
                    <button name="action_dispose" string="Dispose" type="object" invisible="state == 'disposed'" confirm="Are you sure you want to dispose this odd item?"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="product_uom_id"/>
                            <field name="standard_pack_qty"/>
                            <field name="percentage_of_standard" widget="progressbar"/>
                        </group>
                        <group>
                            <field name="warehouse_id"/>
                            <field name="location_id"/>
                            <field name="lot_id"/>
                            <field name="date"/>
                            <field name="expiry_date"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="reason"/>
                            <field name="origin"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="is_odd" invisible="1"/>
                        </group>
                    </group>
                    <field name="note" placeholder="Additional notes..."/>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_stock_odd_item" model="ir.actions.act_window">
        <field name="name">Odd Items</field>
        <field name="res_model">stock.odd.item</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
