<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_wms_stock_quant_tree_odd" model="ir.ui.view">
        <field name="name">wms.stock.quant.tree.odd</field>
        <field name="model">wms.stock.quant</field>
        <field name="inherit_id" ref="wms_inventory.view_wms_stock_quant_tree"/>
        <field name="arch" type="xml">
            <field name="status" position="after">
                <field name="is_odd" optional="show"/>
            </field>
        </list>
        </field>
    </record>

    <record id="view_wms_stock_quant_form_odd" model="ir.ui.view">
        <field name="name">wms.stock.quant.form.odd</field>
        <field name="model">wms.stock.quant</field>
        <field name="inherit_id" ref="wms_inventory.view_wms_stock_quant_form"/>
        <field name="arch" type="xml">
            <field name="status" position="after">
                <field name="is_odd"/>
                <field name="odd_item_id" invisible="not is_odd"/>
            </field>
        </field>
    </record>
</odoo>
