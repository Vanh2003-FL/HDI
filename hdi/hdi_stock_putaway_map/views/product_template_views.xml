<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Product Template Form -->
    <record id="view_product_template_form_inherit_wms" model="ir.ui.view">
        <field name="name">product.template.form.inherit.wms</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='inventory']" position="inside">
                <group string="WMS Settings">
                    <group>
                        <field name="moving_type"/>
                        <field name="standard_batch_qty"/>
                    </group>
                    <group>
                        <field name="product_volume"/>
                        <field name="preferred_location_ids" widget="many2many_tags"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
