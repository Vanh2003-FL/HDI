<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Putaway Suggestion Tree -->
    <record id="view_putaway_suggestion_tree" model="ir.ui.view">
        <field name="name">putaway.suggestion.tree</field>
        <field name="model">putaway.suggestion</field>
        <field name="arch" type="xml">
            <tree string="Putaway Suggestions" decoration-success="rank == 1" 
                  decoration-info="rank == 2" decoration-muted="rank &gt; 3">
                <field name="rank" widget="badge"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="suggested_location_id"/>
                <field name="location_address"/>
                <field name="rule"/>
                <field name="score" widget="progressbar"/>
                <field name="available_capacity"/>
                <field name="capacity_percentage" widget="progressbar"/>
                <button name="action_apply_suggestion" string="Apply" type="object" 
                        class="btn-primary" icon="fa-check"/>
            </tree>
        </field>
    </record>

    <!-- Putaway Suggestion Form -->
    <record id="view_putaway_suggestion_form" model="ir.ui.view">
        <field name="name">putaway.suggestion.form</field>
        <field name="model">putaway.suggestion</field>
        <field name="arch" type="xml">
            <form string="Putaway Suggestion">
                <header>
                    <button name="action_apply_suggestion" string="Apply Suggestion" 
                            type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_on_map" string="View Location on Map" 
                                type="object" class="oe_stat_button" icon="fa-map-marker"/>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Product Info">
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="warehouse_id"/>
                        </group>
                        <group string="Suggestion">
                            <field name="rule"/>
                            <field name="rank" widget="badge"/>
                            <field name="suggested_location_id"/>
                            <field name="location_address"/>
                        </group>
                    </group>
                    
                    <group string="Scoring Details">
                        <group>
                            <field name="score" widget="progressbar"/>
                            <field name="capacity_score"/>
                            <field name="abc_score"/>
                        </group>
                        <group>
                            <field name="distance_score"/>
                            <field name="priority_score"/>
                        </group>
                    </group>
                    
                    <group string="Location Details">
                        <group>
                            <field name="available_capacity"/>
                            <field name="capacity_percentage" widget="progressbar"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Putaway Suggestion Action -->
    <record id="action_putaway_suggestion" model="ir.actions.act_window">
        <field name="name">Putaway Suggestions</field>
        <field name="res_model">putaway.suggestion</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Generate smart putaway suggestions
            </p>
            <p>
                Use the wizard to generate location suggestions based on various strategies.
            </p>
        </field>
    </record>
</odoo>
