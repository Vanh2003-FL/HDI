<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Picking Form -->
    <record id="view_picking_form_inherit_receipt" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.receipt</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_create_receipt_extension" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-file-text-o"
                        invisible="picking_type_code != 'incoming'">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Receipt</span>
                        <span class="o_stat_text">Extension</span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//field[@name='origin']" position="after">
                <field name="has_receipt_extension" invisible="1"/>
                <field name="receipt_id" readonly="1" invisible="not has_receipt_extension or picking_type_code != 'incoming'"/>
            </xpath>
        </field>
    </record>
</odoo>
