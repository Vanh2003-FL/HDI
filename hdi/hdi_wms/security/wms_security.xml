<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- WMS User Groups -->
    <record id="group_wms_user" model="res.groups">
        <field name="name">WMS User</field>
        <field name="category_id" ref="stock.module_category_warehouse_management"/>
        <field name="implied_ids" eval="[(4, ref('stock.group_stock_user'))]"/>
        <field name="comment">Basic WMS user - can scan, view batches, create batches</field>
    </record>

    <record id="group_wms_manager" model="res.groups">
        <field name="name">WMS Manager</field>
        <field name="category_id" ref="stock.module_category_warehouse_management"/>
        <field name="implied_ids" eval="[(4, ref('group_wms_user')), (4, ref('stock.group_stock_manager'))]"/>
        <field name="comment">WMS Manager - full WMS configuration and operations</field>
    </record>

    <!-- Scanner User Group -->
    <record id="group_wms_scanner" model="res.groups">
        <field name="name">WMS Scanner User</field>
        <field name="category_id" ref="stock.module_category_warehouse_management"/>
        <field name="implied_ids" eval="[(4, ref('group_wms_user'))]"/>
        <field name="comment">Mobile/handheld scanner user</field>
    </record>

</odoo>
