<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Batch Tree View -->
    <record id="view_batch_tree" model="ir.ui.view">
        <field name="name">hdi.batch.list</field>
        <field name="model">hdi.batch</field>
        <field name="arch" type="xml">
            <list string="Batches">
                <field name="name"/>
                <field name="barcode"/>
                <field name="batch_type"/>
                <field name="product_id"/>
                <field name="total_quantity"/>
                <field name="location_id"/>
                <field name="location_dest_id"/>
                <field name="picking_id"/>
                <field name="state" widget="badge" decoration-success="state=='stored'" 
                       decoration-warning="state in ('in_receiving', 'in_putaway')"
                       decoration-info="state=='in_picking'"/>
                <field name="wms_status" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Batch Form View -->
    <record id="view_batch_form" model="ir.ui.view">
        <field name="name">hdi.batch.form</field>
        <field name="model">hdi.batch</field>
        <field name="arch" type="xml">
            <form string="Batch">
                <header>
                    <button name="action_start_receiving" string="Start Receiving" 
                            type="object" invisible="state != 'draft'"
                            class="btn-primary"/>
                    <button name="action_start_putaway" string="Start Putaway" 
                            type="object" invisible="state != 'in_receiving'"
                            class="btn-primary"/>
                    <button name="action_confirm_storage" string="Confirm Storage" 
                            type="object" invisible="state != 'in_putaway'"
                            class="btn-success"/>
                    <button name="action_suggest_putaway" string="Suggest Location" 
                            type="object" invisible="state not in ('in_receiving', 'in_putaway')"
                            class="btn-secondary"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_moves" type="object" 
                                class="oe_stat_button" icon="fa-exchange">
                            <field name="move_count" widget="statinfo" string="Moves"/>
                        </button>
                        <button name="action_view_quants" type="object" 
                                class="oe_stat_button" icon="fa-cubes">
                            <field name="quant_count" widget="statinfo" string="Quants"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="barcode"/>
                            <field name="batch_type"/>
                            <field name="product_id"/>
                            <field name="picking_id"/>
                        </group>
                        <group>
                            <field name="location_id"/>
                            <field name="location_dest_id"/>
                            <field name="user_id"/>
                            <field name="wms_status" widget="badge"/>
                        </group>
                    </group>
                    <group string="Quantities">
                        <group>
                            <field name="total_quantity"/>
                            <field name="available_quantity"/>
                            <field name="reserved_quantity"/>
                        </group>
                        <group>
                            <field name="weight"/>
                            <field name="volume"/>
                        </group>
                    </group>
                    <group string="Physical Dimensions" groups="base.group_no_one">
                        <group>
                            <field name="height"/>
                            <field name="width"/>
                        </group>
                        <group>
                            <field name="length"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Stock Moves" name="moves">
                            <field name="move_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="product_id"/>
                                    <field name="product_uom_qty"/>
                                    <field name="location_id"/>
                                    <field name="location_dest_id"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="Quants (Inventory)" name="quants">
                            <field name="quant_ids" readonly="1">
                                <list>
                                    <field name="product_id"/>
                                    <field name="lot_id"/>
                                    <field name="location_id"/>
                                    <field name="quantity"/>
                                    <field name="reserved_quantity"/>
                                    <field name="available_quantity"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Batch Kanban View -->
    <record id="view_batch_kanban" model="ir.ui.view">
        <field name="name">hdi.batch.kanban</field>
        <field name="model">hdi.batch</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name"/>
                <field name="barcode"/>
                <field name="product_id"/>
                <field name="total_quantity"/>
                <field name="location_id"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="oe_kanban_card_header">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <div>
                                    <i class="fa fa-barcode" title="Barcode"/> <field name="barcode"/>
                                </div>
                                <div>
                                    <i class="fa fa-cube" title="Product"/> <field name="product_id"/>
                                </div>
                                <div>
                                    <i class="fa fa-sort-numeric-asc" title="Quantity"/> <field name="total_quantity"/>
                                </div>
                                <div>
                                    <i class="fa fa-map-marker" title="Location"/> <field name="location_id"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_batch" model="ir.actions.act_window">
        <field name="name">Batches/LPN</field>
        <field name="res_model">hdi.batch</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Batch/LPN
            </p>
        </field>
    </record>

</odoo>
