<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Pick Suggestion Tree View -->
    <record id="view_pick_suggestion_tree" model="ir.ui.view">
        <field name="name">hdi.pick.suggestion.tree</field>
        <field name="model">hdi.pick.suggestion</field>
        <field name="arch" type="xml">
            <tree string="Pick Suggestions" decoration-success="state=='suggested'" 
                  decoration-info="state=='assigned'" 
                  decoration-muted="state in ('picked', 'cancelled')">
                <field name="sequence" widget="handle"/>
                <field name="product_id"/>
                <field name="location_id"/>
                <field name="coordinate_display"/>
                <field name="batch_id"/>
                <field name="quantity_to_pick" sum="Total"/>
                <field name="available_qty"/>
                <field name="inbound_date" optional="show"/>
                <field name="expiration_date" optional="hide"/>
                <field name="priority" optional="hide"/>
                <field name="pick_reason"/>
                <field name="state" widget="badge"/>
                <button name="action_create_pick_task" type="object" string="Tạo Task"
                        invisible="state != 'suggested' or quantity_to_pick &lt;= 0"
                        icon="fa-tasks" class="btn-primary"/>
            </tree>
        </field>
    </record>

    <!-- Pick Suggestion Form View -->
    <record id="view_pick_suggestion_form" model="ir.ui.view">
        <field name="name">hdi.pick.suggestion.form</field>
        <field name="model">hdi.pick.suggestion</field>
        <field name="arch" type="xml">
            <form string="Pick Suggestion">
                <header>
                    <button name="action_create_pick_task" type="object" string="Tạo Pick Task"
                            invisible="state != 'suggested' or quantity_to_pick &lt;= 0"
                            class="btn-primary"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="product_id" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Picking Info">
                            <field name="picking_id" readonly="1"/>
                            <field name="quantity_needed" readonly="1"/>
                            <field name="sequence"/>
                        </group>
                        <group string="Location Info">
                            <field name="location_id" readonly="1"/>
                            <field name="coordinate_display"/>
                            <field name="location_priority"/>
                        </group>
                    </group>
                    <group>
                        <group string="Stock Info">
                            <field name="batch_id" readonly="1"/>
                            <field name="lot_id" readonly="1"/>
                            <field name="quantity_to_pick"/>
                            <field name="available_qty" readonly="1"/>
                        </group>
                        <group string="Priority Info">
                            <field name="priority" readonly="1"/>
                            <field name="inbound_date" readonly="1"/>
                            <field name="expiration_date" readonly="1"/>
                        </group>
                    </group>
                    <group string="Lý do chọn">
                        <field name="pick_reason" readonly="1" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Pick Suggestion Search View -->
    <record id="view_pick_suggestion_search" model="ir.ui.view">
        <field name="name">hdi.pick.suggestion.search</field>
        <field name="model">hdi.pick.suggestion</field>
        <field name="arch" type="xml">
            <search>
                <field name="picking_id"/>
                <field name="product_id"/>
                <field name="location_id"/>
                <field name="batch_id"/>
                <separator/>
                <filter string="Được đề xuất" name="suggested" domain="[('state', '=', 'suggested')]"/>
                <filter string="Đã gán task" name="assigned" domain="[('state', '=', 'assigned')]"/>
                <filter string="Còn hàng" name="has_stock" domain="[('quantity_to_pick', '>', 0)]"/>
                <filter string="Thiếu hàng" name="shortage" domain="[('quantity_to_pick', '&lt;=', 0)]"/>
                <group expand="0" string="Group By">
                    <filter string="Picking" name="group_picking" context="{'group_by': 'picking_id'}"/>
                    <filter string="Sản phẩm" name="group_product" context="{'group_by': 'product_id'}"/>
                    <filter string="Vị trí" name="group_location" context="{'group_by': 'location_id'}"/>
                    <filter string="Trạng thái" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>
