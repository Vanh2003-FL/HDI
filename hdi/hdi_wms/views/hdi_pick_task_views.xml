<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Pick Task List View -->
    <record id="view_pick_task_tree" model="ir.ui.view">
        <field name="name">hdi.pick.task.list</field>
        <field name="model">hdi.pick.task</field>
        <field name="arch" type="xml">
            <list string="Pick Tasks" decoration-info="state=='todo'" 
                  decoration-warning="state=='in_progress'" 
                  decoration-success="state=='done'"
                  decoration-muted="state=='cancel'">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="picking_id"/>
                <field name="location_display"/>
                <field name="coordinate_display"/>
                <field name="product_id"/>
                <field name="batch_id" optional="show"/>
                <field name="planned_qty"/>
                <field name="picked_qty"/>
                <field name="remaining_qty" decoration-danger="remaining_qty > 0"/>
                <field name="assigned_user_id"/>
                <field name="priority" widget="priority" optional="hide"/>
                <field name="state" widget="badge"/>
                <field name="company_id" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Pick Task Form View -->
    <record id="view_pick_task_form" model="ir.ui.view">
        <field name="name">hdi.pick.task.form</field>
        <field name="model">hdi.pick.task</field>
        <field name="arch" type="xml">
            <form string="Pick Task">
                <header>
                    <button name="action_start_picking" type="object" string="B·∫Øt ƒë·∫ßu l·∫•y h√†ng"
                            invisible="state != 'todo'"
                            class="btn-primary"/>
                    <button name="action_confirm_picked" type="object" string="X√°c nh·∫≠n ƒë√£ l·∫•y"
                            invisible="state != 'in_progress'"
                            class="btn-success"/>
                    <button name="action_report_issue" type="object" string="B√°o c√°o v·∫•n ƒë·ªÅ"
                            invisible="state not in ('todo', 'in_progress')"
                            class="btn-warning"/>
                    <field name="state" widget="statusbar" statusbar_visible="todo,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_start_picking"
                                icon="fa-play" invisible="state != 'todo'">
                            <div class="o_stat_info">
                                <span class="o_stat_text">B·∫Øt ƒë·∫ßu</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="picking_id" readonly="1"/>
                            <field name="picking_type_id" readonly="1"/>
                            <field name="assigned_user_id"/>
                            <field name="priority" widget="priority"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="product_id" readonly="1"/>
                            <field name="batch_id" readonly="1"/>
                            <field name="location_id" readonly="1"/>
                            <field name="coordinate_display"/>
                            <field name="zone"/>
                        </group>
                    </group>
                    <group string="S·ªë l∆∞·ª£ng">
                        <group>
                            <field name="planned_qty" readonly="1"/>
                            <field name="picked_qty" readonly="state == 'done'"/>
                            <field name="remaining_qty" decoration-danger="remaining_qty > 0"/>
                            <field name="product_uom_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="start_time" readonly="1"/>
                            <field name="end_time" readonly="1"/>
                            <field name="duration" widget="float_time" readonly="1"/>
                        </group>
                    </group>
                    <group string="V·∫•n ƒë·ªÅ" invisible="not issue_type">
                        <field name="issue_type"/>
                        <field name="issue_notes"/>
                    </group>
                    <notebook>
                        <page string="Ghi ch√∫">
                            <field name="notes"/>
                        </page>
                        <page string="Scan History" invisible="not scanned_barcodes">
                            <group>
                                <field name="scan_count" readonly="1"/>
                                <field name="scanned_barcodes" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Pick Task Kanban View -->
    <record id="view_pick_task_kanban" model="ir.ui.view">
        <field name="name">hdi.pick.task.kanban</field>
        <field name="model">hdi.pick.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile">
                <field name="name"/>
                <field name="product_id"/>
                <field name="location_display"/>
                <field name="coordinate_display"/>
                <field name="planned_qty"/>
                <field name="picked_qty"/>
                <field name="state"/>
                <field name="assigned_user_id"/>
                <field name="priority"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <br/>
                                    <span class="text-muted">
                                        <field name="location_display"/> 
                                        <t t-if="record.coordinate_display.raw_value">
                                            (<field name="coordinate_display"/>)
                                        </t>
                                    </span>
                                </div>
                                <span class="float-end">
                                    <field name="priority" widget="priority"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="product_id"/>
                                <br/>
                                <strong>S·ªë l∆∞·ª£ng:</strong> 
                                <field name="picked_qty"/> / <field name="planned_qty"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="assigned_user_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Pick Task Search View -->
    <record id="view_pick_task_search" model="ir.ui.view">
        <field name="name">hdi.pick.task.search</field>
        <field name="model">hdi.pick.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="picking_id"/>
                <field name="product_id"/>
                <field name="location_id"/>
                <field name="batch_id"/>
                <field name="assigned_user_id"/>
                <separator/>
                <filter string="Ch·ªù l·∫•y h√†ng" name="todo" domain="[('state', '=', 'todo')]"/>
                <filter string="ƒêang l·∫•y" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="ƒê√£ ho√†n th√†nh" name="done" domain="[('state', '=', 'done')]"/>
