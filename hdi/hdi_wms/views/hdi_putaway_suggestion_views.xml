<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Putaway Suggestion Action -->
    <record id="action_putaway_suggestion" model="ir.actions.act_window">
        <field name="name">Putaway Suggestions</field>
        <field name="res_model">hdi.putaway.suggestion</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No putaway suggestions yet
            </p>
        </field>
    </record>

    <!-- Putaway Suggestion Tree -->
    <record id="view_putaway_suggestion_tree" model="ir.ui.view">
        <field name="name">hdi.putaway.suggestion.tree</field>
        <field name="model">hdi.putaway.suggestion</field>
        <field name="arch" type="xml">
            <list>
                <field name="location_display"/>
                <field name="coordinates"/>
                <field name="score"/>
                <field name="priority"/>
                <field name="capacity_sufficient" widget="boolean_toggle"/>
                <field name="match_reasons"/>
                <field name="state" widget="badge"/>
                <button name="action_select" string="Select" type="object" 
                        class="btn-primary" invisible="state != 'suggested'"/>
            </list>
        </field>
    </record>

</odoo>
