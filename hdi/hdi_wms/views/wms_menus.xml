<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 
    ✅ ĐÚNG: Đưa WMS vào trong menu Inventory (stock.menu_stock_root)
    KHÔNG tạo menu riêng cùng cấp
    -->
    
    <!-- WMS Submenu trong Inventory -->
    <menuitem id="menu_wms_root"
              name="WMS"
              parent="stock.menu_stock_root"
              sequence="15"
              groups="group_wms_user"/>
    
    <!-- Batches/LPN -->
    <menuitem id="menu_batch"
              name="Batches / LPN"
              parent="menu_wms_root"
              action="action_batch"
              sequence="10"/>
    
    <!-- Putaway Suggestions -->
    <menuitem id="menu_putaway_suggestion"
              name="Putaway Suggestions"
              parent="menu_wms_root"
              action="action_putaway_suggestion"
              sequence="20"/>
    
    <!-- Loose Items -->
    <menuitem id="menu_loose_items"
              name="Loose Items"
              parent="menu_wms_root"
              action="action_loose_line"
              sequence="30"/>
    
    <!-- 
    Không cần duplicate menu Receiving/Picking/Locations
    Vì đã có sẵn trong Inventory → Operations
    WMS chỉ extend các màn hình đó, không tạo mới
    -->

