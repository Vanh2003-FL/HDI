<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Putaway Wizard -->
    <record id="view_putaway_wizard_form" model="ir.ui.view">
        <field name="name">hdi.putaway.wizard.form</field>
        <field name="model">hdi.putaway.wizard</field>
        <field name="arch" type="xml">
            <form string="Putaway Location Suggestion">
                <group>
                    <field name="batch_id" readonly="1"/>
                    <field name="product_id"/>
                    <field name="quantity"/>
                </group>
                <group>
                    <button name="action_generate_suggestions" string="Generate Suggestions" 
                            type="object" class="btn-primary"/>
                </group>
                <group string="Selected Location">
                    <field name="selected_location_id"/>
                </group>
                <footer>
                    <button name="action_confirm_location" string="Confirm" 
                            type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
