<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Putaway Wizard -->
    <record id="view_putaway_wizard_form" model="ir.ui.view">
        <field name="name">hdi.putaway.wizard.form</field>
        <field name="model">hdi.putaway.wizard</field>
        <field name="arch" type="xml">
            <form string="Putaway Location Suggestion">
                <group>
                    <field name="batch_id" invisible="1"/>
                    <field name="picking_id" invisible="1"/>
                    <field name="product_id"/>
                    <field name="quantity"/>
                </group>
                <button name="action_generate_suggestions" string="Generate Suggestions" 
                        type="object" class="btn-primary"/>
                <group string="Suggested Locations">
                    <field name="suggestion_ids" nolabel="1">
                        <tree>
                            <field name="location_display"/>
                            <field name="coordinates"/>
                            <field name="score"/>
                            <field name="priority"/>
                            <field name="capacity_sufficient" widget="boolean_toggle"/>
                            <field name="match_reasons"/>
                            <button name="action_select" string="Select" type="object" 
                                    class="btn-sm btn-primary" 
                                    invisible="state != 'suggested' or not capacity_sufficient"/>
                        </tree>
                    </field>
                    <field name="selected_location_id"/>
                </group>
                <footer>
                    <button name="action_confirm_location" string="Confirm" 
                            type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
