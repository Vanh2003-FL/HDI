<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Barcode Item Views -->
    
    <!-- Tree View -->
    <record id="view_barcode_item_tree" model="ir.ui.view">
        <field name="name">barcode.item.tree</field>
        <field name="model">barcode.item</field>
        <field name="arch" type="xml">
            <list string="Barcode Items"
                  decoration-info="state == 'draft'"
                  decoration-warning="state == 'scanned'"
                  decoration-success="state == 'confirmed'">
                <field name="name"/>
                <field name="product_id"/>
                <field name="location_id"/>
                <field name="receipt_date"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_barcode_item_form" model="ir.ui.view">
        <field name="name">barcode.item.form</field>
        <field name="model">barcode.item</field>
        <field name="arch" type="xml">
            <form string="Barcode Item">
                <header>
                    <button name="action_scan" string="Scan" 
                            type="object" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_place" string="Place in Location" 
                            type="object" class="oe_highlight"
                            invisible="state != 'scanned'"/>
                    <button name="action_confirm" string="Confirm" 
                            type="object" class="oe_highlight"
                            invisible="state != 'placed'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,scanned,placed,confirmed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_id" required="1"/>
                            <field name="quantity"/>
                            <field name="location_id"/>
                        </group>
                        <group>
                            <field name="receipt_date"/>
                            <field name="expiry_date"/>
                            <field name="barcode_list_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Additional notes..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_barcode_item" model="ir.actions.act_window">
        <field name="name">Barcode Items</field>
        <field name="res_model">barcode.item</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Barcode Item
            </p>
            <p>
                Manage individual barcode items (hàng lẻ không batch)
            </p>
        </field>
    </record>

    <!-- Barcode Item List Views -->
    <record id="view_barcode_item_list_tree" model="ir.ui.view">
        <field name="name">barcode.item.list.tree</field>
        <field name="model">barcode.item.list</field>
        <field name="arch" type="xml">
            <list string="Barcode Item Lists">
                <field name="name"/>
                <field name="date"/>
                <field name="item_count"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="view_barcode_item_list_form" model="ir.ui.view">
        <field name="name">barcode.item.list.form</field>
        <field name="model">barcode.item.list</field>
        <field name="arch" type="xml">
            <form string="Barcode Item List">
                <header>
                    <button name="action_confirm" string="Confirm" 
                            type="object" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirmed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="item_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Items" name="items">
                            <field name="item_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="location_id"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_barcode_item_list" model="ir.actions.act_window">
        <field name="name">Barcode Item Lists</field>
        <field name="res_model">barcode.item.list</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Barcode Item List
            </p>
            <p>
                Bảng kê hàng lẻ (barcode items inventory list)
            </p>
        </field>
    </record>
</odoo>
