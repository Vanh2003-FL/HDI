<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product Template Extension Views -->
    <record id="view_product_template_form_inherit_wms" model="ir.ui.view">
        <field name="name">product.template.form.inherit.wms</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="WMS Settings" name="wms_settings">
                    <group>
                        <group string="Batch Management">
                            <field name="standard_batch_qty"/>
                            <field name="moving_classification"/>
                        </group>
                        <group string="Storage">
                            <field name="priority_location_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <group>
                        <group string="Quality Control">
                            <field name="requires_qc"/>
                            <field name="qc_days"/>
                        </group>
                        <group string="FIFO Settings">
                            <field name="enforce_fifo"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
