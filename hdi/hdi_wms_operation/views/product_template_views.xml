<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product Template Extension Views -->
    <record id="view_product_template_form_inherit_wms" model="ir.ui.view">
        <field name="name">product.template.form.inherit.wms</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Cài đặt WMS" name="wms_settings">
                    <group>
                        <group string="Quản lý batch">
                            <field name="standard_batch_qty" string="Số lượng chuẩn/batch"/>
                            <field name="moving_classification" string="Phân loại luân chuyển"/>
                        </group>
                        <group string="Lưu kho">
                            <field name="priority_location_ids" string="Vị trí ưu tiên" widget="many2many_tags"/>
                        </group>
                    </group>
                    <group>
                        <group string="Kiểm tra chất lượng">
                            <field name="requires_qc" string="Yêu cầu QC"/>
                            <field name="qc_days" string="Số ngày QC"/>
                        </group>
                        <group string="Thiết lập FIFO">
                            <field name="enforce_fifo" string="Bắt buộc FIFO"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
