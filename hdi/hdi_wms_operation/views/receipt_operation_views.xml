<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- NK_NV: Receipt Operation Views -->
    
    <!-- Tree View -->
    <record id="view_receipt_operation_tree" model="ir.ui.view">
        <field name="name">receipt.operation.tree</field>
        <field name="model">receipt.operation</field>
        <field name="arch" type="xml">
            <list string="Danh sách phiếu nhập kho" 
                  decoration-info="state == 'new'" 
                  decoration-primary="state == 'in_progress'"
                  decoration-success="state == 'approved'"
                  decoration-muted="state == 'cancel'">
                <field name="name" string="Mã phiếu"/>
                <field name="receipt_type" string="Loại nhập kho"/>
                <field name="date" string="Ngày nhập kho"/>
                <field name="batch_count" string="Số batch"/>
                <field name="state" string="Trạng thái" widget="badge" 
                       decoration-info="state == 'new'"
                       decoration-warning="state == 'in_progress'"
                       decoration-success="state in ['approved','transferred']"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_receipt_operation_form" model="ir.ui.view">
        <field name="name">receipt.operation.form</field>
        <field name="model">receipt.operation</field>
        <field name="arch" type="xml">
            <form string="Phiếu nhập kho">
                <header>
                    <button name="action_start_process" string="Bắt đầu nhập kho" 
                            type="object" class="oe_highlight" 
                            invisible="state != 'new'"/>
                    <button name="action_done" string="Hoàn thành nhập kho" 
                            type="object" class="oe_highlight" 
                            invisible="state != 'in_progress'"/>
                    <button name="action_approve" string="Phê duyệt" 
                            type="object" class="oe_highlight" 
                            invisible="state != 'done'"/>
                    <button name="action_transfer" string="Hoàn tất chuyển kho" 
                            type="object" class="oe_highlight" 
                            invisible="state != 'approved'"/>
                    <button name="action_cancel" string="Hủy" 
                            type="object" 
                            invisible="state in ['transferred', 'cancel']"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="new,in_progress,done,approved,transferred"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" string="Mã phiếu" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="receipt_type" string="Loại nhập kho" required="1"/>
                            <field name="date" string="Ngày nhập kho"/>
                            <field name="stock_receipt_id" string="Phiếu nhập kho chi tiết"/>
                        </group>
                        <group>
                            <field name="picking_id" string="Phiếu xuất kho liên quan"/>
                            <field name="batch_count" string="Số batch"/>
                            <field name="barcode_item_count" string="Số hàng lẻ mã vạch"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Chi tiết batch" name="batches">
                            <field name="batch_ids">
                                <list>
                                    <field name="name" string="Mã batch"/>
                                    <field name="product_id" string="Sản phẩm"/>
                                    <field name="product_qty" string="Số lượng"/>
                                </list>
                            </field>
                        </page>
                        <page string="Bảng kê hàng lẻ" name="barcode_lists">
                            <field name="barcode_list_ids">
                                <list>
                                    <field name="name" string="Tên bảng kê"/>
                                    <field name="item_count" string="Số lượng hàng lẻ"/>
                                    <field name="state" string="Trạng thái"/>
                                </list>
                            </field>
                        </page>
                        <page string="Ghi chú" name="notes">
                            <field name="notes" placeholder="Ghi chú nhập kho..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_receipt_operation_search" model="ir.ui.view">
        <field name="name">receipt.operation.search</field>
        <field name="model">receipt.operation</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm phiếu nhập kho">
                <field name="name" string="Mã phiếu"/>
                <field name="receipt_type" string="Loại nhập kho"/>
                <filter string="Mới" name="filter_new" domain="[('state','=','new')]"/>
                <filter string="Đang thực hiện" name="filter_progress" domain="[('state','=','in_progress')]"/>
                <filter string="Hoàn thành" name="filter_done" domain="[('state','=','done')]"/>
                <filter string="Phê duyệt" name="filter_approved" domain="[('state','=','approved')]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Loại nhập kho" name="group_type" context="{'group_by':'receipt_type'}"/>
                    <filter string="Trạng thái" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Ngày nhập kho" name="group_date" context="{'group_by':'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_receipt_operation" model="ir.actions.act_window">
        <field name="name">Phiếu nhập kho (NK_NV)</field>
        <field name="res_model">receipt.operation</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_new': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo phiếu nhập kho
            </p>
            <p>
                Quản lý 4 luồng nhập kho: NK_NV_01 (Sản xuất nội địa), NK_NV_02 (Sản xuất xuất khẩu), 
                NK_NV_03 (Nhập khẩu), NK_NV_04 (Chuyển kho/Trả lại)
            </p>
        </field>
    </record>
</odoo>
