<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ĐC_NV: Transfer Operation Views -->
    
    <!-- Tree View -->
    <record id="view_transfer_operation_tree" model="ir.ui.view">
        <field name="name">transfer.operation.tree</field>
        <field name="model">transfer.operation</field>
        <field name="arch" type="xml">
            <list string="Transfer Operations"
                  decoration-info="state == 'draft'"
                  decoration-warning="state == 'waiting'"
                  decoration-primary="state == 'in_progress'"
                  decoration-success="state == 'approved'">
                <field name="name"/>
                <field name="date"/>
                <field name="assigned_user_id"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'waiting'"
                       decoration-success="state == 'approved'"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_transfer_operation_form" model="ir.ui.view">
        <field name="name">transfer.operation.form</field>
        <field name="model">transfer.operation</field>
        <field name="arch" type="xml">
            <form string="Transfer Operation">
                <header>
                    <button name="action_assign" string="Assign Worker" 
                            type="object" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_start" string="Start Transfer" 
                            type="object" class="oe_highlight"
                            invisible="state != 'waiting'"/>
                    <button name="action_complete" string="Complete" 
                            type="object" class="oe_highlight"
                            invisible="state != 'in_progress'"/>
                    <button name="action_approve" string="Approve" 
                            type="object" class="oe_highlight"
                            invisible="state != 'done'"/>
                    <button name="action_cancel" string="Cancel" 
                            type="object"
                            invisible="state in ['approved', 'cancel']"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,waiting,in_progress,done,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="assigned_user_id"/>
                        </group>
                        <group>
                            <field name="completion_date" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Transfer Lines" name="lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="lot_id" domain="[('product_id','=',product_id)]"/>
                                    <field name="location_src_id"/>
                                    <field name="location_dest_id"/>
                                    <field name="quantity"/>
                                    <field name="state" readonly="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Transfer notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_transfer_operation_search" model="ir.ui.view">
        <field name="name">transfer.operation.search</field>
        <field name="model">transfer.operation</field>
        <field name="arch" type="xml">
            <search string="Transfer Operations">
                <field name="name"/>
                <field name="assigned_user_id"/>
                <filter string="Draft" name="filter_draft" domain="[('state','=','draft')]"/>
                <filter string="Waiting" name="filter_waiting" domain="[('state','=','waiting')]"/>
                <filter string="In Progress" name="filter_progress" domain="[('state','=','in_progress')]"/>
                <filter string="My Transfers" name="filter_my" domain="[('assigned_user_id','=',uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="Assigned Worker" name="group_worker" context="{'group_by':'assigned_user_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Date" name="group_date" context="{'group_by':'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_transfer_operation" model="ir.actions.act_window">
        <field name="name">Transfer Operations (ĐC_NV)</field>
        <field name="res_model">transfer.operation</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Transfer Operation
            </p>
            <p>
                ĐC_NV_01: Internal location transfers with worker assignment
            </p>
        </field>
    </record>
</odoo>
