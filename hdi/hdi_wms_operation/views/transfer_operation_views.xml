<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ĐC_NV: Transfer Operation Views -->
    
    <!-- Tree View -->
    <record id="view_transfer_operation_tree" model="ir.ui.view">
        <field name="name">transfer.operation.tree</field>
        <field name="model">transfer.operation</field>
        <field name="arch" type="xml">
            <list string="Danh sách điều chuyển kho"
                  decoration-info="state == 'draft'"
                  decoration-warning="state == 'waiting'"
                  decoration-primary="state == 'in_progress'"
                  decoration-success="state == 'approved'">
                <field name="name"/>
                <field name="date"/>
                <field name="assigned_user_id"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'waiting'"
                       decoration-success="state == 'approved'"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_transfer_operation_form" model="ir.ui.view">
        <field name="name">transfer.operation.form</field>
        <field name="model">transfer.operation</field>
        <field name="arch" type="xml">
            <form string="Điều chuyển kho">
                <header>
                    <button name="action_assign" string="Gán nhân viên" 
                            type="object" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_start" string="Bắt đầu chuyển kho" 
                            type="object" class="oe_highlight"
                            invisible="state != 'waiting'"/>
                    <button name="action_done" string="Hoàn thành" 
                            type="object" class="oe_highlight"
                            invisible="state != 'in_progress'"/>
                    <button name="action_approve" string="Phê duyệt" 
                            type="object" class="oe_highlight"
                            invisible="state != 'done'"/>
                    <button name="action_cancel" string="Hủy" 
                            type="object"
                            invisible="state in ['approved', 'cancel']"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,waiting,in_progress,done,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" string="Ngày chuyển kho"/>
                            <field name="assigned_user_id" string="Nhân viên thực hiện"/>
                        </group>
                        <!-- <group>
                            <field name="completion_date" readonly="1"/>
                        </group> -->
                    </group>
                    
                    <notebook>
                        <page string="Chi tiết chuyển kho" name="lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="product_id" string="Sản phẩm"/>
                                    <!-- <field name="lot_id" domain="[('product_id','=',product_id)]"/> -->
                                    <field name="source_location_id" string="Vị trí nguồn"/>
                                    <field name="dest_location_id" string="Vị trí đích"/>
                                    <field name="quantity" string="Số lượng"/>
                                    <field name="state" string="Trạng thái" readonly="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Ghi chú" name="notes">
                            <field name="notes" placeholder="Ghi chú chuyển kho..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_transfer_operation_search" model="ir.ui.view">
        <field name="name">transfer.operation.search</field>
        <field name="model">transfer.operation</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm điều chuyển kho">
                <field name="name" string="Mã phiếu"/>
                <field name="assigned_user_id" string="Nhân viên thực hiện"/>
                <filter string="Nháp" name="filter_draft" domain="[('state','=','draft')]"/>
                <filter string="Chờ nhân viên" name="filter_waiting" domain="[('state','=','waiting')]"/>
                <filter string="Đang thực hiện" name="filter_progress" domain="[('state','=','in_progress')]"/>
                <filter string="Của tôi" name="filter_my" domain="[('assigned_user_id','=',uid)]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Nhân viên" name="group_worker" context="{'group_by':'assigned_user_id'}"/>
                    <filter string="Trạng thái" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Ngày" name="group_date" context="{'group_by':'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_transfer_operation" model="ir.actions.act_window">
        <field name="name">Điều chuyển kho (ĐC_NV)</field>
        <field name="res_model">transfer.operation</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo phiếu điều chuyển kho
            </p>
            <p>
                ĐC_NV_01: Điều chuyển vị trí trong kho, có gán nhân viên thực hiện
            </p>
        </field>
    </record>

