<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cycle Count Wizard Form -->
    <record id="view_cycle_count_wizard_form" model="ir.ui.view">
        <field name="name">cycle.count.wizard.form</field>
        <field name="model">cycle.count.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Cycle Count">
                <group>
                    <group>
                        <field name="warehouse_id" options="{'no_create': True}"/>
                        <field name="location_ids" widget="many2many_tags" 
                               placeholder="All locations if empty"/>
                    </group>
                    <group>
                        <field name="reason_id" options="{'no_create': True}"/>
                        <field name="count_zero_stock"/>
                    </group>
                </group>
                <group string="Filters (Optional)">
                    <group>
                        <field name="product_ids" widget="many2many_tags" 
                               placeholder="All products if empty"/>
                        <field name="abc_classification"/>
                    </group>
                    <group>
                        <field name="last_counted_days" 
                               help="0 = no filter"/>
                    </group>
                </group>
                <footer>
                    <button string="Generate Cycle Counts" name="action_create_cycle_count" 
                            type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Cycle Count Wizard Action -->
    <record id="action_cycle_count_wizard" model="ir.actions.act_window">
        <field name="name">Generate Cycle Count</field>
        <field name="res_model">cycle.count.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Add menu item -->
    <menuitem id="wms_menu_cycle_count"
              name="Cycle Count"
              parent="wms_adjustment.wms_menu_adjustment"
              action="action_cycle_count_wizard"
              sequence="10"/>
</odoo>
