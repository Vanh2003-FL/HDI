<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- EDI Import Wizard -->
    <record id="view_edi_import_wizard_form" model="ir.ui.view">
        <field name="name">edi.import.wizard.form</field>
        <field name="model">edi.import.wizard</field>
        <field name="arch" type="xml">
            <form string="EDI Import">
                <group invisible="result_message">
                    <group>
                        <field name="import_type"/>
                        <field name="file_format"/>
                        <field name="warehouse_id"/>
                    </group>
                    <group>
                        <field name="file_name" invisible="1"/>
                        <field name="file_data" filename="file_name"/>
                    </group>
                </group>
                <notebook invisible="result_message">
                    <page string="Mapping Rules">
                        <group>
                            <field name="product_field"/>
                            <field name="location_field"/>
                        </group>
                    </page>
                    <page string="Options">
                        <group>
                            <field name="create_missing"/>
                            <field name="skip_errors"/>
                        </group>
                    </page>
                </notebook>
                <group string="Import Result" invisible="not result_message">
                    <group>
                        <field name="imported_count"/>
                        <field name="error_count"/>
                    </group>
                    <field name="result_message" nolabel="1"/>
                </group>
                <footer>
                    <button string="Import" name="action_import" type="object" class="btn-primary" invisible="result_message"/>
                    <button string="Close" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_edi_import_wizard" model="ir.actions.act_window">
        <field name="name">EDI Import</field>
        <field name="res_model">edi.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
