<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- API Key Views -->
    <record id="view_wms_api_key_tree" model="ir.ui.view">
        <field name="name">wms.api.key.tree</field>
        <field name="model">wms.api.key</field>
        <field name="arch" type="xml">
            <list string="API Keys">
                <field name="name"/>
                <field name="user_id"/>
                <field name="warehouse_id"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="last_used_date"/>
                <field name="usage_count"/>
                <field name="expires_date"/>
            </list>
        </field>
    </record>

    <record id="view_wms_api_key_form" model="ir.ui.view">
        <field name="name">wms.api.key.form</field>
        <field name="model">wms.api.key</field>
        <field name="arch" type="xml">
            <form string="API Key">
                <header>
                    <button name="action_regenerate_key" type="object" string="Regenerate Key" class="btn-primary"/>
                    <button name="action_deactivate" type="object" string="Deactivate" class="btn-warning" invisible="not active"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="API Key Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="key" password="True"/>
                            <field name="user_id"/>
                            <field name="warehouse_id"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="expires_date"/>
                            <field name="last_used_date" readonly="1"/>
                            <field name="usage_count" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Permissions">
                            <group>
                                <field name="can_query"/>
                                <field name="can_create_receipt"/>
                                <field name="can_create_delivery"/>
                                <field name="can_reserve"/>
                                <field name="can_move"/>
                            </group>
                        </page>
                        <page string="Security">
                            <group>
                                <field name="ip_whitelist" placeholder="192.168.1.1, 10.0.0.1"/>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_wms_api_key" model="ir.actions.act_window">
        <field name="name">API Keys</field>
        <field name="res_model">wms.api.key</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
