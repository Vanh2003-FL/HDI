<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- API Log Views -->
    <record id="view_wms_api_log_tree" model="ir.ui.view">
        <field name="name">wms.api.log.tree</field>
        <field name="model">wms.api.log</field>
        <field name="arch" type="xml">
            <list string="API Logs" create="0" edit="0">
                <field name="create_date"/>
                <field name="endpoint"/>
                <field name="method"/>
                <field name="api_key_id"/>
                <field name="response_code"/>
                <field name="response_time"/>
                <field name="success"/>
            </list>
        </field>
    </record>

    <record id="view_wms_api_log_form" model="ir.ui.view">
        <field name="name">wms.api.log.form</field>
        <field name="model">wms.api.log</field>
        <field name="arch" type="xml">
            <form string="API Log" create="0" edit="0" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="endpoint"/>
                            <field name="method"/>
                            <field name="api_key_id"/>
                            <field name="user_id"/>
                            <field name="ip_address"/>
                        </group>
                        <group>
                            <field name="response_code"/>
                            <field name="response_time"/>
                            <field name="success"/>
                            <field name="create_date"/>
                        </group>
                    </group>
                    <group string="Request Data">
                        <field name="request_data" nolabel="1"/>
                    </group>
                    <group string="Response Data">
                        <field name="response_data" nolabel="1"/>
                    </group>
                    <group string="Error Message" invisible="not error_message">
                        <field name="error_message" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_wms_api_log" model="ir.actions.act_window">
        <field name="name">API Logs</field>
        <field name="res_model">wms.api.log</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
