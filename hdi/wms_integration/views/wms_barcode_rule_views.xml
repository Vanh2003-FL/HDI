<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Barcode Rule Views -->
    <record id="view_wms_barcode_rule_tree" model="ir.ui.view">
        <field name="name">wms.barcode.rule.tree</field>
        <field name="model">wms.barcode.rule</field>
        <field name="arch" type="xml">
            <list string="Barcode Rules">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="barcode_pattern"/>
                <field name="entity_type"/>
                <field name="field_to_match"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="view_wms_barcode_rule_form" model="ir.ui.view">
        <field name="name">wms.barcode.rule.form</field>
        <field name="model">wms.barcode.rule</field>
        <field name="arch" type="xml">
            <form string="Barcode Rule">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Rule Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="active"/>
                            <field name="barcode_pattern"/>
                        </group>
                        <group>
                            <field name="entity_type"/>
                            <field name="field_to_match"/>
                        </group>
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_wms_barcode_rule" model="ir.actions.act_window">
        <field name="name">Barcode Rules</field>
        <field name="res_model">wms.barcode.rule</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
