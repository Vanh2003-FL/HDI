<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Webhook Views -->
    <record id="view_wms_webhook_tree" model="ir.ui.view">
        <field name="name">wms.webhook.tree</field>
        <field name="model">wms.webhook</field>
        <field name="arch" type="xml">
            <list string="Webhooks">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="url"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="total_calls"/>
                <field name="successful_calls"/>
                <field name="failed_calls"/>
                <field name="last_call_status"/>
            </list>
        </field>
    </record>

    <record id="view_wms_webhook_form" model="ir.ui.view">
        <field name="name">wms.webhook.form</field>
        <field name="model">wms.webhook</field>
        <field name="arch" type="xml">
            <form string="Webhook">
                <header>
                    <button name="action_test_webhook" type="object" string="Test Webhook" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Webhook Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="active"/>
                            <field name="url"/>
                            <field name="method"/>
                        </group>
                        <group>
                            <field name="last_call_date" readonly="1"/>
                            <field name="last_call_status" readonly="1"/>
                            <field name="total_calls" readonly="1"/>
                            <field name="successful_calls" readonly="1"/>
                            <field name="failed_calls" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Events">
                            <group>
                                <group>
                                    <field name="event_receipt_done"/>
                                    <field name="event_delivery_shipped"/>
                                    <field name="event_transfer_done"/>
                                </group>
                                <group>
                                    <field name="event_adjustment_done"/>
                                    <field name="event_stock_low"/>
                                    <field name="event_product_expired"/>
                                </group>
                            </group>
                        </page>
                        <page string="Authentication">
                            <group>
                                <field name="auth_type"/>
                                <field name="auth_username" invisible="auth_type != 'basic'"/>
                                <field name="auth_password" password="True" invisible="auth_type != 'basic'"/>
                                <field name="auth_token" password="True" invisible="auth_type != 'bearer'"/>
                                <field name="auth_header_name" invisible="auth_type != 'api_key'"/>
                                <field name="auth_header_value" password="True" invisible="auth_type != 'api_key'"/>
                            </group>
                        </page>
                        <page string="Retry Settings">
                            <group>
                                <field name="max_retries"/>
                                <field name="retry_delay"/>
                                <field name="timeout"/>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="notes" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_wms_webhook" model="ir.actions.act_window">
        <field name="name">Webhooks</field>
        <field name="res_model">wms.webhook</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
