<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Stock Move Tree View -->
    <record id="wms_stock_move_view_tree" model="ir.ui.view">
        <field name="name">wms.stock.move.view.list</field>
        <field name="model">wms.stock.move</field>
        <field name="arch" type="xml">
            <list string="Stock Moves" decoration-muted="state == 'cancel'" decoration-info="state == 'draft'" decoration-success="state == 'done'">
                <field name="name"/>
                <field name="date"/>
                <field name="product_id"/>
                <field name="product_uom_qty"/>
                <field name="quantity"/>
                <field name="product_uom_id" groups="uom.group_uom"/>
                <field name="location_id"/>
                <field name="location_dest_id"/>
                <field name="move_type" widget="badge"/>
                <field name="state" widget="badge" decoration-success="state == 'done'" decoration-info="state == 'assigned'" decoration-warning="state == 'confirmed'"/>
                <field name="user_id"/>
            </list>
        </field>
    </record>

    <!-- Stock Move Form View -->
    <record id="wms_stock_move_view_form" model="ir.ui.view">
        <field name="name">wms.stock.move.view.form</field>
        <field name="model">wms.stock.move</field>
        <field name="arch" type="xml">
            <form string="Stock Move">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" class="btn-primary" invisible="state not in ['draft', 'waiting']"/>
                    <button name="action_assign" type="object" string="Check Availability" class="btn-primary" invisible="state not in ['confirmed', 'waiting']"/>
                    <button name="action_done" type="object" string="Validate" class="btn-success" invisible="state != 'assigned'"/>
                    <button name="action_cancel" type="object" string="Cancel" invisible="state in ['done', 'cancel']"/>
                    <button name="action_draft" type="object" string="Set to Draft" invisible="state != 'cancel'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,assigned,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Product">
                            <field name="product_id"/>
                            <field name="product_tmpl_id" invisible="1"/>
                            <field name="lot_id"/>
                            <field name="move_type"/>
                        </group>
                        <group string="Quantities">
                            <label for="product_uom_qty"/>
                            <div class="o_row">
                                <field name="product_uom_qty"/>
                                <field name="product_uom_id" groups="uom.group_uom"/>
                            </div>
                            <label for="quantity"/>
                            <div class="o_row">
                                <field name="quantity"/>
                                <field name="product_uom_id" groups="uom.group_uom"/>
                            </div>
                        </group>
                    </group>
                    <group>
                        <group string="Locations">
                            <field name="location_id"/>
                            <field name="location_dest_id"/>
                        </group>
                        <group string="Dates">
                            <field name="date"/>
                            <field name="date_done" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group string="References">
                            <field name="origin"/>
                            <field name="receipt_id" invisible="move_type != 'receipt'"/>
                            <field name="delivery_id" invisible="move_type != 'delivery'"/>
                            <field name="transfer_id" invisible="move_type != 'transfer'"/>
                            <field name="adjustment_id" invisible="move_type != 'adjustment'"/>
                        </group>
                        <group string="Other Info">
                            <field name="user_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="note" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Stock Move Search View -->
    <record id="wms_stock_move_view_search" model="ir.ui.view">
        <field name="name">wms.stock.move.view.search</field>
        <field name="model">wms.stock.move</field>
        <field name="arch" type="xml">
            <search string="Stock Moves">
                <field name="name"/>
                <field name="product_id"/>
                <field name="location_id"/>
                <field name="location_dest_id"/>
                <field name="origin"/>
                <separator/>
                <filter string="Draft" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Waiting" name="filter_waiting" domain="[('state', '=', 'waiting')]"/>
                <filter string="Confirmed" name="filter_confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Assigned" name="filter_assigned" domain="[('state', '=', 'assigned')]"/>
                <filter string="Done" name="filter_done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter string="Receipt" name="filter_receipt" domain="[('move_type', '=', 'receipt')]"/>
                <filter string="Delivery" name="filter_delivery" domain="[('move_type', '=', 'delivery')]"/>
                <filter string="Transfer" name="filter_transfer" domain="[('move_type', '=', 'transfer')]"/>
                <filter string="Adjustment" name="filter_adjustment" domain="[('move_type', '=', 'adjustment')]"/>
                <separator/>
                <filter string="Today" name="filter_today" domain="[('date', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00')), ('date', '&lt;=', context_today().strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter string="This Week" name="filter_this_week" domain="[('date', '&gt;=', (context_today() - relativedelta(weeks=1)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Product" name="group_product" context="{'group_by': 'product_id'}"/>
                    <filter string="Source Location" name="group_location" context="{'group_by': 'location_id'}"/>
                    <filter string="Destination Location" name="group_location_dest" context="{'group_by': 'location_dest_id'}"/>
                    <filter string="Move Type" name="group_move_type" context="{'group_by': 'move_type'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Stock Move Action -->
    <record id="wms_stock_move_action" model="ir.actions.act_window">
        <field name="name">Stock Moves</field>
        <field name="res_model">wms.stock.move</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first stock move
            </p>
            <p>
                Stock moves track all inventory movements in your warehouse.
            </p>
        </field>
    </record>
</odoo>
