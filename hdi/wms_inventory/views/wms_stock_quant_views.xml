<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Stock Quant Tree View -->
    <record id="wms_stock_quant_view_tree" model="ir.ui.view">
        <field name="name">wms.stock.quant.view.list</field>
        <field name="model">wms.stock.quant</field>
        <field name="arch" type="xml">
            <list string="Stock Quantities" decoration-muted="status != 'available'" decoration-warning="status == 'quarantine'" decoration-danger="status == 'damaged'">
                <field name="product_id"/>
                <field name="location_id"/>
                <field name="lot_id"/>
                <field name="quantity" sum="Total Quantity"/>
                <field name="reserved_quantity" sum="Total Reserved"/>
                <field name="available_quantity" sum="Total Available"/>
                <field name="product_uom_id" groups="uom.group_uom"/>
                <field name="status" widget="badge" decoration-success="status == 'available'" decoration-warning="status == 'quarantine'" decoration-danger="status == 'damaged'"/>
                <field name="in_date"/>
                <field name="expiration_date"/>
                <field name="warehouse_id"/>
            </list>
        </field>
    </record>

    <!-- Stock Quant Form View -->
    <record id="wms_stock_quant_view_form" model="ir.ui.view">
        <field name="name">wms.stock.quant.view.form</field>
        <field name="model">wms.stock.quant</field>
        <field name="arch" type="xml">
            <form string="Stock Quantity">
                <header>
                    <button name="action_set_available" type="object" string="Set Available" class="btn-success" invisible="status == 'available'"/>
                    <button name="action_set_quarantine" type="object" string="Quarantine" class="btn-warning" invisible="status == 'quarantine'"/>
                    <button name="action_set_damaged" type="object" string="Mark Damaged" class="btn-danger" invisible="status == 'damaged'"/>
                    <field name="status" widget="statusbar" statusbar_visible="available,reserved,quarantine,damaged"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="complete_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Product & Location">
                            <field name="product_id"/>
                            <field name="product_tmpl_id" invisible="1"/>
                            <field name="location_id"/>
                            <field name="zone_id"/>
                            <field name="warehouse_id"/>
                        </group>
                        <group string="Quantities">
                            <field name="quantity"/>
                            <field name="reserved_quantity"/>
                            <field name="available_quantity"/>
                            <field name="product_uom_id" groups="uom.group_uom"/>
                        </group>
                    </group>
                    <group>
                        <group string="Lot/Serial & Dates">
                            <field name="lot_id"/>
                            <field name="lot_name"/>
                            <field name="in_date"/>
                            <field name="expiration_date"/>
                            <field name="removal_date"/>
                        </group>
                        <group string="Valuation">
                            <field name="cost"/>
                            <field name="value"/>
                        </group>
                    </group>
                    <group>
                        <group string="Package & Owner">
                            <field name="package_id"/>
                            <field name="owner_id"/>
                        </group>
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1" placeholder="Additional notes..."/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Stock Quant Search View -->
    <record id="wms_stock_quant_view_search" model="ir.ui.view">
        <field name="name">wms.stock.quant.view.search</field>
        <field name="model">wms.stock.quant</field>
        <field name="arch" type="xml">
            <search string="Stock Quantities">
                <field name="product_id"/>
                <field name="location_id"/>
                <field name="lot_id"/>
                <field name="warehouse_id"/>
                <field name="zone_id"/>
                <separator/>
                <filter string="Available" name="filter_available" domain="[('status', '=', 'available'), ('available_quantity', '&gt;', 0)]"/>
                <filter string="Reserved" name="filter_reserved" domain="[('reserved_quantity', '&gt;', 0)]"/>
                <filter string="Quarantine" name="filter_quarantine" domain="[('status', '=', 'quarantine')]"/>
                <filter string="Damaged" name="filter_damaged" domain="[('status', '=', 'damaged')]"/>
                <separator/>
                <filter string="Has Lot/Serial" name="filter_has_lot" domain="[('lot_id', '!=', False)]"/>
                <filter string="Expiring Soon" name="filter_expiring" domain="[('expiration_date', '&lt;=', (context_today() + relativedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Product" name="group_product" context="{'group_by': 'product_id'}"/>
                    <filter string="Location" name="group_location" context="{'group_by': 'location_id'}"/>
                    <filter string="Warehouse" name="group_warehouse" context="{'group_by': 'warehouse_id'}"/>
                    <filter string="Zone" name="group_zone" context="{'group_by': 'zone_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Lot/Serial" name="group_lot" context="{'group_by': 'lot_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Stock Quant Pivot View -->
    <record id="wms_stock_quant_view_pivot" model="ir.ui.view">
        <field name="name">wms.stock.quant.view.pivot</field>
        <field name="model">wms.stock.quant</field>
        <field name="arch" type="xml">
            <pivot string="Stock Analysis">
                <field name="warehouse_id" type="row"/>
                <field name="product_id" type="row"/>
                <field name="quantity" type="measure"/>
                <field name="available_quantity" type="measure"/>
                <field name="value" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Stock Quant Action -->
    <record id="wms_stock_quant_action" model="ir.actions.act_window">
        <field name="name">Stock on Hand</field>
        <field name="res_model">wms.stock.quant</field>
        <field name="view_mode">list,form,pivot</field>
        <field name="context">{'search_default_filter_available': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No stock found
            </p>
            <p>
                Stock quantities will appear here after receipts are processed.
            </p>
        </field>
    </record>
</odoo>
