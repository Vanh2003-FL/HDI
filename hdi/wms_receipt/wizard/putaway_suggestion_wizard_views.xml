<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="putaway_suggestion_wizard_view_form" model="ir.ui.view">
        <field name="name">putaway.suggestion.wizard.view.form</field>
        <field name="model">putaway.suggestion.wizard</field>
        <field name="arch" type="xml">
            <form string="Putaway Suggestions">
                <group>
                    <field name="receipt_id" readonly="1"/>
                    <field name="strategy"/>
                </group>
                <group string="Suggestions">
                    <field name="line_ids" nolabel="1">
                        <list string="Suggestions" editable="bottom">
                            <field name="selected"/>
                            <field name="product_id" readonly="1"/>
                            <field name="quantity" readonly="1"/>
                            <field name="suggested_location_id"/>
                            <field name="capacity_percentage" widget="progressbar"/>
                        </list>
                    </field>
                </group>
                <footer>
                    <button string="Confirm" name="action_confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
