<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ABC Analysis Wizard Form -->
    <record id="view_abc_analysis_wizard_form" model="ir.ui.view">
        <field name="name">abc.analysis.wizard.form</field>
        <field name="model">abc.analysis.wizard</field>
        <field name="arch" type="xml">
            <form string="ABC Analysis">
                <group>
                    <group>
                        <field name="warehouse_id" options="{'no_create': True}"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="analysis_type"/>
                        <field name="category_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <group string="ABC Classification Thresholds">
                    <group>
                        <field name="class_a_percent"/>
                        <field name="class_b_percent"/>
                    </group>
                    <group>
                        <label string="Class C: Remaining %"/>
                        <field name="update_product_classification"/>
                    </group>
                </group>
                <div class="alert alert-info" role="alert">
                    <strong>How it works:</strong><br/>
                    Products are sorted by value/quantity and classified into:<br/>
                    • Class A: Top products (e.g., 20% of products = 80% of value)<br/>
                    • Class B: Middle products (e.g., 30% of products = 15% of value)<br/>
                    • Class C: Remaining products (e.g., 50% of products = 5% of value)
                </div>
                <footer>
                    <button string="Generate Report" name="action_generate_report" 
                            type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- ABC Analysis Action -->
    <record id="action_abc_analysis_wizard" model="ir.actions.act_window">
        <field name="name">ABC Analysis</field>
        <field name="res_model">abc.analysis.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
