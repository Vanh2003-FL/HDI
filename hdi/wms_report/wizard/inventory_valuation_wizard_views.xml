<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inventory Valuation Wizard Form -->
    <record id="view_inventory_valuation_wizard_form" model="ir.ui.view">
        <field name="name">inventory.valuation.wizard.form</field>
        <field name="model">inventory.valuation.wizard</field>
        <field name="arch" type="xml">
            <form string="Inventory Valuation Report">
                <group>
                    <group>
                        <field name="warehouse_id" options="{'no_create': True}"/>
                        <field name="as_of_date"/>
                        <field name="valuation_method"/>
                    </group>
                    <group>
                        <field name="status_filter"/>
                        <field name="group_by"/>
                        <field name="show_zero_stock"/>
                    </group>
                </group>
                <group string="Filters">
                    <group>
                        <field name="location_ids" widget="many2many_tags"
                               placeholder="All locations if empty"/>
                    </group>
                    <group>
                        <field name="category_ids" widget="many2many_tags"
                               placeholder="All categories if empty"/>
                    </group>
                </group>
                <div class="alert alert-info" role="alert">
                    This report shows the total value of inventory based on the selected valuation method.
                </div>
                <footer>
                    <button string="Generate Report" name="action_generate_report" 
                            type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Inventory Valuation Action -->
    <record id="action_inventory_valuation_wizard" model="ir.actions.act_window">
        <field name="name">Inventory Valuation</field>
        <field name="res_model">inventory.valuation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
