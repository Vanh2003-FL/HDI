<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Location Utilization Wizard Form -->
    <record id="view_location_utilization_wizard_form" model="ir.ui.view">
        <field name="name">location.utilization.wizard.form</field>
        <field name="model">location.utilization.wizard</field>
        <field name="arch" type="xml">
            <form string="Location Capacity Utilization">
                <group>
                    <group>
                        <field name="warehouse_id" options="{'no_create': True}"/>
                        <field name="utilization_threshold"/>
                    </group>
                    <group>
                        <field name="include_blocked"/>
                    </group>
                </group>
                <group string="Filters">
                    <group>
                        <field name="location_type_ids" widget="many2many_tags"
                               placeholder="All types if empty"/>
                    </group>
                    <group>
                        <field name="zone_ids" widget="many2many_tags"
                               placeholder="All zones if empty"/>
                    </group>
                </group>
                <div class="alert alert-info" role="alert">
                    <strong>Color Coding:</strong><br/>
                    • Green: Below 50% utilization<br/>
                    • Yellow: 50% - 80% utilization<br/>
                    • Orange: 80% - 90% utilization<br/>
                    • Red: Above 90% utilization
                </div>
                <footer>
                    <button string="Generate Report" name="action_generate_report" 
                            type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Location Utilization Action -->
    <record id="action_location_utilization_wizard" model="ir.actions.act_window">
        <field name="name">Location Utilization</field>
        <field name="res_model">location.utilization.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
