<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Transfer List View -->
    <record id="view_wms_transfer_tree" model="ir.ui.view">
        <field name="name">wms.transfer.tree</field>
        <field name="model">wms.transfer</field>
        <field name="arch" type="xml">
            <list string="Internal Transfers" decoration-info="state=='draft'" decoration-warning="state=='pending'" decoration-success="state=='done'" decoration-muted="state=='cancel'">
                <field name="name"/>
                <field name="date"/>
                <field name="warehouse_id"/>
                <field name="source_location_id"/>
                <field name="dest_location_id"/>
                <field name="transfer_type"/>
                <field name="priority" widget="priority"/>
                <field name="total_lines"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="state" widget="badge" decoration-info="state=='draft'" decoration-warning="state in ('pending','in_progress')" decoration-success="state=='done'" decoration-danger="state=='cancel'"/>
            </list>
        </field>
    </record>

    <!-- Transfer Form View -->
    <record id="view_wms_transfer_form" model="ir.ui.view">
        <field name="name">wms.transfer.form</field>
        <field name="model">wms.transfer</field>
        <field name="arch" type="xml">
            <form string="Internal Transfer">
                <header>
                    <button name="action_submit" string="Submit for Approval" type="object" 
                            invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_approve" string="Approve" type="object" 
                            invisible="state != 'pending'" class="oe_highlight"
                            groups="wms_base.group_wms_manager"/>
                    <button name="action_reject" string="Reject" type="object" 
                            invisible="state != 'pending'"
                            groups="wms_base.group_wms_manager"/>
                    <button name="action_start" string="Start Transfer" type="object" 
                            invisible="state != 'approved'" class="oe_highlight"/>
                    <button name="action_validate" string="Validate" type="object" 
                            invisible="state != 'in_progress'" class="oe_highlight"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            invisible="state in ('done', 'cancel')"/>
                    <button name="action_set_to_draft" string="Set to Draft" type="object" 
                            invisible="state not in ('cancel', 'pending')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,pending,approved,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_wms_stock_move)d" type="action" 
                                class="oe_stat_button" icon="fa-exchange"
                                invisible="not move_ids"
                                context="{'search_default_transfer_id': id}">
                            <field name="move_ids" widget="statinfo" string="Moves"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="warehouse_id" options="{'no_create': True}"/>
                            <field name="source_location_id" options="{'no_create': True}"/>
                            <field name="dest_location_id" options="{'no_create': True}"/>
                            <field name="transfer_type"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="scheduled_date"/>
                            <field name="priority" widget="priority"/>
                            <field name="user_id" widget="many2one_avatar_user"/>
                        </group>
                    </group>
                    <group invisible="state not in ('approved','done')">
                        <group>
                            <field name="approved_by"/>
                            <field name="approved_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Products" name="products">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="product_id" domain="[('type', '=', 'product')]"/>
                                    <field name="lot_id" optional="show" context="{'default_product_id': product_id}"/>
                                    <field name="quantity"/>
                                    <field name="quantity_available" readonly="1"/>
                                    <field name="quantity_done" readonly="state not in ('in_progress',)"/>
                                    <field name="availability_status" widget="badge" decoration-danger="availability_status=='unavailable'" decoration-warning="availability_status=='partial'" decoration-success="availability_status=='available'"/>
                                    <field name="product_uom_id" groups="uom.group_uom"/>
                                    <field name="notes" optional="hide"/>
                                    <field name="state" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Additional Info" name="info">
                            <group>
                                <field name="reason"/>
                                <field name="notes"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Transfer Search View -->
    <record id="view_wms_transfer_search" model="ir.ui.view">
        <field name="name">wms.transfer.search</field>
        <field name="model">wms.transfer</field>
        <field name="arch" type="xml">
            <search string="Search Transfers">
                <field name="name"/>
                <field name="warehouse_id"/>
                <field name="source_location_id"/>
                <field name="dest_location_id"/>
                <field name="user_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Pending Approval" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter string="My Transfers" name="my_transfers" domain="[('user_id', '=', uid)]"/>
                <separator/>
                <filter string="Urgent" name="urgent" domain="[('priority', 'in', ['1','2'])]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Warehouse" name="group_warehouse" context="{'group_by': 'warehouse_id'}"/>
                    <filter string="Transfer Type" name="group_type" context="{'group_by': 'transfer_type'}"/>
                    <filter string="Responsible" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Transfer Action -->
    <record id="action_wms_transfer" model="ir.actions.act_window">
        <field name="name">Internal Transfers</field>
        <field name="res_model">wms.transfer</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first internal transfer
            </p>
            <p>
                Transfer stock between locations within your warehouse.
            </p>
        </field>
    </record>

</odoo>
