<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Bulk Transfer Wizard Form -->
    <record id="view_bulk_transfer_wizard_form" model="ir.ui.view">
        <field name="name">bulk.transfer.wizard.form</field>
        <field name="model">bulk.transfer.wizard</field>
        <field name="arch" type="xml">
            <form string="Bulk Transfer">
                <group>
                    <group>
                        <field name="warehouse_id" options="{'no_create': True}"/>
                        <field name="source_location_id" options="{'no_create': True}"/>
                        <field name="dest_location_id" options="{'no_create': True}"/>
                    </group>
                    <group>
                        <field name="transfer_type"/>
                        <field name="transfer_all_stock"/>
                    </group>
                </group>
                <group invisible="transfer_all_stock">
                    <field name="product_ids" widget="many2many_tags" 
                           placeholder="Leave empty to transfer all products"/>
                </group>
                <group>
                    <field name="reason" placeholder="Enter reason for transfer..."/>
                </group>
                <footer>
                    <button string="Create Transfer" name="action_create_transfer" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Bulk Transfer Wizard Action -->
    <record id="action_bulk_transfer_wizard" model="ir.actions.act_window">
        <field name="name">Bulk Transfer</field>
        <field name="res_model">bulk.transfer.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Add menu item -->
    <menuitem id="wms_menu_bulk_transfer"
              name="Bulk Transfer"
              parent="wms_transfer.wms_menu_transfer"
              action="action_bulk_transfer_wizard"
              sequence="10"/>
</odoo>
