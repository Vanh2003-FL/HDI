<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Attendance List View -->
    <record id="view_hdi_attendance_list" model="ir.ui.view">
        <field name="name">hr.attendance.list</field>
        <field name="model">hr.attendance</field>
        <field name="arch" type="xml">
            <list string="Danh sách chấm công" 
                  decoration-danger="not check_out or worked_hours &lt; 7.5" 
                  decoration-success="check_out and worked_hours &gt;= 7.5"
                  sample="1" create="true" edit="true" delete="true">
                <field name="name" string="Mã" optional="show"/>
                <field name="employee_id" string="Nhân viên"/>
                <field name="check_in" string="Giờ vào" widget="datetime"/>
                <field name="check_out" string="Giờ ra" widget="datetime"/>
                <field name="worked_hours" string="Giờ làm" widget="float_time" sum="Total Hours"/>
                <field name="work_location_id" string="Địa điểm" optional="show"/>
                <field name="checkin_latitude" string="Vĩ độ vào" optional="hide"/>
                <field name="checkin_longitude" string="Kinh độ vào" optional="hide"/>
                <field name="checkout_latitude" string="Vĩ độ ra" optional="hide"/>
                <field name="checkout_longitude" string="Kinh độ ra" optional="hide"/>
                <field name="status" string="Trạng thái" widget="badge" 
                       decoration-success="status == 'checkout'" 
                       decoration-info="status == 'checkin'" optional="show"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Attendance Form View -->
    <record id="view_hdi_attendance_form" model="ir.ui.view">
        <field name="name">hr.attendance.form</field>
        <field name="model">hr.attendance</field>
        <field name="arch" type="xml">
            <form string="Chấm công">
                <header>
                    <button name="action_checkout" string="Check Out" type="object"
                            class="oe_highlight" invisible="check_out"/>
                    <field name="status" widget="statusbar" statusbar_visible="checkin,checkout"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_checkout"
                                icon="fa-clock-o" invisible="check_out">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Check Out</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Chưa check out" bg_color="text-bg-danger" 
                            invisible="check_out"/>
                    <widget name="web_ribbon" title="Không đủ giờ" bg_color="text-bg-warning" 
                            invisible="worked_hours &gt;= 7.5 or not check_out"/>
                    <widget name="web_ribbon" title="Hoàn thành" bg_color="text-bg-success" 
                            invisible="not check_out or worked_hours &lt; 7.5"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group string="Thông tin nhân viên">
                            <field name="employee_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="work_location_id" options="{'no_create_edit': True}"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group string="Thời gian">
                            <field name="check_in" required="1"/>
                            <field name="check_out" readonly="1"/>
                            <field name="worked_hours" widget="float_time" readonly="1"/>
                            <field name="warning_message" readonly="1" invisible="not warning_message" 
                                   class="text-danger fw-bold"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Thông tin GPS" name="gps_info">
                            <group>
                                <group string="Check-in Location">
                                    <label for="checkin_latitude" string="Tọa độ check-in"/>
                                    <div class="o_row">
                                        <field name="checkin_latitude" placeholder="Vĩ độ"/>
                                        <field name="checkin_longitude" placeholder="Kinh độ"/>
                                    </div>
                                </group>
                                <group string="Check-out Location">
                                    <label for="checkout_latitude" string="Tọa độ check-out"/>
                                    <div class="o_row">
                                        <field name="checkout_latitude" placeholder="Vĩ độ"/>
                                        <field name="checkout_longitude" placeholder="Kinh độ"/>
                                    </div>
                                </group>
                            </group>
                        </page>
                        <page string="Ghi chú" name="notes">
                            <field name="note" placeholder="Ghi chú thêm về buổi làm việc..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Attendance Search View -->
    <record id="view_hdi_attendance_search" model="ir.ui.view">
        <field name="name">hr.attendance.search</field>
        <field name="model">hr.attendance</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm chấm công">
                <field name="name" string="Mã" filter_domain="[('name', 'ilike', self)]"/>
                <field name="employee_id" string="Nhân viên"/>
                <field name="work_location_id" string="Địa điểm"/>
                <separator/>
                <filter name="checkin" string="Đang làm việc" domain="[('check_out', '=', False)]"/>
                <filter name="checkout" string="Đã check out" domain="[('check_out', '!=', False)]"/>
                <filter name="warning" string="Cần chú ý" domain="['|', ('check_out', '=', False), ('worked_hours', '&lt;', 7.5)]"/>
                <separator/>
                <filter name="today" string="Hôm nay" 
                        domain="[('check_in', '&gt;=', context_today), ('check_in', '&lt;', (context_today + datetime.timedelta(days=1)).strftime('%Y-%m-%d'))]"/>
                <filter name="this_week" string="Tuần này"
                        domain="[('check_in', '&gt;=', (context_today - datetime.timedelta(days=context_today.weekday())).strftime('%Y-%m-%d')),
                                 ('check_in', '&lt;', (context_today + datetime.timedelta(days=7-context_today.weekday())).strftime('%Y-%m-%d'))]"/>
                <filter name="this_month" string="Tháng này"
                        domain="[('check_in', '&gt;=', context_today.strftime('%Y-%m-01')), 
                                 ('check_in', '&lt;', (context_today.replace(day=28) + datetime.timedelta(days=4)).replace(day=1).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="Chấm công của tôi" name="my_attendance"
                        domain="[('employee_id.user_id', '=', uid)]"/>
                <group expand="0" string="Nhóm theo">
                    <filter name="group_employee" string="Nhân viên" context="{'group_by': 'employee_id'}"/>
                    <filter name="group_location" string="Địa điểm" context="{'group_by': 'work_location_id'}"/>
                    <filter name="group_date" string="Ngày" context="{'group_by': 'check_in:day'}"/>
                    <filter name="group_status" string="Trạng thái" context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Attendance Kanban View -->
    <record id="view_hdi_attendance_kanban" model="ir.ui.view">
        <field name="name">hr.attendance.kanban</field>
        <field name="model">hr.attendance</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="worked_hours"/>
                <field name="status"/>
                <field name="work_location_id"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top mb-2">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title fs-5">
                                        <i class="fa fa-user-circle-o me-1" title="Nhân viên"/>
                                        <field name="employee_id"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle text-muted">
                                        <i class="fa fa-hashtag" title="Mã"/> <field name="name"/>
                                    </div>
                                </div>
                                <span class="float-end">
                                    <field name="status" widget="label_selection" 
                                           options="{'classes': {'checkin': 'primary', 'checkout': 'success'}}"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-6">
                                        <i class="fa fa-sign-in text-success" title="Giờ vào"/> <field name="check_in" widget="datetime"/>
                                    </div>
                                    <div class="col-6">
                                        <i class="fa fa-sign-out text-danger" title="Giờ ra"/> <field name="check_out" widget="datetime"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom mt-2">
                                <div class="oe_kanban_bottom_left">
                                    <i class="fa fa-map-marker text-info" title="Địa điểm"/> <field name="work_location_id"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <span class="badge rounded-pill text-bg-primary">
                                        <i class="fa fa-clock-o" title="Giờ làm"/> <field name="worked_hours" widget="float_time"/> giờ
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Attendance Calendar View -->
    <record id="view_hdi_attendance_calendar" model="ir.ui.view">
        <field name="name">hr.attendance.calendar</field>
        <field name="model">hr.attendance</field>
        <field name="arch" type="xml">
            <calendar string="Lịch chấm công"
                      date_start="check_in"
                      date_stop="check_out"
                      color="color"
                      mode="month"
                      hide_time="true"
                      event_limit="5"
                      quick_create="0"
                      event_open_popup="true">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="work_location_id"/>
                <field name="worked_hours"/>
                <field name="status"/>
                <field name="warning_message"/>
                <field name="color" invisible="1"/>
            </calendar>
        </field>
    </record>

    <!-- Attendance Pivot View -->
    <record id="view_hdi_attendance_pivot" model="ir.ui.view">
        <field name="name">hr.attendance.pivot</field>
        <field name="model">hr.attendance</field>
        <field name="arch" type="xml">
            <pivot string="Phân tích chấm công" sample="1">
                <field name="employee_id" type="row"/>
                <field name="check_in" interval="month" type="col"/>
                <field name="worked_hours" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Attendance Graph View -->
    <record id="view_hdi_attendance_graph" model="ir.ui.view">
        <field name="name">hr.attendance.graph</field>
        <field name="model">hr.attendance</field>
        <field name="arch" type="xml">
            <graph string="Biểu đồ chấm công" sample="1">
                <field name="employee_id"/>
                <field name="worked_hours" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Attendance Action -->
    <record id="action_hdi_attendance" model="ir.actions.act_window">
        <field name="name">Chấm công</field>
        <field name="res_model">hr.attendance</field>
        <field name="view_mode">list,calendar,kanban,form,pivot,graph</field>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo bản ghi chấm công mới
            </p>
            <p>
                Theo dõi giờ vào, giờ ra và thời gian làm việc của nhân viên.<br/>
                <span class="text-danger">●</span> Các bản ghi màu đỏ: Cần chú ý (chưa check-out hoặc không đủ giờ).<br/>
                <span class="text-success">●</span> Các bản ghi màu xanh: Hoàn thành tốt.
            </p>
        </field>
    </record>
</odoo>
