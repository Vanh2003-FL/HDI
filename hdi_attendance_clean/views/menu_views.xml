<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Menu -->
    <menuitem id="menu_hdi_attendance_root"
              name="Chấm công HDI"
              sequence="50"
              web_icon="hdi_attendance_clean,static/description/icon.png"/>

    <!-- Action: Chấm công của tôi -->
    <record id="action_my_hdi_attendance" model="ir.actions.act_window">
        <field name="name">Chấm công của tôi</field>
        <field name="res_model">hdi.attendance</field>
        <field name="view_mode">calendar,list,kanban,form</field>
        <field name="domain">[('employee_id.user_id', '=', uid)]</field>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Bạn chưa có bản ghi chấm công nào
            </p>
            <p>
                Click vào nút <b>Tạo</b> để check-in hoặc check-out.
            </p>
        </field>
    </record>

    <!-- Menu: Chấm công của tôi -->
    <menuitem id="menu_my_hdi_attendance"
              name="Chấm công của tôi"
              parent="menu_hdi_attendance_root"
              action="action_my_hdi_attendance"
              sequence="5"/>

    <!-- Menu: Tất cả chấm công (Manager) -->
    <menuitem id="menu_all_hdi_attendance"
              name="Tất cả chấm công"
              parent="menu_hdi_attendance_root"
              action="action_hdi_attendance"
              groups="group_attendance_manager"
              sequence="10"/>

    <!-- Configuration Submenu -->
    <menuitem id="menu_hdi_attendance_config"
              name="Cấu hình"
              parent="menu_hdi_attendance_root"
              groups="group_attendance_manager"
              sequence="90"/>

    <menuitem id="menu_hdi_work_location"
              name="Địa điểm làm việc"
              parent="menu_hdi_attendance_config"
              action="action_hdi_work_location"
              sequence="10"/>
</odoo>
