<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Work Location Tree View -->
    <record id="view_hdi_work_location_tree" model="ir.ui.view">
        <field name="name">hdi.work.location.list</field>
        <field name="model">hdi.work.location</field>
        <field name="arch" type="xml">
            <list string="Địa điểm làm việc" decoration-muted="not active" sample="1">
                <field name="name" string="Tên địa điểm"/>
                <field name="address" string="Địa chỉ"/>
                <field name="latitude" string="Vĩ độ"/>
                <field name="longitude" string="Kinh độ"/>
                <field name="radius" string="Bán kính (m)"/>
                <field name="attendance_count" string="Số lần chấm công"/>
                <field name="active" string="Đang dùng" widget="boolean_toggle"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Work Location Form View -->
    <record id="view_hdi_work_location_form" model="ir.ui.view">
        <field name="name">hdi.work.location.form</field>
        <field name="model">hdi.work.location</field>
        <field name="arch" type="xml">
            <form string="Địa điểm làm việc">
                <header>
                    <button name="action_view_attendances" string="Xem chấm công" type="object" 
                            class="oe_highlight" invisible="not attendance_count"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_attendances" type="object" class="oe_stat_button" icon="fa-calendar-check-o">
                            <field name="attendance_count" widget="statinfo" string="Lượt chấm công"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Đã ngừng" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Tên địa điểm"/>
                        <h1><field name="name" placeholder="Văn phòng trung tâm, Chi nhánh HN, ..."/></h1>
                    </div>
                    <group>
                        <group string="Thông tin chung">
                            <field name="address" placeholder="Nhập địa chỉ đầy đủ..."/>
                            <field name="radius" widget="integer"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group string="Tọa độ GPS">
                            <label for="latitude" string="Vị trí"/>
                            <div class="o_row">
                                <field name="latitude" placeholder="Vĩ độ (Latitude)"/>
                                <field name="longitude" placeholder="Kinh độ (Longitude)"/>
                            </div>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Hướng dẫn" name="instructions">
                            <group>
                                <div class="alert alert-info" role="alert">
                                    <p><strong>Lấy tọa độ GPS:</strong></p>
                                    <ol>
                                        <li>Mở Google Maps</li>
                                        <li>Tìm địa điểm và click chuột phải</li>
                                        <li>Copy tọa độ (VD: 21.028511, 105.804817)</li>
                                        <li>Số đầu là Latitude (Vĩ độ), số sau là Longitude (Kinh độ)</li>
                                    </ol>
                                    <p><strong>Bán kính:</strong> Khoảng cách tối đa (mét) nhân viên có thể check-in từ tâm điểm.</p>
                                </div>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Work Location Action -->
    <record id="action_hdi_work_location" model="ir.actions.act_window">
        <field name="name">Địa điểm làm việc</field>
        <field name="res_model">hdi.work.location</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo địa điểm làm việc mới
            </p>
            <p>
                Quản lý các địa điểm làm việc với tọa độ GPS để kiểm soát chấm công.
            </p>
        </field>
    </record>

    <!-- Work Location Kanban View -->
    <record id="view_hdi_work_location_kanban" model="ir.ui.view">
        <field name="name">hdi.work.location.kanban</field>
        <field name="model">hdi.work.location</field>
        <field name="arch" type="xml">
            <kanban sample="1">
                <field name="name"/>
                <field name="address"/>
                <field name="attendance_count"/>
                <field name="active"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <i class="fa fa-map-marker fa-3x text-primary" title="Địa điểm"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="address"/>
                                </div>
                                <div class="oe_kanban_footer">
                                    <span class="badge badge-pill">
                                        <i class="fa fa-calendar-check-o" title="Lượt chấm công"/> <field name="attendance_count"/> lượt
                                    </span>
                                    <field name="active" widget="boolean_toggle"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
