<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Work Location Tree View -->
    <record id="view_hdi_work_location_tree" model="ir.ui.view">
        <field name="name">hdi.work.location.tree</field>
        <field name="model">hdi.work.location</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="address"/>
                <field name="latitude"/>
                <field name="longitude"/>
                <field name="radius"/>
                <field name="attendance_count"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Work Location Form View -->
    <record id="view_hdi_work_location_form" model="ir.ui.view">
        <field name="name">hdi.work.location.form</field>
        <field name="model">hdi.work.location</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_view_attendances" string="View Attendances" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_attendances" type="object" class="oe_stat_button" icon="fa-calendar-check-o">
                            <field name="attendance_count" widget="statinfo" string="Attendances"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Location Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="address" placeholder="Full address..."/>
                            <field name="radius"/>
                        </group>
                        <group>
                            <label for="latitude" string="GPS Coordinates"/>
                            <div class="o_row">
                                <field name="latitude"/>
                                <field name="longitude"/>
                            </div>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Work Location Action -->
    <record id="action_hdi_work_location" model="ir.actions.act_window">
        <field name="name">Work Locations</field>
        <field name="res_model">hdi.work.location</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
