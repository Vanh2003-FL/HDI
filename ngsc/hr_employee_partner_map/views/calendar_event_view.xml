<odoo>
    <data>
        <!-- Kế thừa form view của calendar.event, thêm widget + domain dùng context -->
        <record id="view_calendar_event_form_inherit_partner" model="ir.ui.view">
            <field name="name">calendar.event.form.inherit.partner</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
            <field name="arch" type="xml">
                <field name="partner_ids" position="attributes">
                    <attribute name="widget">many2many_tags</attribute>
                    <!-- domain dùng context (đã được inject trong fields_view_get) -->
                    <attribute name="domain">[('id','in', context.get('available_partner_ids', []))]</attribute>
                </field>
            </field>
        </record>
    </data>
</odoo>
