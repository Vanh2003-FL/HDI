<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="ir_cron_process_attendance_log" model="ir.cron">
        <field name="name">Process attendance log queue</field>
        <field name="model_id" ref="model_hr_attendance_log"/>
        <field name="state">code</field>
        <field name="code">model.process_pending_batch()</field>
        <field name="active">True</field>
        <field name="interval_number">1</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
    </record>

    <record id="ir_cron_cleanup_attendance_log" model="ir.cron">
        <field name="name">Cleanup old attendance logs</field>
        <field name="model_id" ref="model_hr_attendance_log"/>
        <field name="state">code</field>
        <field name="code">model.cron_cleanup_old_logs()</field>
        <field name="active">True</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
    </record>
</odoo>
