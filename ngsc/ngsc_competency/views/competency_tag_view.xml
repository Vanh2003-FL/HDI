<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Action mở màn hình Tag -->
        <record id="tag_view_action" model="ir.actions.act_window">
            <field name="name">Thẻ</field>
            <field name="res_model">ngsc.competency.tag</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- LIST VIEW -->
        <record id="tag_view_list_tree" model="ir.ui.view">
            <field name="name">ngsc.competency.tag.tree</field>
            <field name="model">ngsc.competency.tag</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="skill_group_id"/>
                    <field name="color_code" widget="color_picker"/>
                    <field name="active_display"/>
                </list>
            </field>
        </record>

        <record id="tag_view_list_tree_search" model="ir.ui.view">
            <field name="name">ngsc.competency.tag.tree.search</field>
            <field name="model">ngsc.competency.tag</field>
            <field name="arch" type="xml">
                <search>
                    <filter name="filter_draft" string="Lưu trữ" domain="[('active','=',False)]"/>
                    <field name="name"/>
                    <field name="skill_group_id"/>
                </search>
            </field>
        </record>

        <!-- FORM VIEW -->
        <record id="tag_view_form" model="ir.ui.view">
            <field name="name">ngsc.competency.tag.form</field>
            <field name="model">ngsc.competency.tag</field>
            <field name="arch" type="xml">
                <form string="skill">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Tên thẻ" class="oe_inline" string="Tên viết tắt"/>
                            </h1>
                        </div>
                        <group string="Thông tin chung">
                            <field name="code"/>
                            <field name="skill_group_id"/>
                            <field name="active"/>
                            <field name="color_code" widget="color_picker"/>
                            <field name="color_name" invisible="1"/>
                            <field name="description"/>
                        </group>
                    </sheet>

                    <chatter/><field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- SEQUENCE cho mã thẻ -->
        <record id="sequence_tag_code" model="ir.sequence">
            <field name="name">Tag Code Sequence</field>
            <field name="code">ngsc.competency.tag.code</field>
            <field name="prefix">T</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>
