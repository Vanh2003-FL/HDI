<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_employee_rule_competency_employee" model="ir.rule">
            <field name="name">Nhân viên được phép sửa dữ liệu của bản thân</field>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('ngsc_competency.group_competency_employee'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="hr_employee_skills_rule_competency_employee" model="ir.rule">
            <field name="name">Nhân viên thao tác trên bản đánh giá năng lực do mình tạo</field>
            <field name="model_id" ref="model_hr_employee_skills"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('ngsc_competency.group_competency_employee'))]"/>
        </record>

        <record id="hr_employee_skills_rule_competency_od" model="ir.rule">
            <field name="name">Cán bộ OD thao tác trên tất cả bản đánh giá năng lực</field>
            <field name="model_id" ref="model_hr_employee_skills"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('ngsc_competency.group_competency_od'))]"/>
        </record>

        <record id="hr_employee_skills_rule_manager_employee" model="ir.rule">
            <field name="name">QLTT/QLGT xem năng lực skills nhân viên mình quản lý</field>
            <field name="model_id" ref="model_hr_employee_skills"/>
            <field name="domain_force">['|',('hr_employee_id.parent_id.user_id', '=',user.id),('hr_employee_id.indirect_manager.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('ngsc_competency.group_competency_employee'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>
    </data>
</odoo>
