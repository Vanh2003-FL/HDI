<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_employee_skills_view_form" model="ir.ui.view">
            <field name="name">hr.employee.skills.view.form</field>
            <field name="model">hr.employee.skills</field>
            <field name="arch" type="xml">
                <form string="Kỹ năng nhân viên" create="0" edit="0" delete="0">
                    <sheet>
                        <div class="oe_title">
                            <label for="skill_id"/>
                            <h1>
                                <field name="skill_id"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="skill_group_id"/>
                                <field name="tag_id" widget="custom_badge"/>
                                <field name="description"/>
                                <field name="code"/>
                                <field name="tag_color_code" invisible="1"/>
                            </group>
                            <group>
                                <field name="expected_level_id" invisible="1"/>
                                <field name="current_level_id" invisible="1"/>
                                <field name="level_steps" invisible="1"/>
                                <field name="level_current" widget="step_progress_bar"/>
                            </group>
                            <label for="skill_level_ids" string="Danh sách mức độ" style="font-weight: bold"/>
                            <field name="skill_level_ids">
                                <list>
                                    <field name="sequence"/>
                                    <field name="level_id"/>
                                    <field name="description"/>
                                    <field name="detail"/>
                                </list>
                            </field>
                        </group>
                    </sheet>
                    <chatter/><field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>