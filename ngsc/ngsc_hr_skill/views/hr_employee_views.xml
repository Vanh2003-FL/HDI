<odoo>
    <data noupdate="1">
        <!--Xóa view không sử dụng-->
        <delete model="ir.ui.view" id="ngsc_hr_skill_ngsd_base_hr_employee_view_form"/>
    </data>
    <data>
        <record id="ngsc_hr_skill_hr_employee_view_form" model="ir.ui.view">
            <field name="name">ngsc.hr.skill.hr.employee.view.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="ngsd_base.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='hr_settings']" position="before">
                    <page name="competency_info" string="Thông tin năng lực"
                          groups="ngsc_competency.group_competency_employee">
                        <button name="action_open_wizard_add_skills" type="object"
                                string="Thêm kỹ năng"
                                attrs="{'invisible': [('is_allowed_add_skill', '=', False)]}"
                                class="btn btn-primary"/>
                        <div class="oe_edit_only" style="padding-bottom: 10px"></div>
                        <field name="skill_ids">
                            <list editable="bottom">
                                <field name="skill_group_id"/>
                                <field name="short_name"/>
                                <field name="tag_id" widget="custom_badge"/>
                                <field name="skill_id"
                                       readonly="1"
                                       options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                                <field name="expected_level_id" readonly="1"/>
                                <field name="current_level_id" required="1"
                                       context="{'list_view_ref': 'ngsc_hr_skill.hr_skill_ngsc_competency_skill_level_view_tree',
                                                 'form_view_ref': 'ngsc_hr_skill.hr_skill_ngsc_competency_skill_level_view_form'}"
                                       options="{'search_more': True,'no_create': True,'no_edit': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                                <button name="action_open_view_detail" string="Xem chi tiết" type="object"
                                        class="btn-secondary"
                                        help="Mở bản ghi chi tiết"/>
                                <field name="tag_color_code" invisible="1"/>
                            </list>
                        </field>
                        <field name="is_allowed_add_skill" invisible="1"/>
                        <field name="is_readonly_fields_hr" invisible="1"/>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>