<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_skill_ngsc_competency_skill_level_view_tree" model="ir.ui.view">
            <field name="name">hr.skill.ngsc.competency.skill.level.view.tree</field>
            <field name="model">ngsc.competency.skill.level</field>
            <field name="arch" type="xml">
                <list>
                    <field name="level_id" invisible="1"/>
                    <field name="name" readonly="1" string="Tên mức độ"/>
                    <field name="description" readonly="1" string="Mô tả mức độ"/>
                    <field name="detail"/>
                </list>
            </field>
        </record>

        <record id="hr_skill_ngsc_competency_skill_level_view_form" model="ir.ui.view">
                <field name="name">hr.skill.ngsc.competency.skill.level.view.form</field>
                <field name="model">ngsc.competency.skill.level</field>
                <field name="arch" type="xml">
                    <form>
                        <sheet>
                            <group>
                                <field name="name" readonly="1" string="Tên mức độ"/>
                                <field name="description" readonly="1" string="Mô tả mức độ"/>
                                <field name="detail"/>
                            </group>
                        </sheet>
                    </form>
                </field>
            </record>
    </data>
</odoo>