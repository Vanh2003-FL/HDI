<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ngsc_hr_unit_hierarchy_inherit_hr_employee_search" model="ir.ui.view">
            <field name="name">ngsc.hr.unit.hierarchy.inherit.hr.employee.search</field>
            <field name="model">hr.employee</field>
            <field name="priority">50000</field>
            <field name="inherit_id" ref="hr.view_employee_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//searchpanel" position="replace"/>
                <xpath expr="//search" position="inside">
                    <searchpanel>
                        <field name="unit_id" icon="fa-users" enable_counters="1"/>
                    </searchpanel>
                </xpath>
            </field>
        </record>
    </data>
</odoo>