<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Tạo category riêng cho module NGSC Innovation -->
        <record id="module_category_ngsc_innovation" model="ir.module.category">
            <field name="name">NGSC Innovation</field>
            <field name="description">Ý tưởng sáng tạo</field>
            <field name="sequence">1</field>
        </record>

        <!-- Nhóm 1: Truyền thông nội bộ -->
        <record id="group_internal_communication" model="res.groups">
            <field name="name">Truyền thông nội bộ</field>
            <field name="category_id" ref="module_category_ngsc_innovation"/>
        </record>

        <!-- Nhóm 2: Hội đồng đánh giá -->
        <record id="group_evaluation_board" model="res.groups">
            <field name="name">Hội đồng đánh giá</field>
            <field name="category_id" ref="module_category_ngsc_innovation"/>
        </record>

        <!-- Rule: Chỉ nhóm Truyền thông nội bộ mới được CRUD -->
        <record id="ngsc_rule_scoring_criteria_tt_nb" model="ir.rule">
            <field name="name">NGSC - Quyền truy cập tiêu chí chấm điểm - Truyền thông nội bộ</field>
            <field name="model_id" ref="model_ngsc_scoring_criteria"/>
            <field name="domain_force">[]</field>
            <field name="groups" eval="[(4, ref('ngsc_innovation.group_internal_communication'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

        <record id="rule_idea_unlink_only" model="ir.rule">
            <field name="name">Chỉ xóa ý tưởng của mình chưa duyệt</field>
            <field name="model_id" ref="model_ngsc_innovation_idea"/>
            <field name="domain_force">[('sender_id', '=', user.id), ('state', '=', 'new')]</field>
            <field name="perm_read" eval="0"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="1"/>
        </record>
    </data>
</odoo>