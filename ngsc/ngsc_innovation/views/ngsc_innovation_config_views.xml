<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Action mở danh sách NGSC Innovation Config -->
    <record id="action_ngsc_innovation_config" model="ir.actions.act_window">
        <field name="name">Cấu hình sáng kiến</field>
        <field name="res_model">ngsc.innovation.config</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Tree View: NGSC Innovation Config -->
    <record id="view_ngsc_innovation_config_tree" model="ir.ui.view">
        <field name="name">ngsc.innovation.config.tree</field>
        <field name="model">ngsc.innovation.config</field>
        <field name="arch" type="xml">
            <list string="Cấu hình sáng kiến">
                <field name="name"/>
                <field name="type"/>
                <field name="status" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form View: NGSC Innovation Config -->
    <record id="view_ngsc_innovation_config_form" model="ir.ui.view">
        <field name="name">ngsc.innovation.config.form</field>
        <field name="model">ngsc.innovation.config</field>
        <field name="arch" type="xml">
            <form string="Cấu hình sáng kiến">
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="type" required="1"/>
                        <field name="status" widget="boolean_toggle"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>