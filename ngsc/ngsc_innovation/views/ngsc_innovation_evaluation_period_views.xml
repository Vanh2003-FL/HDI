<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_ngsc_innovation_evaluation_period_form" model="ir.ui.view">
        <field name="name">ngsc.innovation.evaluation.period.form</field>
        <field name="model">ngsc.innovation.evaluation.period</field>
        <field name="arch" type="xml">
            <form string="Thiết lập thời gian chấm điểm">
                <sheet>
                    <group col="2">
                        <div>
                            <div style="font-weight: bold; margin-bottom: 5px;">Ngày bắt đầu chấm điểm</div>
                            <div class="text-muted" style="font-size: 12px; margin-bottom: 8px;">
                                Ngày thành viên trong hội đồng đánh giá được bắt đầu chấm điểm các ý tưởng
                            </div>
                            <field name="start_date" nolabel="1" help="Ngày thành viên trong hội đồng đánh giá được bắt đầu chấm điểm các ý tưởng"/>
                        </div>

                        <div>
                            <div style="font-weight: bold; margin-bottom: 5px;">Ngày kết thúc chấm điểm</div>
                            <div class="text-muted" style="font-size: 12px; margin-bottom: 8px;">
                                Ngày thành viên trong hội đồng đánh giá kết thúc quá trình chấm điểm, chỉ được phép chốt điểm đánh giá trước ngày này
                            </div>
                            <field name="end_date" nolabel="1" help="Ngày thành viên trong hội đồng đánh giá kết thúc quá trình chấm điểm, chỉ được phép chốt điểm đánh giá trước ngày này"/>
                        </div>
                    </group>

                    <group col="1" style="margin-top: 20px;">
                        <div>
                            <div style="font-weight: bold; margin-bottom: 5px;">Thời gian gửi Email thông báo nhắc nhở đánh giá</div>
                            <div class="text-muted" style="font-size: 12px; margin-bottom: 8px;">
                                Thời gian gửi Email thông báo nhắc nhở chấm điểm cho thành viên trong hội đồng đánh giá
                            </div>
                            <div style="display: flex; align-items: center; gap: 8px;">
                                <field name="reminder_days" nolabel="1" help="Thời gian gửi Email thông báo nhắc nhở chấm điểm cho thành viên trong hội đồng đánh giá" style="width: 80px;"/>
                                <span class="text-muted" style="font-size: 11px;">
                                    Giờ trước ngày kết thúc chấm điểm
                                </span>
                            </div>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ngsc_innovation_evaluation_period" model="ir.actions.act_window">
        <field name="name">Thiết lập thời gian chấm điểm</field>
        <field name="res_model">ngsc.innovation.evaluation.period</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="res_id" ref="ngsc_innovation_evaluation_period_default"/>
        <field name="context">{}</field>
    </record>

</odoo>