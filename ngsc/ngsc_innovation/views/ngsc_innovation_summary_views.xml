<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="0">

  <record id="view_ngsc_innovation_summary_tree_truyen_thong" model="ir.ui.view">
    <field name="name">ngsc.innovation.summary.tree.truyen_thong</field>
    <field name="model">ngsc.innovation.summary</field>
    <field name="groups_id" eval="[(6, 0, [ref('group_internal_communication')])]"/>
    <field name="arch" type="xml">
      <list string="Đánh giá - Truyền thông nội bộ" default_order="idea_id,criteria_id,evaluator_id">
        <field name="idea_name"/>
        <field name="evaluator_id"/>
        <field name="type_criteria"/>
        <field name="criteria_id"/>
        <field name="score"/>
        <field name="idea_state"/>
      </list>
    </field>
  </record>

  <record id="view_ngsc_innovation_summary_tree_hoi_dong" model="ir.ui.view">
    <field name="name">ngsc.innovation.summary.tree.hoi_dong</field>
    <field name="model">ngsc.innovation.summary</field>
    <field name="groups_id" eval="[(6, 0, [ref('group_evaluation_board')])]"/>
    <field name="arch" type="xml">
      <list string="Đánh giá - Hội đồng" default_order="idea_id,criteria_id,evaluator_id">
        <field name="idea_name"/>
        <field name="type_criteria"/>
        <field name="criteria_id"/>
        <field name="score"/>
        <field name="idea_state"/>
      </list>
    </field>
  </record>

  <record id="view_ngsc_innovation_summary_search" model="ir.ui.view">
    <field name="name">ngsc.innovation.summary.search</field>
    <field name="model">ngsc.innovation.summary</field>
    <field name="arch" type="xml">
      <search string="Tìm kiếm đánh giá">
        <field name="idea_name"/>
        <field name="evaluator_id"/>
        <field name="version_id"/>
        <field name="criteria_id"/>
        <field name="score"/>
        <separator/>
        <group expand="0" string="Nhóm theo">
          <filter name="group_idea" string="Ý tưởng" context="{'group_by':'idea_id'}"/>
          <filter name="group_evaluator" string="Người đánh giá"
            context="{'group_by':'evaluator_id'}"/>
          <filter name="group_version" string="Quy tắc chấm điểm"
            context="{'group_by':'version_id'}"/>
          <filter name="group_criteria" string="Tiêu chí" context="{'group_by':'criteria_id'}"/>
        </group>
      </search>
    </field>
  </record>

  <record id="action_ngsc_innovation_summary_truyen_thong" model="ir.actions.act_window">
    <field name="name">Tất cả đánh giá</field>
    <field name="res_model">ngsc.innovation.summary</field>
    <field name="view_mode">list</field>
    <field name="view_id" ref="view_ngsc_innovation_summary_tree_truyen_thong"/>
    <field name="context">{'search_default_group_idea': 1}</field>
    <field name="domain">[('is_latest','=',True), ('status','=',True)]</field>
    <field name="groups_id" eval="[(6, 0, [ref('group_internal_communication')])]"/>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">Chưa có đánh giá nào!</p>
      <p>Đây là nơi hiển thị các đánh giá ý tưởng sáng tạo cho nhóm Truyền thông nội bộ.</p>
    </field>
  </record>

  <record id="action_ngsc_innovation_summary_hoi_dong" model="ir.actions.act_window">
    <field name="name">Tất cả đánh giá</field>
    <field name="res_model">ngsc.innovation.summary</field>
    <field name="view_mode">list</field>
    <field name="view_id" ref="view_ngsc_innovation_summary_tree_hoi_dong"/>
    <field name="context">{'search_default_group_idea': 1}</field>
    <field name="domain">[('is_latest','=',True),('evaluator_id','=',uid)]</field>
    <field name="groups_id" eval="[(6, 0, [ref('group_evaluation_board')])]"/>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">Chưa có đánh giá nào!</p>
      <p>Đây là nơi hiển thị các đánh giá ý tưởng sáng tạo cho Hội đồng đánh giá.</p>
    </field>
  </record>

</odoo>