<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Action mở danh sách Version -->
    <record id="action_ngsc_innovation_version" model="ir.actions.act_window">
        <field name="name">Quy tắc chấm điểm</field>
        <field name="res_model">ngsc.innovation.version</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Tree View: Version -->
    <record id="view_ngsc_innovation_version_tree" model="ir.ui.view">
        <field name="name">ngsc.innovation.version.tree</field>
        <field name="model">ngsc.innovation.version</field>
        <field name="arch" type="xml">
            <list string="Phiên bản sáng kiến">
                <field name="ver_no" optional="show"/>
                <field name="start_date" optional="show"/>
                <field name="end_date" optional="show"/>
                <field name="status" optional="show"/>
                <field name="criteria_ids" widget="many2many_tags" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- One2many inline trong Version Form -->
    <record id="view_ngsc_innovation_version_form" model="ir.ui.view">
        <field name="name">ngsc.innovation.version.form</field>
        <field name="model">ngsc.innovation.version</field>
        <field name="arch" type="xml">
            <form string="Phiên bản sáng kiến">
                <sheet>
                    <group>
                        <field name="ver_no"/>
                        <field name="start_date" />
                        <field name="end_date"/>
                        <field name="status" widget="boolean_toggle"/>
                    </group>

                    <notebook>
                        <page string="Các tiêu chí chấm điểm">
                            <field name="criteria_ids" context="{}">
                                <list editable="bottom" string="Các tiêu chí chấm điểm">
                                    <field name="name" required="1"/>
                                    <field name="type" required="1"/>
                                    <field name="max_point_input" string="Điểm tối đa"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
