<odoo>
    <!-- Tree view -->
    <record id="ngsc_innovation_pdf_upload_tree_view" model="ir.ui.view">
        <field name="name">ngsc_innovation.pdf_upload.tree</field>
        <field name="model">ngsc_innovation.pdf_preview</field>
        <field name="arch" type="xml">
            <list string="Danh sách PDF">

                <field name="name"/>
                <field name="pdf_filename"/>
                <field name="active"/>

            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="ngsc_innovation_pdf_upload_form_view" model="ir.ui.view">
        <field name="name">ngsc_innovation.pdf_upload.form</field>
        <field name="model">ngsc_innovation.pdf_preview</field>
        <field name="arch" type="xml">
            <form string="Thêm PDF">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="pdf_file" filename="pdf_filename"/>
                        <field name="pdf_filename"/>
                        <field name="active" widget="boolean_toggle"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="ngsc_innovation_pdf_upload_action" model="ir.actions.act_window">
        <field name="name">Quản lý Tài liệu Ý tưởng</field>
        <field name="res_model">ngsc_innovation.pdf_preview</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="ngsc_innovation_pdf_upload_tree_view"/>
        <field name="context">{'active_test': False}</field> <!-- Bỏ filter active -->
        <field name="domain">[]</field>
    </record>
</odoo>
