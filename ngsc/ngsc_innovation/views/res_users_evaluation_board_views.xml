<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree view chỉ hiển thị các thông tin cơ bản -->
        <record id="view_res_users_evaluation_board_tree" model="ir.ui.view">
            <field name="name">res.users.evaluation.board.tree</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <list string="Danh sách hội đồng đánh giá">
                    <field name="name"/>
                    <field name="login"/>
                    <field name="email"/>
                    <field name="work_phone"/>
                    <field name="company_id"/>
                </list>
            </field>
        </record>

        <!-- Action gọi tree view -->
        <record id="action_evaluation_board_users" model="ir.actions.act_window">
            <field name="name">Danh sách hội đồng đánh giá</field>
            <field name="res_model">res.users</field>
            <field name="view_mode">list</field>
            <field name="view_id" ref="view_res_users_evaluation_board_tree"/>
            <field name="domain" eval="[('groups_id','in',[ref('ngsc_innovation.group_evaluation_board')])]"/>
        </record>

    </data>
</odoo>
