<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form view cho wizard nhập lý do -->
    <record id="view_ngsc_innovation_reject_wizard_form" model="ir.ui.view">
        <field name="name">ngsc.innovation.reject.wizard.form</field>
        <field name="model">ngsc.innovation.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Từ chối ý tưởng">
                <sheet>
                    <group>
                        <field name="reason" placeholder="Nhập lý do từ chối"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Xác nhận" type="object" name="action_confirm_reject" class="btn-primary"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action mở wizard -->
    <record id="action_ngsc_innovation_reject_wizard" model="ir.actions.act_window">
        <field name="name">Từ chối ý tưởng</field>
        <field name="res_model">ngsc.innovation.reject.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
