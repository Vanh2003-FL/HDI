<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- TTNB Scoring Wizard Form -->
        <record id="view_ngsc_innovation_ttnb_scoring_wizard_form" model="ir.ui.view">
            <field name="name">ngsc.innovation.ttnb.scoring.wizard.form</field>
            <field name="model">ngsc.innovation.ttnb.scoring.wizard</field>
            <field name="arch" type="xml">
                <form string="Chấm điểm thay - TTNB">
                    <sheet>
                        <!-- Field ẩn để điều khiển readonly mode -->
                        <field name="view_readonly" invisible="1"/>

                        <div class="oe_title">
                            <h1>
                                <field name="evaluator_name" readonly="1"/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="idea_id" readonly="1"/>
                                <field name="evaluator_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="version_id" readonly="1"/>
                                <field name="is_locked" readonly="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Chấm điểm">
                                <field name="scoring_line_ids" nolabel="1">
                                    <list editable="bottom" create="false" delete="false">
                                        <field name="criteria_id" invisible="1"/>
                                        <field name="criteria_type" invisible="1"/>
                                        <field name="max_score_point" invisible="1"/>

                                        <field name="criteria_name"
                                               string="Tiêu chí"
                                               readonly="1"
                                               force_save="1"/>

                                        <field name="score_point"
                                               string="Số điểm"
                                               required="1"
                                               decoration-danger="score_point &gt; max_score_point"
                                               decoration-warning="score_point == 0"
                                               attrs="{'readonly': ['|', ('parent.is_locked', '=', True), ('parent.view_readonly', '=', True)]}"/>
                                    </list>
                                </field>

                                <group class="oe_subtotal_footer oe_right">
                                    <field name="total_score" readonly="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>

                    <footer>
                        <button name="action_submit_scores"
                                string="Lưu điểm chấm"
                                type="object"
                                class="btn-primary"
                                attrs="{'invisible': ['|', ('is_locked', '=', True), ('view_readonly', '=', True)]}"/>

                        <button name="action_lock_scores"
                                string="Chốt điểm"
                                type="object"
                                class="btn-secondary"
                                attrs="{'invisible': ['|', ('is_locked', '=', True), ('view_readonly', '=', True)]}"
                                confirm="Bạn chắc chắn muốn chốt điểm cho người này?"/>

                        <button name="action_back_to_management"
                                string="Quay lại"
                                type="object"
                                class="btn-secondary"/>

                    </footer>
                </form>
            </field>
        </record>

        <!-- Evaluators Management Wizard Form - Chỉ hiển thị người chưa chấm điểm -->
        <record id="view_ngsc_innovation_evaluators_management_wizard_form" model="ir.ui.view">
            <field name="name">ngsc.innovation.evaluators.management.wizard.form</field>
            <field name="model">ngsc.innovation.evaluators.management.wizard</field>
            <field name="arch" type="xml">
                <form string="Quản lý chấm điểm - Hội đồng đánh giá">
                    <sheet>
                        <div class="oe_title">
                            <h1>Quản lý chấm điểm cho hội đồng đánh giá</h1>
                        </div>

                        <group>
                            <field name="idea_id" readonly="1"/>
                            <field name="version_id" readonly="1"/>
                        </group>

                        <!-- Chỉ hiển thị danh sách thành viên chưa chấm điểm -->
                        <group string="Danh sách thành viên chưa chấm điểm">
                            <field name="evaluator_line_ids" nolabel="1" domain="[('has_scores', '=', False)]">
                                <list create="false" edit="false" delete="false" decoration-danger="1">
                                    <!-- Tên người chấm -->
                                    <field name="evaluator_name" string="Người chấm" width="250px"/>

                                    <!-- Icon trạng thái -->
                                    <field name="status_icon" string="Trạng thái" widget="html" width="150px"/>

                                    <!-- Button Chấm điểm - chỉ hiển thị cho người chưa chấm điểm -->
                                    <button name="action_score_for_this_evaluator"
                                            string="Chấm điểm"
                                            type="object"
                                            class="oe_highlight"
                                            width="120px"
                                            help="Chấm điểm thay cho thành viên này"/>

                                    <!-- Fields ẩn để tính toán -->
                                    <field name="evaluator_id" invisible="1"/>
                                    <field name="has_scores" invisible="1"/>
                                    <field name="is_locked" invisible="1"/>
                                    <field name="status_display" invisible="1"/>
                                </list>
                            </field>
                        </group>
                    </sheet>

                    <footer>
                        <button string="Đóng"
                                class="btn-secondary"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Actions -->
        <record id="action_ngsc_innovation_ttnb_scoring_wizard" model="ir.actions.act_window">
            <field name="name">Chấm điểm thay - TTNB</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ngsc.innovation.ttnb.scoring.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="action_ngsc_innovation_evaluators_management_wizard" model="ir.actions.act_window">
            <field name="name">Quản lý chấm điểm - Hội đồng</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ngsc.innovation.evaluators.management.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>