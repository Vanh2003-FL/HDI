<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="access_group_nonproject_resource_planning_gdkndu" model="ir.rule">
            <field name="name">Giám đốc Trung Tâm NDU Quyền Xem/Sửa các bản ghi trong danh sách kế hoạch phân bổ nguồn lực thuộc Trung tâm</field>
            <field name="model_id" ref="ngsc_nonproject_resource.model_ngsc_nonproject_resource_planning"/>
            <field name="groups" eval="[(4, ref('ngsd_base.group_new_gdkndu'))]"/>
            <field name="domain_force">[('department_id', '=', user.employee_id.department_id.id)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="access_group_nonproject_resource_planning_gdtt" model="ir.rule">
            <field name="name">Giám đốc Khối Xem/Sửa các bản ghi trong danh sách kế hoạch phân bổ nguồn lực thuộc Trung tâm</field>
            <field name="model_id" ref="ngsc_nonproject_resource.model_ngsc_nonproject_resource_planning"/>
            <field name="groups" eval="[(4, ref('ngsd_base.group_tk'))]"/>
            <field name="domain_force">[('department_id.block_id', '=', user.employee_id.en_block_id.id)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="access_group_nonproject_resource_planning_qam_bod_adm" model="ir.rule">
            <field name="name">QAM, BOD, Admin Quyền Tạo/Sửa/Xóa các bản ghi trong danh sách kế hoạch phân bổ nguồn lực</field>
            <field name="model_id" ref="ngsc_nonproject_resource.model_ngsc_nonproject_resource_planning"/>
            <field name="groups" eval="[(4, ref('ngsd_base.group_qam')), (4, ref('ngsd_base.group_ngs_board_of_directors'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

    </data>
</odoo>