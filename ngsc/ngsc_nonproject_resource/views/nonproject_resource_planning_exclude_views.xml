<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="nonproject_resource_planning_exclude_view_tree" model="ir.ui.view">
            <field name="name">nonproject.resource.planning.exclude.view.tree</field>
            <field name="model">nonproject.resource.planning.exclude</field>
            <field name="arch" type="xml">
                <list string="Loại trừ phân bổ nguồn lực ngoài dự án" sample="1">
                    <field name="state_ids" widget="many2many_tags"/>
                    <field name="department_ids" widget="many2many_tags"/>
                    <field name="exclude_employee_ids" widget="many2many_tags"/>
                    <field name="create_uid"/>
                    <field name="note"/>
                </list>
            </field>
        </record>

        <record id="nonproject_resource_planning_exclude_view_form" model="ir.ui.view">
            <field name="name">nonproject.resource.planning.exclude.view.form</field>
            <field name="model">nonproject.resource.planning.exclude</field>
            <field name="arch" type="xml">
                <form string="Loại trừ phân bổ nguồn lực ngoài dự án">
                    <sheet>
                        <group>
                            <group>
                                <field name="state_ids" options="{'no_create': True}" widget="many2many_tags"/>
                                <field name="department_ids" options="{'no_create': True}" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="create_uid" readonly="1" force_save="1"/>
                                <field name="note" placeholder="Ghi chú..."/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Danh sách nhân sự loại trừ">
                                <button name="action_add_exclude_employee" type="object"
                                        class="btn btn-secondary"
                                        icon="fa-plus" style="margin-left: 5px;margin-bottom: 5px;"
                                        string="Thêm nhanh"/>
                                <button name="action_remove_exclude_employee" type="object"
                                        class="btn btn-secondary"
                                        icon="fa-trash-o" style="margin-left: 5px;margin-bottom: 5px;"
                                        string="Xóa nhanh" attrs="{'invisible':[('exclude_employee_ids','=',[])]}"/>
                                <field name="exclude_employee_ids" options="{'no_create': True}">
                                    <list editable="bottom">
                                        <field name="employee_id" options="{'no_create': True, 'search_more': True}"
                                               domain="[('en_internal_ok', '=', True)]"/>
                                        <field name="barcode"/>
                                        <field name="work_email"/>
                                        <field name="state_hr_employee"/>
                                        <field name="en_block_id"/>
                                        <field name="department_id"/>
                                        <field name="en_department_id"/>
                                        <field name="en_status_hr"/>
                                        <field name="date_from"/>
                                        <field name="date_to"/>
                                    </list>
                                    <form create="0" edit="0" delete="0">
                                        <sheet>
                                            <group>
                                                <field name="employee_id"/>
                                                <field name="state_hr_employee"/>
                                                <field name="barcode"/>
                                                <field name="job_title"/>
                                                <field name="work_email"/>
                                                <field name="en_block_id"/>
                                                <field name="department_id"/>
                                                <field name="en_department_id"/>
                                                <field name="en_status_hr"/>
                                                <field name="date_from"/>
                                                <field name="date_to"/>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/><field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="nonproject_resource_planning_exclude_act_window" model="ir.actions.act_window">
            <field name="name">Loại trừ phân bổ nguồn lực ngoài dự án</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">nonproject.resource.planning.exclude</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>