<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="nonproject_resource_planning_view_tree" model="ir.ui.view">
            <field name="name">nonproject.resource.planning.view.tree</field>
            <field name="model">ngsc.nonproject.resource.planning</field>
            <field name="arch" type="xml">
                <list string="Kế hoạch nguồn lực ngoài dự án" sample="1">
                    <field name="department_id"/>
                    <field name="create_date" string="Ngày tạo"/>
                    <field name="month_display"/>
                    <field name="total_md"/>
                    <field name="total_mm"/>
                    <field name="state" widget="badge"
                           decoration-success="state == 'active'"
                           decoration-muted="state == 'inactive'"/>
                </list>
            </field>
        </record>

        <record id="nonproject_resource_planning_view_form" model="ir.ui.view">
            <field name="name">nonproject.resource.planning.view.form</field>
            <field name="model">ngsc.nonproject.resource.planning</field>
            <field name="arch" type="xml">
                <form string="Kế hoạch nguồn lực ngoài dự án"
                      show_edit="state == 'active'">
                    <header>
                        <button name="action_view_resource_info" type="object" string="Thông tin nguồn lực tổng"/>
                        <button name="action_refresh_resource_planing_detail" type="object" string="Làm mới"
                                class="btn-primary"
                                attrs="{'invisible': [('state', '=', 'inactive')]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="month_display" readonly="1" force_save="1"/>
                            </group>
                            <group>
                                <field name="department_id" readonly="1" force_save="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="planing_detail" string="Chi tiết nguồn lực">
                                <field name="planning_line_ids">
                                    <list editable="bottom">
                                        <field name="employee_id" readonly="1" force_save="1"/>
                                        <field name="work_email"/>
                                        <field name="project_workload" widget="percentage"
                                               options="{'tooltip_field': 'workload_project_description'}"/>
                                        <field name="daily_workload" widget="percentage"/>
                                        <field name="support_workload" widget="percentage"/>
                                        <field name="presale_workload" widget="percentage"/>
                                        <field name="support_project_workload" widget="percentage"/>
                                        <field name="total_workload" widget="percentage"/>
                                        <field name="total_md"/>
                                        <field name="total_mm"/>
                                        <field name="workload_project_description" invisible="1"/>
                                    </list>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="employee_id" readonly="1" force_save="1"/>
                                                    <field name="work_email"/>
                                                </group>
                                                <group>
                                                    <field name="project_workload"/>
                                                    <field name="daily_workload"/>
                                                    <field name="support_workload"/>
                                                    <field name="presale_workload"/>
                                                    <field name="support_project_workload"/>
                                                    <field name="total_workload"/>
                                                    <field name="total_md"/>
                                                    <field name="total_mm"/>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                                <group class="oe_left" style="margin-left: 5px;" colspan="2" name="mm_total">
                                    <field name="total_md"/>
                                    <field name="total_mm"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="nonproject_resource_planning_search_view_search" model="ir.ui.view">
            <field name="name">nonproject.resource.planning.view.search</field>
            <field name="model">ngsc.nonproject.resource.planning</field>
            <field name="arch" type="xml">
                <search string="Kế hoạch nguồn lực ngoài dự án">
                    <field name="department_id"/>
                    <separator/>
                    <filter name="this_month" string="Tháng hiện tại"
                            domain="[
                                '&amp;',
                                ('date', '&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),
                                ('date', '&lt;=', (context_today() + relativedelta(months=1, day=1, days=-1)).strftime('%Y-%m-%d')),
                            ]"/>
                    <filter name="last_month" string="Tháng trước"
                            domain="['&amp;',
                            	('date','&lt;=', (context_today() + relativedelta(months=-1, day=31, days=0)).strftime('%Y-%m-%d')),
                            	('date','&gt;=', (context_today() + relativedelta(months=-1, day=1, days=0)).strftime('%Y-%m-%d'))]"/>
                    <separator/>
                    <filter name="this_year" string="Năm hiện tại"
                            domain="[('date','&lt;=', time.strftime('%%Y-12-31')),('date','&gt;=',time.strftime('%%Y-01-01'))]"/>
                    <filter name="last_year" string="Năm trước"
                            domain="[('date', '&gt;=', (context_today()-relativedelta(years=1)).strftime('%Y-01-01')),('date','&lt;', time.strftime('%Y-01-01'))]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_department_id"
                                string="Trung tâm"
                                context="{'group_by': 'department_id'}"/>
                    </group>
                    <searchpanel>
                        <field name="department_id" enable_counters="1"/>
                    </searchpanel>
                </search>
            </field>
        </record>

        <record id="nonproject_resource_planning_act_window" model="ir.actions.act_window">
            <field name="name">Kế hoạch nguồn lực ngoài dự án</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ngsc.nonproject.resource.planning</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_this_month': 1}</field>
        </record>
    </data>
</odoo>