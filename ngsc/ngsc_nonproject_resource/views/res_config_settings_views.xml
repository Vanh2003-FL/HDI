<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ngsc_nonproject_resource_res_config_settings" model="ir.ui.view">
            <field name="name">ngsc.nonproject.resource.res.config.settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='employees_setting_container']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box" id="workload_control_setting"
                         title="Quản lý Workload">
                        <div class="o_setting_right_pane">
                            <label for="maximum_workload"/>
                            <div class="text-muted" name="maximum_workload_help">
                                Thiết lập % Workload tối đa đa của mỗi nhân sự.
                            </div>
                            <div>
                                <field name="maximum_workload"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>