<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ngsc_hr_performance_evaluation_ir_rule_01" model="ir.rule">
            <field name="name">Đánh giá hiệu suất: Nhân viên chỉ xem của mình</field>
            <field name="model_id" ref="model_ngsc_hr_performance_evaluation"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="ngsc_hr_performance_evaluation_ir_rule_02" model="ir.rule">
            <field name="name">Đánh giá hiệu suất: QL trực tiếp/ QL gián tiếp xem/sửa của nhân viên mình quản lý</field>
            <field name="model_id" ref="model_ngsc_hr_performance_evaluation"/>
            <field name="domain_force">['|',('direct_manager_id', '=', user.id),('indirect_manager_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="ngsc_hr_performance_evaluation_ir_rule_03" model="ir.rule">
            <field name="name">Đánh giá hiệu suất: QTV thao tác tất cả</field>
            <field name="model_id" ref="model_ngsc_hr_performance_evaluation"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>

        <record id="ngsc_hr_performance_evaluation_ir_rule_04" model="ir.rule">
            <field name="name">Đánh giá hiệu suất: Nhân sự xem tất cả</field>
            <field name="model_id" ref="model_ngsc_hr_performance_evaluation"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="groups" eval="[(6, 0, [ref('hr.group_hr_manager')])]"/>
        </record>

        <record id="ngsc_hr_performance_evaluation_ir_rule_05" model="ir.rule">
            <field name="name">Đánh giá hiệu suất: Nhân sự HCM xem của khu vực HCM</field>
            <field name="model_id" ref="model_ngsc_hr_performance_evaluation"/>
            <field name="domain_force">[('employee_id.en_area_id', '=', user.employee_id.en_area_id.id)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="groups" eval="[(4, ref('ngsd_base.group_cbf_hcm'))]"/>
        </record>
    </data>
</odoo>