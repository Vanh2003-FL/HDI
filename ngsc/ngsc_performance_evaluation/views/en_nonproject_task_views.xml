<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ngsc_performance_evaluation_inherit_en_nonproject_task_form" model="ir.ui.view">
            <field name="name">ngsc.performance.evaluation.inherit.en.nonproject.task.form</field>
            <field name="model">en.nonproject.task</field>
            <field name="inherit_id" ref="ngsd_base.en_nonproject_task_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="evaluation" string="Đánh giá">
                        <field name="nonproject_task_evaluation_ids">
                            <list editable="bottom">
                                <field name="month_evaluation"/>
                                <field name="date_confirm" readonly="1" force_save="1"/>
                                <field name="reviewer_id" widget="many2one_avatar_user"/>
                                <field name="evaluation" required="1" class="o_text_align_center"
                                       attrs="{'readonly': ['|', '|', ('is_reviewer', '=', False),('state', '=', 'evaluated'),('is_locked', '=', True)]}"/>
                                <field name="state" readonly="1" force_save="1" widget="badge"
                                       decoration-muted="state == 'not_evaluated'"
                                       decoration-success="state == 'evaluated'"/>
                                <field name="date_start" invisible="1"/>
                                <field name="date_end" invisible="1"/>
                                <field name="hour_actual" invisible="1" sum="Tổng"/>
                                <field name="is_reviewer" invisible="1"/>
                                <field name="is_locked" invisible="1"/>
                                <field name="datetime_locked" invisible="1"/>
                                <button name="action_confirm"
                                        class="btn-primary"
                                        icon="fa-check"
                                        attrs="{'invisible': ['|', '|', ('is_reviewer', '=', False),('state', '=', 'evaluated'),('is_locked', '=', True)]}"
                                        confirm="Bạn có chắc chắn muốn xác nhận đánh giá?"
                                        type="object" string="Xác nhận đánh giá"/>
                            </list>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="ngsc_performance_evaluation_nonproject_task_search_view" model="ir.ui.view">
            <field name="name">ngsc.performance.evaluation.nonproject.task.search.view</field>
            <field name="model">en.nonproject.task</field>
            <field name="inherit_id" ref="ngsd_base.en_nonproject_task_search"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <filter name="not_evaluation_this_month" string="Tháng hiện tại: Chưa đánh giá"
                            domain="[('date_evaluation', '=', context_today().strftime('%%Y-%%m-01'))]"/>
                    <filter name="not_evaluation_last_month" string="Tháng trước: Chưa đánh giá"
                            domain="[('date_evaluation', '=', (context_today() - relativedelta(months=1)).strftime('%%Y-%%m-01'))]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>