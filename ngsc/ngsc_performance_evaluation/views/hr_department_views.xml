<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ngsc_performance_evaluation_hr_department_view_tree" model="ir.ui.view">
            <field name="name">ngsc.performance.evaluation.hr.department.view.tree</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="ngsd_base.view_department_tree_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="activity_type"/>
                </xpath>
            </field>
        </record>

        <record id="ngsc_performance_evaluation_hr_department_view_form" model="ir.ui.view">
            <field name="name">ngsc.performance.evaluation.hr.department.view.form</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="ngsd_base.view_department_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="after">
                    <field name="activity_type"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>