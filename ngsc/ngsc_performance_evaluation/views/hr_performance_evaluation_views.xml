<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_performance_evaluation_view_tree" model="ir.ui.view">
            <field name="name">hr.performance.evaluation.view.tree</field>
            <field name="model">ngsc.hr.performance.evaluation</field>
            <field name="arch" type="xml">
                <list string="Đánh giá hiệu suất" sample="1" editable="bottom"
                      class="o_list_view_performance_evaluation">
                    <header>
                        <button name="action_to_approve" type="object" string="Gửi duyệt" icon="fa-paper-plane"
                                class="btn-primary o_performance_evaluation_to_approve"/>
                        <button name="action_again_approve" type="object" string="Đánh giá lại" icon="fa-times"
                                class="o_performance_evaluation_again_approve"/>
                        <button name="action_approve" type="object" string="Phê duyệt" icon="fa-check"
                                class="btn-primary o_performance_evaluation_approve"/>
                        <!--                        <button name="action_reject" type="object" string="Từ chối" icon="fa-times"-->
                        <!--                                class="o_performance_evaluation_reject"/>-->
                        <button name="action_again_approve" type="object" string="Từ chối" icon="fa-times"
                                class="o_performance_evaluation_reject"/>
                    </header>
                    <button name="action_open_record" string="" type="object" icon="fa-external-link"
                            title="Xem chi tiết bản ghi"/>
                    <field name="work_email"/>
                    <field name="user_id" widget="many2one_avatar_user" string="Nhân viên"/>
                    <field name="direct_manager_id" widget="many2one_avatar_user" string="QLTT" readonly="1"
                           force_save="1"/>
                    <field name="month_display" class="o_text_align_center"/>
                    <field name="department_id" readonly="1" force_save="1"/>
                    <field name="number_of_tasks" class="o_text_align_center"/>
                    <field name="volume_evaluation_display" class="o_text_align_center"/>
                    <field name="quality_evaluation_display" class="o_text_align_center"/>
                    <field name="attitude_evaluation" class="o_text_align_center"
                           attrs="{'readonly': ['|',('approval_state', '!=', 'direct_manager'),('is_direct_manager', '=', False)]}"/>
                    <field name="performance_evaluation" class="o_text_align_center"
                           attrs="{'invisible': [('performance_evaluation', '=', 0)]}"/>
                    <field name="rank" class="o_text_align_center"/>
                    <field name="state" widget="badge"
                           decoration-info="state == 'new'"
                           decoration-primary="state == 'evaluated_again'"
                           decoration-warning="state == 'to_approve'"
                           decoration-success="state == 'approved'"
                           decoration-muted="state == 'rejected'"/>
                    <button name="action_to_approve" type="object" string="Gửi duyệt" icon="fa-paper-plane"
                            attrs="{'invisible': ['|',('state', 'not in', ['new']),('is_direct_manager','=',False)]}"/>
                    <button name="action_again_approve" type="object" string="Đánh giá lại" icon="fa-times"
                            attrs="{'invisible': ['|',('state', 'not in', ['new']),('is_direct_manager','=',False)]}"/>
                    <button name="action_approve" type="object" string="Phê duyệt" icon="fa-check"
                            attrs="{'invisible': ['|',('state', '!=', 'to_approve'),('is_indirect_manager','=',False)]}"/>
                    <!--                    <button name="action_reject" type="object" string="Từ chối" icon="fa-times"-->
                    <!--                            attrs="{'invisible': ['|',('state', '!=', 'to_approve'),('is_indirect_manager','=',False)]}"/>-->
                    <button name="action_again_approve" type="object" string="Từ chối" icon="fa-times"
                            attrs="{'invisible': ['|',('state', '!=', 'to_approve'),('is_indirect_manager','=',False)]}"/>
                    <field name="approval_state" invisible="1"/>
                    <field name="is_direct_manager" invisible="1"/>
                    <field name="is_indirect_manager" invisible="1"/>
                </list>
            </field>
        </record>

        <record id="hr_performance_evaluation_view_form" model="ir.ui.view">
            <field name="name">hr.performance.evaluation.view.form</field>
            <field name="model">ngsc.hr.performance.evaluation</field>
            <field name="arch" type="xml">
                <form string="Đánh giá hiệu suất"
                      show_edit="is_direct_manager and approval_state == 'direct_manager'">
                    <header>
                        <button name="action_to_approve" type="object" string="Gửi duyệt" class="btn-primary"
                                attrs="{'invisible': ['|',('approval_state', '!=', 'direct_manager'),('is_direct_manager', '=', False)]}"/>
                        <button name="action_approve" type="object" string="Phê duyệt" class="btn-primary"
                                attrs="{'invisible': ['|',('approval_state', '!=', 'indirect_manager'),('is_indirect_manager', '=', False)]}"/>
                        <button name="action_again_approve" type="object" string="Từ chối"
                                attrs="{'invisible': ['|',('approval_state', '!=', 'indirect_manager'),('is_indirect_manager', '=', False)]}"/>
                        <field name="approval_state" widget="statusbar"/>
                        <field name="is_direct_manager" invisible="1"/>
                        <field name="is_indirect_manager" invisible="1"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Đặc biệt Xuất Sắc" bg_color="bg-primary"
                                attrs="{'invisible': [('rank', '!=', 'S')]}"/>
                        <widget name="web_ribbon" title="Xuất Sắc" bg_color="bg-primary"
                                attrs="{'invisible': [('rank', '!=', 'A0')]}"/>
                        <widget name="web_ribbon" title="Tốt" bg_color="bg-info"
                                attrs="{'invisible': [('rank', '!=', 'A1')]}"/>
                        <widget name="web_ribbon" title="Khá" bg_color="bg-danger"
                                attrs="{'invisible': [('rank', '!=', 'B')]}"/>
                        <widget name="web_ribbon" title="Trung Bình" bg_color="bg-danger"
                                attrs="{'invisible': [('rank', '!=', 'C')]}"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="work_email"/>
                                <field name="employee_id" string="Tên nhân viên" readonly="1"/>
                                <field name="en_block_id" readonly="1"/>
                                <field name="department_id" readonly="1"/>
                                <field name="en_department_id" readonly="1"/>
                                <field name="month_display"/>
                            </group>
                            <group>
                                <field name="volume_evaluation_display"/>
                                <field name="quality_evaluation_display"/>
                                <field name="attitude_evaluation"/>
                                <field name="performance_evaluation"/>
                                <field name="rank" style="font-weight: bold;"/>
                                <field name="hour_planned" invisible="1"/>
                                <field name="hour_actual" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="tasks" string="Công việc">
                                <field name="evaluation_task_ids" readonly="1">
                                    <list editable="bottom" decoration-danger="hour_actual == 0">
                                        <field name="name"/>
                                        <field name="en_task_type"/>
                                        <field name="project_id"/>
                                        <field name="user_id"/>
                                        <field name="date_start"/>
                                        <field name="date_end"/>
                                        <field name="hour_actual" sum="Tổng"/>
                                        <field name="hour_actual_resource" sum="Tổng"/>
                                        <field name="evaluation" class="o_text_align_center"/>
                                    </list>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="name"/>
                                                    <field name="en_task_type"
                                                           attrs="{'invisible': [('en_task_type', '=', False)]}"/>
                                                    <field name="project_id"
                                                           attrs="{'invisible': [('project_id', '=', False)]}"/>
                                                    <field name="user_id"/>
                                                    <field name="evaluation"/>
                                                </group>
                                                <group>
                                                    <field name="date_start"/>
                                                    <field name="date_end"/>
                                                    <field name="hour_actual"/>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page name="note" string="Ghi chú">
                                <field name="note"/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/><field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_performance_evaluation_search_view_search" model="ir.ui.view">
            <field name="name">hr.performance.evaluation.search.view.search</field>
            <field name="model">ngsc.hr.performance.evaluation</field>
            <field name="arch" type="xml">
                <search string="Đánh giá hiệu suất">
                    <field name="name" string="Tất cả"
                           filter_domain="['|', '|', '|',('work_email', 'ilike', self), ('user_id', 'ilike', self), ('department_id', 'ilike', self), ('direct_manager_id', 'ilike', self)]"/>
                    <field name="work_email"/>
                    <field name="user_id" string="Nhân viên"/>
                    <field name="direct_manager_id" string="QLTT"/>
                    <field name="department_id"/>
                    <separator/>
                    <filter name="last_month" string="Tháng trước"
                            domain="['&amp;',
                            	('date','&lt;=', (context_today() + relativedelta(months=-1, day=31, days=0)).strftime('%Y-%m-%d')),
                            	('date','&gt;=', (context_today() + relativedelta(months=-1, day=1, days=0)).strftime('%Y-%m-%d'))]"/>
                    <separator/>
                    <filter name="this_year" string="Năm hiện tại"
                            domain="[('date','&lt;=', time.strftime('%%Y-12-31')),('date','&gt;=',time.strftime('%%Y-01-01'))]"/>
                    <filter name="last_year" string="Năm trước"
                            domain="[('date', '&gt;=', (context_today()-relativedelta(years=1)).strftime('%Y-01-01')),('date','&lt;', time.strftime('%Y-01-01'))]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_direct_manager_id"
                                string="Quản lý trực tiếp"
                                context="{'group_by': 'direct_manager_id'}"/>
                        <filter name="group_by_indirect_manager_id"
                                string="Quản lý gián tiếp"
                                context="{'group_by': 'indirect_manager_id'}"/>

                    </group>
                    <searchpanel>
                        <field name="state" icon="fa-filter" enable_counters="1"/>
                        <field name="unit_id" icon="fa-users" enable_counters="1"/>
                    </searchpanel>
                </search>
            </field>
        </record>

        <record id="hr_performance_evaluation_of_me_search_view_search" model="ir.ui.view">
            <field name="name">hr.performance.evaluation.search.view.search</field>
            <field name="model">ngsc.hr.performance.evaluation</field>
            <field name="arch" type="xml">
                <search string="Đánh giá hiệu suất">
                    <field name="name" string="Tất cả"
                           filter_domain="['|', '|', '|',('work_email', 'ilike', self), ('user_id', 'ilike', self), ('department_id', 'ilike', self), ('direct_manager_id', 'ilike', self)]"/>
                    <field name="work_email"/>
                    <field name="user_id"/>
                    <field name="department_id"/>
                    <filter name="this_year" string="Năm hiện tại"
                            domain="[('date','&lt;=', time.strftime('%%Y-12-31')),('date','&gt;=',time.strftime('%%Y-01-01'))]"/>
                    <filter name="last_year" string="Năm trước"
                            domain="[('date', '&gt;=', (context_today()-relativedelta(years=1)).strftime('%Y-01-01')),('date','&lt;', time.strftime('%Y-01-01'))]"/>
                    <separator/>
                    <filter name="last_month" string="Tháng trước"
                            domain="['&amp;',
                            	('date','&lt;=', (context_today() + relativedelta(months=-1, day=31, days=0)).strftime('%Y-%m-%d')),
                            	('date','&gt;=', (context_today() + relativedelta(months=-1, day=1, days=0)).strftime('%Y-%m-%d'))]"/>
                </search>
            </field>
        </record>

        <record id="hr_performance_evaluation_act_window" model="ir.actions.act_window">
            <field name="name">Đánh giá hiệu suất</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ngsc.hr.performance.evaluation</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_last_month': 1}</field>
            <field name="search_view_id" ref="hr_performance_evaluation_search_view_search"/>
        </record>

        <record id="hr_performance_evaluation_of_me_act_window" model="ir.actions.act_window">
            <field name="name">Đánh giá hiệu suất của tôi</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ngsc.hr.performance.evaluation</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_last_month': 1}</field>
            <field name="domain">[('employee_id.user_id', '=', uid)]</field>
            <field name="search_view_id" ref="hr_performance_evaluation_of_me_search_view_search"/>
        </record>
    </data>
</odoo>