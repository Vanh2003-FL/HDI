<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_performance_evaluation_report" model="ir.actions.client">
        <field name="name">Báo cáo đánh giá hiệu suất</field>
<!--        <field name="tag">performance_evaluation_report</field>-->
        <field name="tag">account_report</field>
        <field name="context" eval="{'model': 'performance.evaluation.report'}"/>
    </record>

    <record id="performance_evaluation_report_wizard_form" model="ir.ui.view">
        <field name="model">performance.evaluation.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="block_ids" widget="many2many_tags" />
                        <field name="department_ids" widget="many2many_tags"/>
                        <field name="employee_ids" widget="many2many_tags" domain="[('department_id', 'in', department_ids)]"/>
                        <field name="period"/>
                    </group>
                    <group attrs="{'invisible': [('period', '!=', 'optional')]}">
                        <label for="date_from" string="Thời gian"/>
                        <div class="o_row">
                            <field name="date_from" nolabel="1"/>
                            <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                            <field name="date_to" nolabel="1"/>
                        </div>
                    </group>
                </sheet>
                <footer>
                    <button string='Xác nhận' name="do" type="object" class="oe_highlight"/>
                    <button string="Hủy" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="performance_evaluation_wizard_act" model="ir.actions.act_window">
        <field name="res_model">performance.evaluation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="menu_performance_evaluation_report" model="ir.ui.menu">
        <field name="name">Báo cáo đánh giá hiệu suất</field>
        <field name="action" ref="performance_evaluation_wizard_act"/>
        <field name="sequence">31</field>
    </record>
</odoo>
