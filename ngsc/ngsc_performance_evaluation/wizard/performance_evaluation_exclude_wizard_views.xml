<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="performance_evaluation_add_wizard_view_form" model="ir.ui.view">
            <field name="name">performance.evaluation.exclude.wizard</field>
            <field name="model">performance.evaluation.exclude.wizard</field>
            <field name="arch" type="xml">
                <form string="Thêm nhân sự loại trừ">
                    <sheet>
                        <group>
                            <field name="add_employee_ids" widget="many2many_tags" required="1"
                                   options="{'search_more': True,'no_create': True}"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_add" type="object" string="Đồng ý" class="btn btn-primary"/>
                        <button special="cancel" string="Hủy bỏ"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="performance_evaluation_exclude_wizard_view_form" model="ir.ui.view">
            <field name="name">performance.evaluation.exclude.wizard</field>
            <field name="model">performance.evaluation.exclude.wizard</field>
            <field name="arch" type="xml">
                <form string="Loại bỏ nhân sự">
                    <sheet>
                        <group>
                            <field name="exclude_employee_ids" widget="many2many_tags" required="1"
                                   options="{'search_more': True,'no_create': True}"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_remove" type="object" string="Đồng ý" class="btn btn-primary"/>
                        <button special="cancel" string="Hủy bỏ"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>