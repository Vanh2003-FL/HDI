<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="remind_evaluation_wizard_view_form" model="ir.ui.view">
            <field name="name">remind.evaluation.wizard</field>
            <field name="model">remind.evaluation.wizard</field>
            <field name="arch" type="xml">
                <form string="Nhắc nhở hoàn thành đánh giá">
                    <sheet>
                        <group>
                            <field name="evaluation_type" invisible="1"/>
                            <field name="deadline"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_remind_evaluation" type="object" string="Đồng ý" class="btn btn-primary"/>
                        <button special="cancel" string="Hủy bỏ"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>