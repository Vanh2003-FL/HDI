<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="project_decision_form" model="ir.ui.view">
        <field name="model">project.decision</field>
        <field name="arch" type="xml">
            <form create="1" duplicate="0">
                <header>
                    <field name="en_state" invisible="1"/>
                    <field name="sent_ok" invisible="1"/>
                    <field name="approve_ok" invisible="1"/>
                    <field name="technical_field_27768" invisible="1"/>
                    <button string="Tạo phiên bản mới" groups="ngsd_base.group_pm,ngsd_base.group_vpm" type="object" name="button_new_version_project_decision" attrs="{'invisible':[('technical_field_27768','=',False)]}"/>
                    <button string="Gửi duyệt" class="oe_read_only" groups="ngsd_base.group_pm,ngsd_base.group_vpm" type="object" name="button_sent" attrs="{'invisible':['|',('state','!=','draft'),('sent_ok','=',False)]}"/>
                    <button string="Duyệt" class="oe_read_only" type="object" name="button_approved" attrs="{'invisible':['|',('state','!=','to_approve'),('approve_ok','=',False)]}"/>
                    <button string="Từ chối" class="oe_read_only" type="object" name="button_refused" attrs="{'invisible':['|',('state','!=','to_approve'),('approve_ok','=',False)]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group string="Thông tin dự án">
                            <field name="project_id" force_save="1" readonly="1"/>
                            <field name="is_internal" force_save="1" readonly="1"/>
                            <field name="en_level_project" force_save="1" readonly="1"/>
                            <field name="en_area_id" force_save="1" readonly="1"/>
                            <field name="en_department_id" force_save="1" readonly="1"/>
                            <field name="en_project_type_id" force_save="1" readonly="1"/>
                            <field name="en_list_project_id" force_save="1" readonly="1"/>
                            <field name="en_project_model_id" force_save="1" readonly="1"/>
<!--                            <field name="date_start" widget="daterange" options="{&quot;related_start_date&quot;: &quot;date_start&quot;}"/>-->
                            <label for="date_start" string="Ngày" force_save="1" readonly="1"/>
                            <div name="dates" class="o_row">
                                <field name="date_start" widget="daterange" options="{&quot;related_end_date&quot;: &quot;date&quot;}" force_save="1" readonly="1"/>
                                <i class="fa fa-long-arrow-right mx-2 oe_edit_only" aria-label="Arrow icon" title="Arrow"/>
<!--                                <i class="fa fa-long-arrow-right mx-2 oe_read_only" aria-label="Arrow icon" title="Arrow" attrs="{'invisible': [('date_start', '=', False), ('date', '=', False)]}"/>-->
                                <field name="date" widget="daterange" options="{&quot;related_start_date&quot;: &quot;date_start&quot;}" force_save="1" readonly="1"/>
                            </div>
                            <field name="en_real_start_date" force_save="1" readonly="1"/>
                            <field name="en_real_end_date" force_save="1" readonly="1"/>
                            <field name="en_warranty_time" force_save="1" readonly="1"/>
                        </group>
                        <group string="Quản lý">
                            <field name="en_project_implementation_id" force_save="1" readonly="1"/>
                            <field name="en_project_manager_id" force_save="1" readonly="1"/>
                            <field name="en_project_block_id" force_save="1" readonly="1"/>
                            <field name="user_id" force_save="1" readonly="1"/>
                            <field name="en_project_vicepm_ids" widget="many2many_avatar_user" force_save="1" readonly="1"/>
                            <field name="en_project_qa_id" force_save="1" readonly="1"/>
                            <field name="en_project_sale_id" force_save="1" readonly="1"/>
                            <field name="en_project_accountant_id" force_save="1" readonly="1"/>
                            <field name="en_contracting_entity" force_save="1" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group string="Thông tin khách hàng" attrs="{'invisible': [('is_internal', '=', True)]}">
                            <field name="en_customer_type_id" force_save="1" readonly="1"/>
                            <field name="name_partner"  force_save="1" readonly="1"/>
                            <field name="en_contract_type_id" force_save="1" readonly="1"/>
                            <field name="en_contract_number" force_save="1" readonly="1"/>
                            <field name="en_branch_id" force_save="1" readonly="1"/>
                            <field name="currency_id" force_save="1" readonly="1"/>
                            <field name="customer_resource_calendar_id" force_save="1" readonly="1"/>
                            <field name="en_no_contract" force_save="1" readonly="1"/>
                            <field name="en_contract_start_date" force_save="1" readonly="1"/>
                            <field name="en_contract_end_date" force_save="1" readonly="1"/>

                        </group>
                        <group string="Thông tin chi tiết">
<!--                            <field name="en_bmm" required="1"/>-->
                            <field name="en_bmm" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="en_md_resource" force_save="1" readonly="1"/>
                            <field name="technical_field_28187" force_save="1" readonly="1"/>
                            <field name="en_resource_id" force_save="1" readonly="1"/>
                            <field name="mm_rate" force_save="1" readonly="1" invisible="1"/>
                            <field name="mm_conversion" force_save="1" readonly="1"/>
                            <field name="en_current_version" force_save="1" readonly="1"/>
                            <field name="en_link_system" force_save="1" readonly="1"/>
                            <field name="reason_for_adjustment" readonly="1"
                                   attrs="{'invisible': [('state', '=', 'approved')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="en_scope_project_page" string="Phạm vi dự án">
                            <table style="table-layout: fixed; width: 100%;">
                                <tbody style="width: 100%;">
                                    <tr style="vertical-align: top;">  <!-- Thêm vertical-align: top -->
                                        <td style="width: 10%; padding-left: 3%; min-width: 120px; word-break: keep-all;">
                                            <span class="o_form_label" style="display: inline-block; white-space: nowrap;">
                                                1. Mục tiêu dự án
                                            </span>
                                        </td>
                                        <td style="width: 50%; padding-right: 20%;">
                                            <field name="en_project_goal"
                                                   force_save="1" readonly="1"
                                                   widget="textarea"
                                                   style="font-style: italic; background-color: #f9f9f9; border-radius: 3px; min-height: 80px;
                                                          white-space: pre-wrap; word-break: break-word; overflow-wrap: anywhere;
                                                          width: 100%; max-width: 100%; box-sizing: border-box;"
                                                   class="oe_form_field_text"/>
                                        </td>
                                    </tr>
                                    <tr style="vertical-align: top;">  <!-- Thêm vertical-align: top -->
                                        <td style="width: 10%; padding-left: 3%; min-width: 120px; word-break: keep-all;">
                                            <span class="o_form_label" style="display: inline-block; white-space: nowrap;">
                                                2. Phạm vi nghiệp vụ
                                            </span>
                                        </td>
                                        <td style="width: 50%; padding-right: 20%;">
                                            <field name="en_business_scope"
                                                   force_save="1" readonly="1"
                                                   widget="textarea"
                                                   style="font-style: italic; background-color: #f9f9f9; border-radius: 3px; min-height: 80px;
                                                          white-space: pre-wrap; word-break: break-word; overflow-wrap: anywhere;
                                                          width: 100%; max-width: 100%; box-sizing: border-box;"
                                                   class="oe_form_field_text"/>
                                        </td>
                                    </tr>
                                    <tr style="vertical-align: top;">  <!-- Thêm vertical-align: top -->
                                        <td style="width: 10%; padding-left: 3%; min-width: 120px; word-break: keep-all;">
                                            <span class="o_form_label" style="display: inline-block; white-space: nowrap;">
                                                3. Phạm vi triển khai
                                            </span>
                                        </td>
                                        <td style="width: 50%; padding-right: 20%;">
                                            <field name="en_implementation_scope"
                                                   force_save="1" readonly="1"
                                                   widget="textarea"
                                                   style="font-style: italic; background-color: #f9f9f9; border-radius: 3px; min-height: 80px;
                                                          white-space: pre-wrap; word-break: break-word; overflow-wrap: anywhere;
                                                          width: 100%; max-width: 100%; box-sizing: border-box;"
                                                   class="oe_form_field_text"/>
                                        </td>
                                    </tr>
                                    <tr style="vertical-align: top;">  <!-- Thêm vertical-align: top -->
                                        <td style="width: 10%; padding-left: 3%; min-width: 120px; word-break: keep-all;">
                                            <span class="o_form_label" style="display: inline-block; white-space: nowrap;">
                                                4. Phạm vi khác
                                            </span>
                                        </td>
                                        <td style="width: 50%; padding-right: 20%;">
                                            <field name="en_other_scope"
                                                   force_save="1" readonly="1"
                                                   widget="textarea"
                                                   style="font-style: italic; background-color: #f9f9f9; border-radius: 3px; min-height: 80px;
                                                          white-space: pre-wrap; word-break: break-word; overflow-wrap: anywhere;
                                                          width: 100%; max-width: 100%; box-sizing: border-box;"
                                                   class="oe_form_field_text"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </page>
                        <page string="Danh sách nhân sự">
                            <field name="en_resource_project_ids" force_save="1" readonly="1">
                                <list readonly="1">
                                    <field name="type_id"/>
                                    <field name="employee_id"/>
                                    <field name="email"/>
                                    <field name="role_ids" widget="many2many_tags"/>
                                    <field name="en_job_position_ids" widget="many2many_tags"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                    <field name="en_state"/>
                                    <field name="date_leave"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="Cam kết tỉ lệ phản hồi/xử lý">
                            <div class="row col-12 col-lg-12">
                                <div class="col-6">
                                    <group string="Cam kết tỉ lệ phản hồi">
                                        <field name="en_response_rate_ids" nolabel="1" force_save="1" readonly="1">
                                            <list editable="bottom">
                                                <field name="start_date" force_save="1" readonly="1"/>
                                                <field name="end_date" force_save="1" readonly="1"/>
                                                <field name="rate" widget="percentage" force_save="1" readonly="1"/>
                                            </list>
                                        </field>
                                    </group>
                                </div>
                                <div class="col-6">
                                    <group string="Cam kết tỉ lệ xử lý">
                                        <field name="en_processing_rate_ids" nolabel="1" readonly="1">
                                            <list editable="bottom">
                                                <field name="start_date" readonly="1"/>
                                                <field name="end_date" readonly="1"/>
                                                <field name="rate" widget="percentage" readonly="1"/>
                                            </list>
                                        </field>
                                    </group>
                                </div>
                            </div>
                        </page>
                        <page string="Thông tin phê duyệt">
                            <group>
                                <group>
                                    <field name="en_request_user_id" readonly="1"/>
                                    <field name="en_next_approver_ids" widget="many2many_tags" readonly="1"/>
                                </group>
                                <group>
                                    <field name="en_request_date" readonly="1"/>
                                </group>
                            </group>
                            <field name="en_approve_line_ids" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="project_decision_tree" model="ir.ui.view">
        <field name="model">project.decision</field>
        <field name="arch" type="xml">
            <list create="0">
                <field name="project_id"/>
                <field name="version_number"/>
            </list>
        </field>
    </record>
    <record id="project_decision_act" model="ir.actions.act_window">
        <field name="res_model">project.decision</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <record id="project_decision_form_create_popup" model="ir.ui.view">
        <field name="model">project.decision</field>
        <field name="inherit_id" ref="project_decision_form"/>
        <field name="mode">primary</field>
        <field name="priority">10000</field>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="class">project_decision_form_create_popup</attribute>
            </xpath>
        </field>
    </record>
</odoo>