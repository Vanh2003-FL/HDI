<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="ngsc_project_en_wbs" model="ir.ui.view">
        <field name="model">en.wbs</field>
        <field name="inherit_id" ref="ngsd_base.wbs_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="button_en_cancel"
                        string="Hủy"
                        type="object"
                        class="btn-secondary"
                        attrs="{'invisible':[('is_cancel_visible','=',False)]}"/>
            </xpath>
            <xpath expr="//field[@name='resource_plan_id']" position="after">
                <field name="is_cancel_visible" invisible="1"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="index_version"
                       attrs="{'readonly':[('is_project_qa','=',False)]}"/>
                <field name="is_project_qa" invisible="1"/>
            </xpath>
             <xpath expr="//field[@name='index_version']" position="after">
                  <label for="en_contract_start_date" string="Thời gian dự kiến theo hợp đồng"/>
                <div>
                    <field name="en_contract_start_date" />
                    <span> → </span>
                    <field name="en_contract_end_date"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='resource_plan_id']" position="replace">
                <field name="resource_planning_link_wbs" domain="[('project_id', '=', project_id)]"
                       readonly="1" force_save="1"/>
            </xpath>
        </field>
    </record>
</odoo>