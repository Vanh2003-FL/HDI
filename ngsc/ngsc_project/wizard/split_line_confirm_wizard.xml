<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_split_line_confirm_wizard" model="ir.ui.view">
            <field name="name">split.line.confirm.wizard.form</field>
            <field name="model">split.line.confirm.wizard</field>
            <field name="arch" type="xml">
                <form string="Xác nhận tách dòng nguồn">
                    <sheet>
                        <group>
                            <field name="split_type"
                                   attrs="{'readonly':[('is_after_five_day_of_month','=',True)]}"/>
                            <field name="is_after_five_day_of_month" invisible="1"/>
                        </group>
                        <footer>
                            <button name="action_confirm_split_resource" type="object" string="Đồng ý"
                                    class="btn-primary"/>
                            <button string="Hủy" special="cancel" class="btn-secondary"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>