<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="project_expense_resource_planning_view_form" model="ir.ui.view">
            <field name="name">project.expense.resource.planning.view.form</field>
            <field name="model">en.resource.planning</field>
            <field name="inherit_id" ref="ngsd_base.resource_planning_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group/field[@name='en_bmm']" position="after">
                    <field name="total_budget_expense"/>
                </xpath>
                <xpath expr="//group/field[@name='en_md']" position="after">
                    <field name="total_actual_expense"/>
                    <field name="company_currency" invisible="1"/>
                </xpath>
                <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='en_state']" position="before">
                    <field name="expense"
                           groups="ngsd_base.group_tptc,ngsd_base.group_tpvh,ngsd_base.group_gdkv,ngsd_base.group_tk,ngsd_base.group_pm,ngsd_base.group_tppmo"/>
                    <field name="company_currency" invisible="1"/>
                </xpath>
                <xpath expr="//notebook/page[@name='resource_detail']" position="replace">
                    <page name="resource_detail" string="Chi tiết nguồn lực">
                        <field name="order_line">
                            <list editable="bottom" class="allow_list_copy">
                                <field name="type_id"
                                       options="{'no_open':True,'no_create':True,'no_quick_create':True,'no_create_edit':True}"/>
                                <field name="employee_id"
                                       options="{'no_open':True,'no_create':True,'no_quick_create':True,'no_create_edit':True}"/>
                                <field name="employee_ids" invisible="1"/>
                                <field name="role_ids" invisible="1"/>
                                <field name="job_position_ids" invisible="1"/>
                                <field name="email"/>
                                <field name="role_id"/>
                                <field name="job_position_id"/>
                                <field name="project_stage_id"
                                       options="{'no_open':True,'no_create':True,'no_quick_create':True,'no_create_edit':True}"/>
                                <field name="project_stage_ids" invisible="1"/>
                                <field name="date_start" attrs="{'readonly': [('edit_date_start', '=', False)]}"
                                       force_save="1"/>
                                <field name="date_end" attrs="{'readonly': [('edit_date_end', '=', False)]}"
                                       force_save="1"/>
                                <field name="workload" widget="percentage"
                                       attrs="{'readonly': [('edit_date_end', '=', False)]}"/>
                                <field name="en_md" sum="Tổng" attrs="{'readonly': [('edit_date_end', '=', False)]}"/>
                                <field name="expense" sum="Tổng"
                                       groups="ngsd_base.group_tptc,ngsd_base.group_tpvh,ngsd_base.group_gdkv,ngsd_base.group_tk,ngsd_base.group_pm,ngsd_base.group_tppmo"/>
                                <field name="company_currency" invisible="1"/>
                                <field name="en_state"/>
                                <field name="old_line_id" invisible="1" force_save="1"/>
                                <field name="no_delete_line" invisible="1"/>
                                <field name="edit_date_start" invisible="1"/>
                                <field name="edit_date_end" invisible="1"/>
                                <field name="hours_indate" invisible="1"/>
                                <field name="mm" invisible="1"/>
                            </list>
                        </field>
                        <group>
                            <group>
                                <field name="confirm_user_approved" invisible="1"/>
                                <field name="en_bmm"/>
                                <field name="hours_total" invisible="1"/>
                                <field name="en_md"/>
                                <field name="resource_total" invisible="1"/>
                                <field name="mm_conversion"/>
                                <field name="increase_resource_total" invisible="1"/>
                                <field name="budget_over" widget="percentage"/>
                                <field name="baseline_over" widget="percentage"/>
                            </group>
                            <group>
                                <field name="resource_expense_ids" nolabel="1" style="pointer-events: none;">
                                    <list create="0" edit="0" delete="0">
                                        <field name="stage_id" string=""/>
                                        <field name="project_bmm" string="MM" sum="Tổng"/>
                                        <field name="project_expense" string="Chi phí" sum="Tổng"/>
                                        <field name="planned_bmm" string="MM" sum="Tổng"/>
                                        <field name="planned_expense" string="Chi phí" sum="Tổng"/>
                                        <field name="actual_bmm" string="MM" sum="Tổng"/>
                                        <field name="actual_expense" string="Chi phí" sum="Tổng"/>
                                        <field name="company_currency" invisible="1"/>
                                    </list>
                                </field>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>