<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="project_expense_hr_employee_view_form" model="ir.ui.view">
            <field name="name">project.expense.hr.employee.view.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="ngsd_base.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='personal_information']" position="before">
                    <page string="Lịch sử cấp bậc" attrs="{'invisible': [('is_os', '=', True)]}">
                        <field name="history_level_ids">
                            <list editable="bottom">
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="level_id"/>
                            </list>
                        </field>
                    </page>
                    <page string="Chi phí Outsource" attrs="{'invisible': [('is_os', '=', False)]}">
                        <field name="is_os" invisible="1"/>
                        <field name="os_expense_ids">
                            <list editable="bottom">
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="expense"/>
                                <field name="company_currency" invisible="1"/>
                            </list>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>