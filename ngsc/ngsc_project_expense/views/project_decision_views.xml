<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ngsc_project_expense_project_decision_view_form" model="ir.ui.view">
            <field name="name">ngsc.project.expense.project.decision.view.form</field>
            <field name="model">project.decision</field>
            <field name="inherit_id" ref="ngsc_project.project_decision_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='en_bmm']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//notebook/page[@name='en_scope_project_page']" position="before">
                    <page name="bmm" string="BMM">
                        <separator string="BMM theo giai đoạn"/>
                        <field name="bmm_stage_ids" nolabel="1">
                            <list create="0" edit="0" delete="0" default_order="id asc">
                                <field name="bmm_stage_id"/>
                                <field name="number_of_week" sum="Tổng"/>
                                <field name="date_start" invisible="1"/>
                                <field name="date_end" invisible="1"/>
                                <field name="bmm" sum="Tổng"/>
                                <field name="expense" sum="Tổng" invisible="1"/>
                                <field name="company_currency" invisible="1"/>
                            </list>
                            <form create="0" edit="0" delete="0">
                                <sheet>
                                    <group>
                                        <field name="bmm_stage_id"/>
                                        <field name="number_of_week"/>
                                        <field name="date_start"/>
                                        <field name="date_end"/>
                                        <field name="bmm"/>
                                        <field name="expense" invisible="1"/>
                                        <field name="company_currency" invisible="1"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                        <separator string="BMM theo tháng"/>
                        <field name="bmm_ids" nolabel="1">
                            <list create="0" edit="0" delete="0" default_order="date">
                                <field name="date" invisible="1"/>
                                <field name="month_txt"/>
                                <field name="bmm" sum="Tổng"/>
                                <field name="expense" sum="Tổng" invisible="1"/>
                                <field name="company_currency" invisible="1"/>
                            </list>
                            <form create="0" edit="0" delete="0">
                                <sheet>
                                    <group>
                                        <field name="date" invisible="1"/>
                                        <field name="month_txt"/>
                                        <field name="bmm"/>
                                        <field name="expense" invisible="1"/>
                                        <field name="company_currency" invisible="1"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                         <separator string="BMM theo OS"/>
                        <group>
                            <field name="bmm_os" string="BMM" readonly="1" force_save="1"/>
                            <field name="expense_os" readonly="1" force_save="1" invisible="1"/>
                            <field name="company_currency" invisible="1"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>