<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="project_expense_project_view_form" model="ir.ui.view">
            <field name="name">project.expense.project.view.form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="ngsd_base.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='bmm']" position="replace">
                    <page name="bmm" string="BMM">
                        <separator string="BMM theo giai đoạn"/>
                        <field name="en_bmm_stage_ids" nolabel="1">
                            <list editable="bottom" sample="1" default_order="id asc">
                                <field name="bmm_stage_id" required="True"
                                       options="{'no_create': 1, 'no_create_edit': 1, 'no_quick_create': 1}"/>
                                <field name="number_of_week" required="True" sum="Tổng"/>
                                <field name="date_start" invisible="1"/>
                                <field name="date_end" invisible="1"/>
                                <field name="bmm" required="True" sum="Tổng"/>
                                <field name="expense" sum="Tổng"/>
                                <field name="company_currency" force_save="1" invisible="1"/>
                            </list>
                            <form>
                                <sheet>
                                    <group>
                                        <field name="bmm_stage_id"/>
                                        <field name="number_of_week"/>
                                        <field name="date_start"/>
                                        <field name="date_end"/>
                                        <field name="bmm"/>
                                        <field name="expense"/>
                                        <field name="company_currency" force_save="1" invisible="1"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                        <separator string="BMM theo tháng"/>
                        <field name="en_bmm_ids" nolabel="1">
                            <list editable="bottom" sample="1" create="0" delete="0" default_order="date">
                                <field name="date" force_save="1" invisible="1"/>
                                <field name="month_txt" force_save="1"/>
                                <field name="bmm" force_save="1" sum="Tổng"/>
                                <field name="expense" force_save="1" sum="Tổng"
                                       attrs="{'readonly': [('is_qa', '=', False)]}"/>
                                <field name="company_currency" force_save="1" invisible="1"/>
                                <field name="is_qa" invisible="1"/>
                            </list>
                            <form>
                                <sheet>
                                    <group>
                                        <field name="date" force_save="1" invisible="1"/>
                                        <field name="month_txt" force_save="1"/>
                                        <field name="bmm" force_save="1"/>
                                        <field name="expense" force_save="1"
                                               attrs="{'readonly': [('is_qa', '=', False)]}"/>
                                        <field name="company_currency" force_save="1" invisible="1"/>
                                        <field name="is_qa" invisible="1"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                        <separator string="BMM theo OS"/>
                        <group>
                            <field name="bmm_os" string="BMM"/>
                            <field name="expense_os"/>
                            <field name="company_currency" invisible="1"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>