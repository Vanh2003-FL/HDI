<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="en_resource_detail_view_tree_view_tree" model="ir.ui.view">
            <field name="name">en.resource.detail.view.tree</field>
            <field name="model">en.resource.detail</field>
            <field name="arch" type="xml">
                <list string="Danh sách nguồn lực">
                    <field name="project_task_stage_id"/>
                    <field name="project_stage_code"/>
                    <field name="type_id"/>
                    <field name="employee_id"/>
                    <field name="email"/>
                    <field name="role_id"/>
                    <field name="job_position_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="workload"/>
                    <field name="en_md"/>
                    <field name="en_state"/>
                </list>
            </field>
        </record>

        <record id="en_resource_detail_view_search" model="ir.ui.view">
            <field name="name">en.resource.detail.view.search</field>
            <field name="model">en.resource.detail</field>
            <field name="arch" type="xml">
                <search>
                    <field name="employee_id"/>
                    <field name="email"/>
                    <filter name="active" string="Hoạt động" domain="[('en_state', '=', 'active')]"/>
                    <filter name="inactive" string="Nghỉ việc" domain="[('en_state', '=', 'inactive')]"/>
                    <filter name="semi_inactive" string="Nghỉ dài hạn" domain="[('en_state', '=', 'semi-inactive')]"/>
                </search>
            </field>
        </record>
    </data>
</odoo>