<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard (Popup) để chọn Project và WBS -->
    <record id="view_import_wizard_form" model="ir.ui.view">
        <field name="name">project.task.import.wizard.form</field>
        <field name="model">project.task.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Project and WBS">
                <group>
                    <field name="project_id" required="1"/>
                    <field name="package_id" required="1" context="{'list_view_ref': 'ngsc_project_wbs.ngsc_project_task_view_tree'}"/>
                </group>
                <footer>
                    <button name="action_confirm" string="Xác nhận" type="object" class="oe_highlight"/>
                    <button string="Huỷ" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action để mở wizard -->
    <record id="action_import_wizard" model="ir.actions.act_window">
        <field name="name">Import Project and WBS</field>
        <field name="res_model">project.task.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_import_wizard_form"/>
    </record>
</odoo>