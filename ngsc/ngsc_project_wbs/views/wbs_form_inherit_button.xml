<odoo>
    <record id="wbs_form_inherit_custom_button" model="ir.ui.view">
        <field name="name">wbs.form.inherit.custom.button</field>
        <field name="model">en.wbs</field>
        <field name="inherit_id" ref="ngsd_base.wbs_form"/>
        <field name="arch" type="xml">
            <!-- Thay nút cũ bằng nút mới -->
            <xpath expr="//div[@name='button_box']/button[@name='button_wbs_account_report_wizard_act']" position="replace">
                <button class="oe_stat_button"
                        type="action"
                        name="%(account_reports.wbs_account_report_wizard_act)d"
                        context="{'project_id': project_id}"
                        icon="fa-calendar"
                        string="Xem báo cáo"/>
            </xpath>
<!--            <xpath expr="//sheet" position="after">-->
<!--                <chatter/>-->
<!--            </xpath>-->
        </field>
    </record>

    <record id="wbs_account_report_wizard_form_inherit_hide_fields" model="ir.ui.view">
        <field name="name">wbs.account.report.wizard.form.inherit.hide.fields</field>
        <field name="model">wbs.account.report.wizard</field>
        <field name="inherit_id" ref="account_reports.wbs_account_report_wizard_form"/>
        <field name="arch" type="xml">

            <!-- Ẩn field wbs_id -->
            <xpath expr="//field[@name='wbs_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <!-- Ẩn field finished_percent -->
            <xpath expr="//field[@name='finished_percent']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

<!--            <xpath expr="//field[@name='finished_percent']" position="after">-->
<!--                <field name="report_period" string="Kỳ báo cáo"/>-->
<!--            </xpath>-->

            <xpath expr="//field[@name='project_id']" position="replace">-->
                <field name="project_id" readonly="1"/>
            </xpath>

            <xpath expr="//field[@name='project_id']" position="replace">
                <div class="d-flex align-items-center" style="width: 100%; margin-bottom: 16px;">
                    <div class="o_form_label"
                         style="text-align:right;padding-right:68px;line-height:32px;margin-bottom:0;white-space:nowrap;font-weight: bold;">
                        Tên dự án
                    </div>
<!--                    <field name="project_id" nolabel="1" readonly="1"/>-->
                     <div style="flex: 1;">
                        <field style="width:100%" name="project_id" nolabel="1" readonly="1"/>
                     </div>
                </div>
            </xpath>

            <xpath expr="//field[@name='wbs_id']" position="after">
                 <div class="d-flex align-items-center" style="width: 100%;">
                    <div class="o_form_label"
                         style="text-align:right;padding-right:68px;line-height:32px;margin-bottom:0;white-space:nowrap;font-weight: bold;">
                        Kỳ báo cáo
                    </div>
                    <field style="width:39%" name="report_month" nolabel="1"/>
                    <field style="width:39%; margin-left: 8px;" name="report_year" nolabel="1"/>
                </div>
            </xpath>

            <xpath expr="//footer/button[@name='do']" position="attributes">
                <attribute name="attrs"/>
            </xpath>

<!--            <xpath expr="//sheet" position="after">-->
<!--                <chatter/>-->
<!--            </xpath>-->

        </field>
    </record>
</odoo>