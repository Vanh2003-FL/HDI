<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Giao diện popup chọn ngày -->
    <record id="view_wizard_manual_wbs_run" model="ir.ui.view">
        <field name="name">wizard.manual.wbs.run.form</field>
        <field name="model">wizard.manual.wbs.run</field>
        <field name="arch" type="xml">
            <form string="Chạy thủ công cập nhật WBS">
                <group>
                    <field name="date_run"/>
                </group>
                <footer>
                    <button name="action_run_manual" type="object" string="Chạy ngay" class="btn-primary"/>
                    <button string="Đóng" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action mở wizard -->
    <record id="action_wizard_manual_wbs_run" model="ir.actions.act_window">
        <field name="name">Chạy thủ công cập nhật WBS</field>
        <field name="res_model">wizard.manual.wbs.run</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
