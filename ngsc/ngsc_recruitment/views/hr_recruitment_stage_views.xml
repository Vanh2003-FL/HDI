<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ngsc_recruitment_hr_recruitment_stage_view_tree" model="ir.ui.view">
            <field name="name">ngsc.recruitment.hr.recruitment.stage.view.tree</field>
            <field name="model">hr.recruitment.stage</field>
            <field name="inherit_id" ref="hr_recruitment.hr_recruitment_stage_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="state_type"/>
                </xpath>
            </field>
        </record>

        <record id="ngsc_recruitment_hr_recruitment_stage_view_form" model="ir.ui.view">
            <field name="name">ngsc.recruitment.hr.recruitment.stage.view.form</field>
            <field name="model">hr.recruitment.stage</field>
            <field name="inherit_id" ref="hr_recruitment.hr_recruitment_stage_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="state_type"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>