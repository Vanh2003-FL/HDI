<odoo>

    <record id="ngsc_news_job_view_kanban" model="ir.ui.view">
        <field name="name">ngsc.news.job.view.kanban</field>
        <field name="model">ngsc.news.job</field>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey o_kanban_dashboard o_hr_recruitment_kanban" sample="1">
                <field name="name"/>
                <field name="is_favorite"/>
                <field name="no_of_recruitment"/>
                <field name="color"/>
                <field name="new_application_count"/>
                <field name="no_of_hired_employee"/>
                <field name="state"/>
                <field name="application_count"/>
                <field name="news_job_url"/>
                <templates>
                    <t t-name="card">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_global_click">
                            <field name="is_published" invisible="1"/>
                            <div class="ribbon ribbon-top-right"
                                 attrs="{'invisible': [('is_published', '=', False)]}">
                                <span class="o_recruitment_purple">Đã đăng</span>
                            </div>
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <field name="website_url" invisible="1"/>
                                    <div class="o_primary col-11">
                                        <span>
                                            <a t-attf-href="#{record.website_url.raw_value}" class="mr-2">
                                                <t t-esc="record.name.value"/>
                                            </a>
                                        </span>
                                    </div>
                                    <field name="is_favorite" widget="boolean_favorite" nolabel="1"/>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#">
                                        <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                                    </a>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content mt-0 mt-sm-3">
                                <t t-if="record.state.raw_value == 'recruit'">
                                    <div class="row">
                                        <div class="col-7">
                                            <button name="%(ngsc_recruitment.crm_case_categ0_act_job_new)d"
                                                    type="action"
                                                    context="{'search_default_news_job_id': [active_id], 'default_news_job_id': active_id}"
                                                    domain="[('news_job_id', '=', active_id)]"
                                                    class="btn btn-primary">
                                                <field name="new_application_count"/>
                                                Hồ sơ ứng tuyển mới
                                            </button>

                                        </div>
                                        <div class="col-5">
                                            <field name="all_application_count"/>
                                            Hồ sơ ứng tuyển
                                            <br/>
                                            <field name="no_of_recruitment"/>
                                            Cần tuyển dụng
                                        </div>
                                    </div>
                                </t>
                                <t t-if="record.state.raw_value == 'open'">
                                    <div class="row">
                                        <div class="col-7 o_kanban_primary_left">
                                            <button class="btn btn-secondary" name="set_recruit" type="object">Bắt đầu
                                                tuyển dụng
                                            </button>
                                        </div>
                                        <t t-if="record.old_application_count.raw_value != 0">
                                            <div class="col-5 text_top_padding">
                                                <field name="old_application_count"/>
                                                Hồ sơ ứng tuyển
                                                <br/>
                                            </div>
                                        </t>
                                    </div>
                                </t>
                                <div name="kanban_boxes" class="row o_recruitment_kanban_boxes">
                                    <div class="o_recruitment_kanban_box o_kanban_primary_bottom bottom_block"
                                         style="padding-left:8px;">
                                        <div class="col-6">
                                            <field name="website_url" invisible="1"/>
                                            <span>
                                                <t>
                                                    <span class="mr-2">
                                                        <t t-if="record.is_published.raw_value">Đã đăng</t>
                                                        <t t-else="">Chưa đăng</t>
                                                    </span>
                                                    <field name="is_published" widget='boolean_toggle'/>
                                                </t>
                                            </span>
                                        </div>
                                        <div class="o_link_trackers col-6">
                                            <a role="button"
                                               href="javascript:void(0);"
                                               class="btn btn-sm py-0 o_copy_url_link"
                                               t-att-data-link="record.news_job_url.value">
                                                <span title="Copy đường dẫn tin tuyển dụng">
                                                    <i class="fa fa-lg fa-link" role="img" aria-label="Copy Link"/>
                                                </span>
                                            </a>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                <div class="o_kanban_card_manage_section">
                                    <div role="menuitem">
                                        <a t-if="record.state.raw_value == 'recruit'" name="set_open" type="object">
                                            Hoàn thành tuyển dụng
                                        </a>
                                    </div>
                                    <div role="menuitem">
                                        <a t-if="record.state.raw_value == 'open'" name="set_recruit" type="object">
                                            Bắt đầu tuyển dụng
                                        </a>
                                    </div>
                                    <div role="menuitem">
                                        <a t-if="widget.editable" name="edit_job" type="edit">Chỉnh sửa màu sắc</a>
                                    </div>
                                    <div role="menuitem" name="applications_action">
                                        <a t-if="record.state.raw_value == 'open' and record.application_count.raw_value != 0"
                                           name="%(ngsc_recruitment.crm_case_categ0_act_job_new)d" type="action">Hồ sơ ứng
                                            tuyển
                                        </a>
                                    </div>
                                </div>
                                <div role="menuitem" aria-haspopup="true">
                                    <ul class="oe_kanban_colorpicker" data-field="color" role="menu"/>
                                </div>
                            </div>
                            <div class="o_hr_job_boxes">
                                <a class="o_hr_job_box" name="%(ngsc_recruitment.crm_case_categ0_act_job_new)d"
                                   type="action"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="ngsc_news_job_view_tree" model="ir.ui.view">
        <field name="name">ngsc.news.job.view.tree</field>
        <field name="model">ngsc.news.job</field>
        <field name="arch" type="xml">
            <list string="Tin tuyển dụng">
                <field name="name" optional="show"/>
                <field name="date_start" optional="show"/>
                <field name="date_end" optional="show"/>
                <field name="receive_applications_count" optional="show"/>
                <field name="appraisal_count" optional="show"/>
                <field name="interview_count" optional="show"/>
                <field name="contract_proposal_count" optional="show"/>
                <field name="contract_signed_count" optional="show"/>
                <field name="state" optional="show"/>
                <field name="date" optional="show"/>
                <field name="priority" optional="show"/>
                <field name="is_published" optional="show"/>
            </list>
        </field>
    </record>

    <record id="ngsc_news_job_view_form" model="ir.ui.view">
        <field name="name">ngsc.news.job.view.form</field>
        <field name="model">ngsc.news.job</field>
        <field name="arch" type="xml">
            <form string="Tin tuyển dụng">
                <header>
                    <field name="state" widget="statusbar" clickable="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_read_only" string="Tên tin tuyển dụng"/>
                        <h1>
                            <field name="name" placeholder="Tên tin tuyển dụng"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="job_id"/>
                            <field name="no_of_recruitment"/>
                            <field name="news_job_url" widget="url"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                        <group>
                            <field name="create_uid" readonly="1" force_save="1"/>
                            <field name="is_published" widget="boolean_toggle"/>
                            <field name="plan_id"/>
                            <field name="date"/>
                            <field name="priority"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Mô tả">
                            <field name="description"/>
                            <field name="website_description" invisible="1"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/><field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="ngsc_news_job_view_search" model="ir.ui.view">
        <field name="name">ngsc.news.job.view.search</field>
        <field name="model">ngsc.news.job</field>
        <field name="arch" type="xml">
            <search>
                <filter name="archived" string="Đã lưu trữ" domain="[('active', '=', False)]"/>
                <separator/>
                <field name="name" string="Tất cả"
                       filter_domain="['|',('name', 'ilike', self), ('description', 'ilike', self)]"/>
                <field name="name" string="Tên tin tuyển dụng"/>
                <field name="description" string="Mô tả"/>
                <separator/>
                <filter name="published" string="Đã đăng" domain="[('is_published', '=', True)]"/>
                <filter name="not_published" string="Chưa đăng" domain="[('is_published', '=', False)]"/>
                <separator/>
                <filter name="recruit" string="Đang tuyển dụng" domain="[('state', '=', 'recruit')]"/>
                <filter name="open" string="Dừng tuyển dụng" domain="[('state', '=', 'open')]"/>
            </search>
        </field>
    </record>

    <record id="ngsc_news_job_act_window" model="ir.actions.act_window">
        <field name="name">Tin tuyển dụng</field>
        <field name="res_model">ngsc.news.job</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo mới tin tuyển dụng
            </p>
        </field>
    </record>
</odoo>
