<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="FinalProjectReport">
        <div class="oe_structure" id="wrapwrap">
            <section id="quality_dashboard_section" class="container-fluid">
                <div class="row">
                    <!-- Main content -->
                    <div class="col-md-10" id="quality_dashboard">
                        <div class="custom-header">
                            <div class="logo-section">
                                <img src="/ngsc_reporting/static/description/NGSC.png" alt="NGSC Logo"
                                     class="logo"/>
                            </div>
                            <div class="title-container">
                                <div class="title-text">BÁO CÁO CHỈ TIÊU CHẤT LƯỢNG CUỐI DỰ ÁN</div>
                                <div class="underline"></div>
                            </div>
                        </div>

                        <!-- Table Schedule -->
                        <table class="quality-table" id="table-schedule">
                            <thead>
                                <tr>
                                    <th>Khối</th>
                                    <th>Trung tâm</th>
                                    <th>Loại dự án</th>
                                    <th>Dự án</th>
                                    <th>Ngày đóng</th>
                                    <th>% Schedule Achievement v1.0</th>
                                    <th>% Schedule Achievement v2.0</th>
                                    <th>% Schedule Achievement v lastupdate</th>
                                    <th>% Effort Efficiency BMM đầu tiên</th>
                                    <th>% Effort Efficiency BMM cuối cùng</th>
                                    <th>% Effort Efficiency Plan v1.0</th>
                                    <th>% Effort Efficiency Plan v2.0</th>
                                    <th>% Effort Efficiency Plan v lastupdate</th>

                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>

                        <!-- Charts -->
                        <div class="chart-container-scrollable chart-schedule">
                            <h4>% Schedule Achievement v1.0</h4>
                            <div class="chart-scroll-wrapper">
                                 <canvas id="scheduleAchievementChartV1"></canvas>
                            </div>
                        </div>

                        <div class="chart-container-scrollable chart-schedule">
                            <h4>% Schedule Achievement v2.0</h4>
                            <div class="chart-scroll-wrapper">
                                <canvas id="scheduleAchievementChartV2"></canvas>
                            </div>
                        </div>

                        <div class="chart-container-scrollable chart-schedule">
                            <h4>% Schedule Achievement v lastupdate</h4>
                            <div class="chart-scroll-wrapper">
                                <canvas id="scheduleAchievementChartLast"></canvas>
                            </div>
                        </div>

                        <div class="chart-container-scrollable chart-effort-bmm">
                            <h4>% Effort Efficiency BMM đầu tiên</h4>
                            <div class="chart-scroll-wrapper">
                                <canvas id="effortEfficiencyBMMFirstChart"></canvas>
                            </div>
                        </div>

                        <div class="chart-container-scrollable chart-effort-bmm">
                            <h4>% Effort Efficiency BMM cuối cùng</h4>
                            <div class="chart-scroll-wrapper">
                                <canvas id="effortEfficiencyBMMLastChart"></canvas>
                            </div>
                        </div>

                        <div class="chart-container-scrollable chart-effort-plan">
                            <h4>% Effort Efficiency Plan v1.0</h4>
                            <div class="chart-scroll-wrapper">
                                <canvas id="effortEfficiencyPlanV1Chart"></canvas>
                            </div>
                        </div>

                        <div class="chart-container-scrollable chart-effort-plan">
                            <h4>% Effort Efficiency Plan v2.0</h4>
                            <div class="chart-scroll-wrapper">
                                <canvas id="effortEfficiencyPlanV2Chart"></canvas>
                            </div>
                        </div>

                        <div class="chart-container-scrollable chart-effort-plan">
                            <h4>% Effort Efficiency Plan v lastupdate</h4>
                            <div class="chart-scroll-wrapper">
                                <canvas id="effortEfficiencyPlanLastChart"></canvas>
                            </div>
                        </div>
                    </div>
                    <!-- Filter Sidebar -->
                    <div class="col-md-2 quality-filter-sidebar">
                        <div class="border p-3 rounded bg-light">

                            <div class="form-group mb-3">
                                <label for="filter-khoi" class="form-label">Khối</label>
                                <select id="filter-khoi" class="form-select form-select-sm"></select>
                            </div>

                            <div class="form-group mb-3">
                                <label for="filter-center" class="form-label">Trung tâm</label>
                                <select id="filter-center" class="form-select form-select-sm"></select>
                            </div>

                            <div class="form-group mb-3">
                                <label for="filter-type" class="form-label">Loại dự án</label>
                                <select id="filter-type" class="form-select form-select-sm"></select>
                            </div>

                            <div class="form-group mb-3">
                                <label for="filter-project" class="form-label">Dự án</label>
                                <select id="filter-project" class="form-select form-select-sm select2"
                                        multiple="multiple"></select>
                            </div>

                           <div class="form-group mb-3">
                                <div class="d-flex flex-column">
                                <label for="filter-month-from" class="small mb-1">Tháng bắt đầu</label>
                                    <input type="month" id="filter-month-from"
                                           class="form-control form-control-sm mb-2"/>
                                    <label for="filter-month-to" class="small mb-1">Tháng kết thúc</label>
                                    <input type="month" id="filter-month-to" class="form-control form-control-sm"/>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end ">
                                <button type="button" class="btn btn-primary btn-export-excel"
                                        style="width: -webkit-fill-available;">
                                <i class="fa fa-file-excel-o"/>
                                    Tải xuống XLSX
                                </button>
                            </div>
                            <div class="d-flex justify-content-end ">
                                <button type="button" class="btn btn-primary btn-export-pdf"
                                        style="width: -webkit-fill-available;">
                                <i class="fa fa-file-pdf-o"/>
                                    Tải xuống PDF
                                </button>
                            </div>
                            <div class="d-flex justify-content-end">
                            <button type="button" class="btn btn-primary btn-show-norm"
                                    style="width: -webkit-fill-available;">
                                <i class="fa fa-table"></i>
                                Cách tính Norm
                            </button>
                            </div>
                        </div>
                    </div>

                </div>
            </section>
        </div>
    </t>
</templates>
