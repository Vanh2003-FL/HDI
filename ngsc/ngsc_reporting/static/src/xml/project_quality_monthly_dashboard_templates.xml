<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="QualityDashboardTemplate">
        <div class="oe_structure" id="wrapwrap">
            <section id="quality_dashboard_section" class="container-fluid">
                <div class="row">
                    <!-- Main content -->
                    <div class="col-md-10" id="quality_dashboard">
                        <div class="custom-header">
                            <div class="logo-section">
                                <img src="/ngsc_reporting/static/description/NGSC.png" alt="NGSC Logo"
                                     class="logo"/>
                            </div>
                            <div class="title-container">
                                <div class="title-text">BÁO CÁO CHỈ TIÊU CHẤT LƯỢNG DỰ ÁN HÀNG THÁNG</div>
                                <div class="underline"></div>
                            </div>
                        </div>

                        <!-- Table Schedule -->
                        <h4 class="section-title">% Schedule Achievement v lastupdate</h4>
                        <table class="quality-table" id="table-schedule">
                            <thead>
                                <tr>
                                    <th>Khối</th>
                                    <th>Trung tâm</th>
                                    <th>Loại dự án</th>
                                    <th>Dự án</th>
                                    <th>% Schedule</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>

                        <h4 class="section-title">% Effort Efficiency Monthly
                        </h4>
                        <table class="quality-table" id="table-effort-monthly">
                            <thead>
                                <tr>
                                    <th>Khối</th>
                                    <th>Trung tâm</th>
                                    <th>Loại dự án</th>
                                    <th>Dự án</th>
                                    <th>% Monthly</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>

                        <h4 class="section-title">% Efficiency Monthly v lastupdate
                        </h4>
                        <table class="quality-table" id="table-effort-plan">
                            <thead>
                                <tr>
                                    <th>Khối</th>
                                    <th>Trung tâm</th>
                                    <th>Loại dự án</th>
                                    <th>Dự án</th>
                                    <th>% v Plan</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>

                        <!-- Charts -->
                        <div class="chart-container-scrollable">
                            <h4>% Schedule Achievement v lastupdate</h4>
                            <div class="chart-scroll-wrapper">
                                <canvas id="scheduleChart"></canvas>
                            </div>
                        </div>
                        <div class="chart-container-scrollable">
                            <h4>% Effort Efficiency Monthly</h4>
                            <div class="chart-scroll-wrapper">
                                <canvas id="effortMonthlyChart"></canvas>
                            </div>
                        </div>
                        <div class="chart-container-scrollable">
                            <h4>% Effort Efficiency v lastupdate</h4>
                            <div class="chart-scroll-wrapper">
                                <canvas id="effortPlanChart"></canvas>
                            </div>
                        </div>
                    </div>
                    <!-- Filter Sidebar -->
                    <div class="col-md-2 quality-filter-sidebar">
                        <div class="border p-3 rounded bg-light">
                            <div class="form-group mb-3">
                                <label for="filter-khoi" class="form-label">Khối</label>
                                <select id="filter-khoi" class="form-select form-select-sm"></select>
                            </div>

                            <div class="form-group mb-3">
                                <label for="filter-center" class="form-label">Trung tâm</label>
                                <select id="filter-center" class="form-select form-select-sm"></select>
                            </div>

                            <div class="form-group mb-3">
                                <label for="filter-type" class="form-label">Loại dự án</label>
                                <select id="filter-type" class="form-select form-select-sm"></select>
                            </div>

                            <div class="form-group mb-3">
                                <label for="filter-project" class="form-label">Dự án</label>
                                <select id="filter-project" class="form-select form-select-sm select2"
                                        multiple="multiple"></select>
                            </div>

                            <!--                            <div class="form-group mb-3">-->
                            <!--                            <label class="form-label">Tháng tính chỉ tiêu</label>-->
                            <!--                                <div class="d-flex flex-column">-->
                            <!--                                     <input type="month" id="filter-month-from"-->
                            <!--                                            class="form-control form-control-sm mb-2" placeholder="Từ tháng"/>-->
                            <!--                                    <input type="month" id="filter-month-to" class="form-control form-control-sm"-->
                            <!--                                           placeholder="Đến tháng"/>-->
                            <!--                                </div>-->
                            <!--                            </div>-->

                            <div class="form-group mb-3">
                                <div class="d-flex flex-column">
                                <label for="filter-month-from" class="small mb-1">Tháng bắt đầu</label>
                                    <input type="month" id="filter-month-from"
                                           class="form-control form-control-sm mb-2"/>
                                    <label for="filter-month-to" class="small mb-1">Tháng kết thúc</label>
                                    <input type="month" id="filter-month-to" class="form-control form-control-sm"/>
                            </div>
                            </div>

                            <div class="d-flex justify-content-end ">
                                <button type="button" class="btn btn-primary btn-export-excel"
                                        style="width: -webkit-fill-available;">
                                <i class="fa fa-file-excel-o"/>
                                    Tải xuống XLSX
                                </button>
                            </div>
                            <div class="d-flex justify-content-end ">
                                <button type="button" class="btn btn-primary btn-export-pdf"
                                        style="width: -webkit-fill-available;">
                                <i class="fa fa-file-pdf-o"/>
                                    Tải xuống PDF
                                </button>
                            </div>
                            <div class="d-flex justify-content-end">
                            <button type="button" class="btn btn-primary btn-show-norm"
                                    style="width: -webkit-fill-available;">
                                <i class="fa fa-table"></i>
                                Cách tính Norm
                            </button>
                        </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </t>
</templates>
