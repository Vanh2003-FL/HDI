<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_final_project_completion_quality_report" model="ir.actions.client">
        <field name="name">Báo cáo chi tiết chỉ tiêu cuối dự án</field>
        <field name="tag">account_report</field>
        <field name="context" eval="{'model': 'final.project.completion.quality.report'}"/>
    </record>

    <record id="final_project_completion_quality_report_wizard_form" model="ir.ui.view">
        <field name="model">final.project.completion.quality.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="project_ids" widget="many2many_tags" />
                         <field name="period"/>
                    </group>
                     <group attrs="{'invisible': [('period', '!=', 'optional')]}">
                        <label for="date_from" string="Thời gian"/>
                        <div class="o_row">
                            <field name="date_from" nolabel="1"/>
                            <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                            <field name="date_to" nolabel="1"/>
                        </div>
                    </group>
                </sheet>
                <footer>
                    <button string='Xác nhận' name="do" type="object" class="oe_highlight"/>
                    <button string="Hủy" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="final_project_completion_quality_report_wizard_act" model="ir.actions.act_window">
        <field name="res_model">final.project.completion.quality.wizard</field>
        <field name="view_mode">form</field>
        <field name="name">Báo cáo chi tiết chỉ tiêu cuối dự án</field>
        <field name="target">new</field>
    </record>

</odoo>
