<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_monthly_detailed_quality_report" model="ir.actions.client">
        <field name="name">Báo cáo chi tiết chỉ tiêu chất lượng dự án hàng tháng</field>
        <field name="tag">account_report</field>
        <field name="context" eval="{
        'model': 'project.report.month',}"/>
    </record>

    <record id="monthly_detailed_quality_report_wizard_form" model="ir.ui.view">
        <field name="model">report.month.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <div class="d-flex align-items-center w-100" style="gap: 16px;">
                            <div class="o_form_label"
                                 style="text-align:right;padding-right:68px;line-height:32px;margin-bottom:0;white-space:nowrap;font-weight: bold;">
                                Kỳ báo cáo
                            </div>
                            <field style="width:39%" name="report_month" nolabel="1"/>
                            <field style="width:39%" name="report_year" nolabel="1"/>
                        </div>
                    </group>


                    <group>
                        <field name="project_code"/>
                        <field name="project_type"/>
                    </group>
                </sheet>
                <footer>
                    <button string='Xác nhận' name="run_report" type="object" class="oe_highlight"/>
                    <button string="Hủy" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="monthly_detailed_quality_report_wizard_act" model="ir.actions.act_window">
        <field name="res_model">report.month.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
