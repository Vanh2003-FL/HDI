<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- NORM Setting Action -->
    <record id="reporting_norm_setting_act" model="ir.actions.act_window">
        <field name="name">Cấu hình NORM</field>
        <field name="res_model">reporting.norm.setting</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Thêm mới cấu hình NORM
          </p><p>
            hehe
          </p>
        </field>
    </record>

    <!-- Source personnel Tree View -->
    <record model="ir.ui.view" id="reporting_norm_setting_tree">
        <field name="name">reporting.norm.setting.tree</field>
        <field name="model">reporting.norm.setting</field>
        <field name="arch" type="xml">
            <list string="Cấu hình NORM">
                <field name="name"/>
                <field name="short_name"/>
                <field name="norm_value"/>
                <field name="standard_deviation"/>
                <field name="satisfactory_direction"/>
            </list>
        </field>
    </record>

    <!-- Source personnel Form -->
        <record model="ir.ui.view" id="ngsc_recruitment_source_personnel_form">
            <field name="name">reporting.norm.setting.form</field>
            <field name="model">reporting.norm.setting</field>
            <field name="arch" type="xml">
              <form string="Thêm mới cấu hình NORM" class="o_applicant_form">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="e.g. % Schedule Achievement v1.0"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="short_name"/>
                            <field name="norm_value" />
                            <field name="standard_deviation"/>
                            <field name="satisfactory_direction"/>
                        </group>
                        <group>
                            <field name="color_good" widget="color"/>
                            <field name="color_pass" widget="color"/>
                            <field name="color_fail" widget="color"/>
                            <field name="color_bad" widget="color"/>
                        </group>
                    </group>
                </sheet>
<!--                <chatter/>-->
<!--                    <field name="message_follower_ids"/>-->
<!--                    <field name="activity_ids"/>-->
<!--                    <field name="message_ids" options="{'open_attachments': True}"/>-->
<!--                </div>-->
              </form>
            </field>
        </record>
</odoo>