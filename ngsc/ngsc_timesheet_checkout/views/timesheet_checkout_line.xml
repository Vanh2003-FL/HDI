<odoo>
    <record id="view_timesheet_checkout_line_form" model="ir.ui.view">
        <field name="name">timesheet.checkout.line.form</field>
        <field name="model">timesheet.checkout.line</field>
        <field name="arch" type="xml">
            <form string="Timesheet Checkout Line">
                <group class="o_form_group_checkout_warning o_form_group_checkout_style " >
                    <field name="task_id" readonly="1" required="1"/>
                    <field name="description" required="1"/>
                    <field name="hours" required="1"/>
                    <field name="is_overtime"/>
                </group>
            </form>
        </field>
    </record>
</odoo>