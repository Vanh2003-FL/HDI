<odoo>
    <record id="view_timesheet_checkout_line_wizard_form" model="ir.ui.view">
        <field name="name">timesheet.checkout.line.wizard.form</field>
        <field name="model">timesheet.checkout.line.wizard</field>
        <field name="arch" type="xml">
            <form string="Ghi Timesheet" class="o_form_full">
                <sheet>
                    <group class="o_form_group_checkout_warning">
                        <field name="task_id" string="Công việc"/>
                        <field name="description" string="Mô tả công việc"/>
                        <field name="hours" widget="float_time" string="Số giờ làm"/>
                        <field name="is_overtime" string="Tăng ca?"/>
                    </group>
                </sheet>

                <footer>
                    <button name="action_save_line" type="object"
                            string="Lưu" class="btn-primary"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>