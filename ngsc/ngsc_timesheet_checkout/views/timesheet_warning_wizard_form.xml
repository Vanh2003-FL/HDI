<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_timesheet_warning_wizard_form" model="ir.ui.view">
        <field name="name">timesheet.warning.wizard.form</field>
        <field name="model">timesheet.warning.wizard</field>
        <field name="arch" type="xml">
            <form string="Thông báo" version="2.0">
                <sheet>
                    <div class="alert alert-warning" role="alert" style="margin-bottom: 10px;">
                        <field name="message" readonly="1"/>
                    </div>
                </sheet>
                <footer>
                    <button name="action_continue_filling" type="object"
                            string="Tiếp tục khai báo" class="btn-primary"/>
                    <button name="action_skip_and_checkout" type="object"
                            string="Vẫn check-out" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>