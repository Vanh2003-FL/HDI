<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="project_decision_inherit_view" model="ir.ui.view">
            <field name="name">Project Decision Inherit View</field>
            <field name="model">project.decision</field>
            <field name="inherit_id" ref="ngsc_project.project_decision_form"/>
            <field name="arch" type="xml">
                <!-- Ẩn field QA cũ -->
                <xpath expr="//field[@name='en_project_qa_id']" position="attributes">
                    <attribute name="string">QA chính</attribute>
                </xpath>
                <!-- Thêm field QA mới ngay sau field cũ -->
                <xpath expr="//field[@name='en_project_qa_id']" position="after">
                    <field name="en_project_qa_ids" string="QA" widget="many2many_avatar_user" force_save="1" readonly="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
