<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Ghi đè tree view -->
    <record id="project_status_report_tree_inherit" model="ir.ui.view">
        <field name="name">project_status_report_tree_inherit</field>
        <field name="model">project.status.report</field>
        <field name="inherit_id" ref="account_reports.project_status_report_tree"/>
        <field name="arch" type="xml">
            <!-- Ẩn field QA cũ -->
            <field name="project_en_project_qa_id" position="attributes">
                    <attribute name="string">QA chính</attribute>
            </field>

            <!-- Thêm field QA mới ngay sau QA cũ -->
            <field name="project_en_project_qa_id" position="after">
                <field name="project_en_project_qa_ids" string="QA" widget="many2many_tags" optional="show"/>
            </field>
        </field>
    </record>

    <!-- Ghi đè search view -->
    <record id="project_status_report_search_inherit" model="ir.ui.view">
        <field name="name">project_status_report_search_inherit</field>
        <field name="model">project.status.report</field>
        <field name="inherit_id" ref="account_reports.project_status_report_search"/>
        <field name="arch" type="xml">
            <!-- Ẩn field QA cũ -->
            <field name="project_en_project_qa_id" position="attributes">
                <attribute name="string">QA chính</attribute>
            </field>

            <!-- Thêm field QA mới ngay sau QA cũ -->
            <field name="project_en_project_qa_id" position="after">
                    <field name="project_en_project_qa_ids" string="QA" widget="many2many_tags"/>
            </field>
        </field>
    </record>
</odoo>
