<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_theme_option_form" model="ir.ui.view">
        <field name="name">theme.option.form</field>
        <field name="model">theme.option</field>
        <field name="arch" type="xml">
            <form string="Theme hệ thống">
                <header>
                    <!-- Nút Kích hoạt: hiện khi chưa active -->
                    <button name="action_activate_theme"
                            type="object"
                            string="Kích hoạt"
                            class="btn-primary"
                            attrs="{'invisible':[('active_theme','=',True)]}"/>

                    <!-- Nút Tắt sử dụng: hiện khi đang active -->
                    <button name="action_deactivate_theme"
                            type="object"
                            string="Tắt sử dụng"
                            class="btn-secondary"
                            confirm="Bạn có chắc muốn tắt theme này? Giao diện sẽ trở về mặc định của Odoo."
                            attrs="{'invisible':[('active_theme','=',False)]}"/>

                    <field name="active_theme" widget="boolean_toggle" invisible="1"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button"
                                type="object"
                                name="action_activate_theme"
                                icon="fa-check-circle"
                                attrs="{'invisible':[('active_theme','=',True)]}">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Kích hoạt</span>
                            </div>
                        </button>
                        <button class="oe_stat_button"
                                type="object"
                                name="action_deactivate_theme"
                                icon="fa-times-circle"
                                attrs="{'invisible':[('active_theme','=',False)]}">
                            <div class="o_stat_info">
                                <span class="o_stat_text text-danger">Đang sử dụng</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Tên giao diện..." required="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Hình ảnh">
                            <field name="theme_image" widget="image"
                                   class="oe_avatar"
                                   options="{'preview_image': 'theme_image', 'size': [200, 200]}"/>
                        </group>

                        <group string="Màu sắc">
                            <field name="background_color" widget="color"
                                   options="{'picker': true}"
                                   placeholder="#ffffff"/>
                            <field name="header_color" widget="color"
                                   options="{'picker': true}"
                                   placeholder="#71639e"/>
                            <field name="button_color" widget="color"
                                   options="{'picker': true}"
                                   placeholder="#714B67"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_theme_option_tree" model="ir.ui.view">
        <field name="name">theme.option.tree</field>
        <field name="model">theme.option</field>
        <field name="arch" type="xml">
            <list string="Danh sách themes" decoration-success="active_theme == True">
                <field name="name"/>
                <field name="background_color" widget="color"/>
                <field name="button_color" widget="color"/>
                <field name="header_color" widget="color"/>
                <field name="active_theme" />
                <button name="action_activate_theme"
                        type="object"
                        string="Kích hoạt"
                        icon="fa-check"
                        attrs="{'invisible':[('active_theme','=',True)]}"/>
                <button name="action_deactivate_theme"
                        type="object"
                        string="Tắt"
                        icon="fa-times"
                        attrs="{'invisible':[('active_theme','=',False)]}"/>
            </list>
        </field>
    </record>
    <record id="action_theme_option" model="ir.actions.act_window">
        <field name="name">Cấu hình theme</field>
        <field name="res_model">theme.option</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
