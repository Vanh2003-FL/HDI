<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_boundary_report" model="ir.actions.client">
        <field name="name">Báo cáo Định biên</field>
        <field name="tag">account_report</field>
    </record>

    <record id="ngs_boundary_report_wizard_form" model="ir.ui.view">
        <field name="model">ngs.boundary.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="time_options"/>
                        <field name="en_fiscal_year_id" options="{'no_create': True, 'no_open': True}" invisible="time_options != 'en_fiscal_year'" required="time_options == 'en_fiscal_year'"/>
                        <field name="date_from" invisible="time_options != 'option'" required="time_options == 'option'"/>
                        <field name="date_to" invisible="time_options != 'option'" required="time_options == 'option'" />
                    </group>
                </sheet>
                <footer>
                    <button string='Xác nhận' name="do" type="object" class="oe_highlight"/>
                    <button string="Hủy" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="ngs_boundary_report_wizard_action" model="ir.actions.act_window">
        <field name="res_model">ngs.boundary.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>