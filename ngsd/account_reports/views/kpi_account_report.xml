<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_kpi_account_report" model="ir.actions.client">
        <field name="name">Báo cáo thực hiện KPI</field>
        <field name="tag">account_report</field>
        <field name="context" eval="{'model': 'kpi.account.report'}"/>
    </record>

    <record id="kpi_account_report_wizard_form" model="ir.ui.view">
        <field name="model">kpi.account.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <!--                        <label for="date_from" string="Thời gian"/>-->
                        <!--                        <div class="o_row">-->
                        <!--                            <field name="date_from" widget="daterange" options="{'related_end_date': 'date_to'}"/>-->
                        <!--                            <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>-->
                        <!--                            <field name="date_to" widget="daterange" options="{'related_start_date': 'date_from'}"/>-->
                        <!--                        </div>-->
                        <field name="type" widget="radio"/>
                        <field name="sale_team_ids" widget="many2many_tags" invisible="type != 'team'"/>
                        <field name="user_ids" widget="many2many_tags" invisible="type != 'sale'"/>
                        <field name="period"/>
                    </group>
                </sheet>
                <footer>
                    <button string='Xác nhận' name="do" type="object" class="oe_highlight"/>
                    <button string="Hủy" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="kpi_account_report_wizard_act" model="ir.actions.act_window">
        <field name="res_model">kpi.account.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="menu_kpi_action_report" model="ir.ui.menu">
        <field name="action" ref="kpi_account_report_wizard_act"/>
    </record>
</odoo>