<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="outsource_cost_report_action" model="ir.actions.client">
        <field name="name">Chi phí OS</field>
        <field name="tag">account_report</field>
        <field name="context" eval="{'model': 'outsource.cost.report'}"/>
    </record>


    <record id="outsource_cost_report_wizard_form" model="ir.ui.view">
        <field name="model">outsource.cost.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="period"/>
                    </group>
                    <group invisible="period != 'optional'">
                        <label for="date_from" string="Thời gian"/>
                        <div class="o_row">
                            <field name="date_from" nolabel="1"/>
                            <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                            <field name="date_to" nolabel="1"/>
                        </div>
                    </group>
                    <group>
                        <field name="employee_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                </sheet>
                <footer>
                    <button string='Xác nhận' name="button_confirm" type="object" class="oe_highlight"/>
                    <button string="Hủy" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="outsource_cost_report_wizard_action" model="ir.actions.act_window">
        <field name="res_model">outsource.cost.report.wizard</field>
        <field name="name">Báo cáo theo trung tâm</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <record id="outsource_cost_report_menu" model="ir.ui.menu">
        <field name="name">Chi phí OS</field>
        <field name="action" ref="outsource_cost_report_wizard_action"/>
        <field name="sequence">110</field>
    </record>

</odoo>
