<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_project_account_report" model="ir.actions.client">
        <field name="name">Kế hoạch nguồn lực</field>
        <field name="tag">account_report</field>
        <field name="context" eval="{'model': 'project.account.report'}"/>
    </record>

    <record id="project_account_report_wizard_form" model="ir.ui.view">
        <field name="model">project.account.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="project_id" invisible="1"/>
                        <field name="unit" widget="radio" options="{'horizontal': true}"/>
                        <field name="block_ids" widget="many2many_tags" invisible="project_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                        <field name="department_ids" widget="many2many_tags" invisible="project_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                        <field name="project_ids" widget="many2many_tags" invisible="project_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                        <field name="state_ids" widget="many2many_tags" invisible="project_id"/>
<!--                        <field name="employee_ids" widget="many2many_tags" attrs="{'invisible': [('project_id', '!=', False)]}" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>-->
                        <field name="period"/>
                    </group>
                    <group invisible="period != 'optional'">
                        <label for="date_from" string="Thời gian"/>
                        <div class="o_row">
                            <field name="date_from" nolabel="1"/>
                            <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                            <field name="date_to" nolabel="1"/>
                        </div>
                    </group>
                </sheet>
                <footer>
                    <button string='Xác nhận' name="do" type="object" class="oe_highlight"/>
                    <button string="Hủy" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="project_account_report_wizard_act" model="ir.actions.act_window">
        <field name="res_model">project.account.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="menu_project_action_report" model="ir.ui.menu">
        <field name="name">Kế hoạch nguồn lực</field>
        <field name="action" ref="project_account_report_wizard_act"/>
    </record>
</odoo>