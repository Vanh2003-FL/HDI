<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       <record id="resource_analysis_report_pivot_view" model="ir.ui.view">
            <field name="name">resource_analysis_report_pivot</field>
            <field name="model">resource.analysis.report</field>
            <field name="arch" type="xml">
                <pivot sample="1">
                    <field name="date"/>
                    <field name="employee_id"/>
                    <field name="project_id"/>
                    <field name="mm"/>
                </pivot>
            </field>
       </record>

        <record id="resource_analysis_report_tree_view" model="ir.ui.view">
            <field name="name">resource_analysis_report_tree</field>
            <field name="model">resource.analysis.report</field>
            <field name="arch" type="xml">
                <list>
                    <field name="en_code" optional="show" string="Mã nhân sự"/>
                    <field name="date" optional="show"/>
                    <field name="month_text" optional="show"/>
                    <field name="en_type_id" optional="show"/>
                    <field name="employee_id" optional="show"/>
                    <field name="en_mail" optional="show" string="Email"/>
                    <field name="en_area_id" optional="show"/>
                    <field name="en_block_id" optional="show"/>
                    <field name="department_id" optional="show" string="Trung tâm"/>
                    <field name="en_department_id" optional="show"/>
                    <field name="project_id" optional="show"/>
                    <field name="mm" optional="show"/>
                </list>
            </field>
       </record>

        <record id="resource_analysis_report_search" model="ir.ui.view">
            <field name="name">resource_analysis_report_search</field>
            <field name="model">resource.analysis.report</field>
            <field name="arch" type="xml">
                <search >
                    <field name="employee_id" string="Nhân viên" filter_domain="['|', '|', ('employee_id.work_email', 'ilike', self), ('employee_id.name', 'ilike', self), ('employee_id.barcode', 'ilike', self)]"/>
                    <field name="en_area_id"/>
                    <field name="en_block_id"/>
                    <field name="department_id"/>
                    <field name="en_department_id"/>
                    <separator/>
                </search>
            </field>
        </record>

        <record id="resource_analysis_report_action" model="ir.actions.act_window">
            <field name="name">Báo cáo tổng hợp</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">report.info.popup</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'form', 'view_id': ref('account_reports.report_info_popup_form')})]"/>
            <field name="context">{
                'default_dest_model': 'resource.analysis.report',
                'default_dest_name': 'Báo cáo tổng hợp'
            }</field>

        </record>

        <record id="menu_resource_analysis_report" model="ir.ui.menu">
        <field name="name">Báo cáo tổng hợp</field>
        <field name="action" ref="resource_analysis_report_action"/>
        <field name="sequence">70</field>
    </record>


    </data>
</odoo>