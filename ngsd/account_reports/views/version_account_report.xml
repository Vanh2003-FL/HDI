<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_version_account_report" model="ir.actions.client">
        <field name="name">So sánh phiên bản WBS</field>
        <field name="tag">account_report</field>
        <field name="context" eval="{'model': 'version.account.report'}"/>
    </record>

    <record id="version_account_report_wizard_form" model="ir.ui.view">
        <field name="model">version.account.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="project_id" invisible="1"/>
                        <field name="current_wbs_id" force_save="1"/>
                        <field name="compare_wbs_id" force_save="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Xác nhận" name="do" type="object" class="oe_highlight"/>
                    <button string="Hủy" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="version_account_report_wizard_act" model="ir.actions.act_window">
        <field name="res_model">version.account.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!--    <record id="menu_version_action_report" model="ir.ui.menu">-->
    <!--        <field name="action" ref="version_account_report_wizard_act"/>-->
    <!--    </record>-->
</odoo>