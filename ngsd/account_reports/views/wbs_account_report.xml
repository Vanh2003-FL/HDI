<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="line_template_wbs_account_report" inherit_id="account_reports.line_template" primary="True">
        <xpath expr="//span[hasclass('account_report_line_name')]" position="inside">
            <a t-att-data-id="line.get('id')" t-att-data-model="line.get('model','project.project')" action="view_item" class="no_print oe_link_reports" style="border:unset;"> ⇒ chi tiết</a>
        </xpath>
    </template>

    <record id="action_wbs_account_report" model="ir.actions.client">
        <field name="name">Báo cáo WBS</field>
        <field name="tag">account_report</field>
        <field name="context" eval="{'model': 'wbs.account.report'}"/>
    </record>

    <record id="wbs_account_report_wizard_form" model="ir.ui.view">
        <field name="model">wbs.account.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="project_id"/>
                        <field name="wbs_id"/>
                        <field name="finished_percent" widget="percentage"/>
                    </group>
                </sheet>
                <footer>
                    <button string='Xem' attrs="{'invisible':['|',('project_id','=',False),('wbs_id','=',False)]}" name="do" type="object" class="oe_highlight"/>
                    <button string="Hủy" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="wbs_account_report_wizard_act" model="ir.actions.act_window">
        <field name="res_model">wbs.account.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_project_id': context.get('project_id')}</field>
    </record>
</odoo>