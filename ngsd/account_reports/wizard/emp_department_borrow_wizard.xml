<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="emp_department_borrow_wizard_act" model="ir.actions.act_window">
        <field name="res_model">emp.department.borrow.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="emp_department_borrow_wizard_form" model="ir.ui.view">
        <field name="model">emp.department.borrow.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="department_ids" widget="many2many_tags" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                        <field name="project_ids" widget="many2many_tags"  options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>

                        <field name="department_emp_ids" widget="many2many_tags"  options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                        <field name="emp_ids" widget="many2many_tags"  options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                    </group>
                </sheet>
                <footer>
                    <button string='Xác nhận' name="do" type="object" class="oe_highlight"/>
                    <button string="Hủy" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>