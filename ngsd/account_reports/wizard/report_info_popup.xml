<odoo>
    <record id="report_info_popup_form" model="ir.ui.view">
        <field name="name">report_info_popup_form</field>
        <field name="model">report.info.popup</field>
        <field name="arch" type="xml">
            <form string="import">
                <sheet>
                    <group>
                        <field name="dest_model" invisible="1"/>
                        <field name="dest_name" invisible="1"/>
                        <field name="period"/>
                    </group>
                    <group attrs="{'invisible': [('period', '!=', 'optional')]}">
                        <label for="date_from" string="Thời gian"/>
                        <div class="o_row">
                            <field name="date_from" nolabel="1"/>
                            <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                            <field name="date_to" nolabel="1"/>
                        </div>
                    </group>
                    <group attrs="{'invisible': [('dest_model', '!=', 'project.status.report')]}">
                        <field name="en_area_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                        <field name="en_department_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                        <field name="project_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                        <field name="en_department_domain" invisible="1" widget="many2many_tags"/>
                        <field name="project_domain" invisible="1" widget="many2many_tags"/>
                    </group>
                    <group attrs="{'invisible': [('dest_model', '!=', 'busy.rate.report')]}">
                        <field name="type_employee_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Xác nhận" class="oe_highlight" type="object" name="button_confirm"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>