        <menuitem id="ngsd_crm_dashboard_menu" name="Bảng thông tin" parent="ngsd_menu.crm_noti_not_target" sequence="1" action="ngsd_crm_dashboard"/>
        <menuitem id="ngsd_crm_dashboard_gm_menu" name="Bảng thông tin GM" parent="ngsd_menu.crm_noti_not_target" sequence="1" action="ngsd_crm_dashboard_gm"/>

