            <field name="name">Bảng thông tin</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kpi.dashboard</field>
            <field name="view_mode">dashboard</field>
            <field name="res_id" ref="demo_dashboard"/>
        </record>
        <record id="ngsd_crm_dashboard_gm" model="ir.actions.act_window">
