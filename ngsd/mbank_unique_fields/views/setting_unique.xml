<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="setting_unique_form" model="ir.ui.view">
        <field name="model">en.setting.unique</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Đã lưu" bg_color="bg-danger" invisible="active"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="model_id"/>
                            <field name="ttype"/>
                        </group>
                        <group>
                            <field name="field_ids" widget="many2many_tags"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <chatter/><field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="setting_unique_tree" model="ir.ui.view">
        <field name="model">en.setting.unique</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="model_id"/>
            </list>
        </field>
    </record>

    <record id="setting_unique_search" model="ir.ui.view">
        <field name="model">en.setting.unique</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="model_id"/>
                <separator/>
                <filter string="Đã lưu" domain="[('active', '=', False)]" name="inactive"/>
            </search>
        </field>
    </record>

    <record id="setting_unique_act" model="ir.actions.act_window">
        <field name="res_model">en.setting.unique</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="setting_unique_search"/>
    </record>
    
    <record id="setting_root" model="ir.ui.menu">
        <field name="name">Cài đặt</field>
        <field name="parent_id" ref="base.menu_administration"/>
        <field name="sequence">3</field>
    </record>
    <record id="setting_unique_menu" model="ir.ui.menu">
        <field name="action" ref="setting_unique_act"/>
        <field name="parent_id" ref="setting_root"/>
    </record>
</odoo>