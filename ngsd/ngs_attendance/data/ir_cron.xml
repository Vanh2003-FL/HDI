    <record id="auto_log_out_job" model="ir.cron">
        <field name="name">Tự động ghi nhận check out khi quên chấm công</field>
        <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
        <field name="state">code</field>
        <field name="code">model.auto_log_out_job()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="user_id" ref="base.user_admin"/>
        <field name="nextcall" eval="(DateTime.now()).strftime('%Y-%m-%d 17:00:00')"/>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="active" eval="True"/>
    </record>
