<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ngs_hr_work_location_form_view" model="ir.ui.view">
            <field name="name">ngs_hr_work_location_form_view</field>
            <field name="model">hr.work.location</field>
            <field name="inherit_id" ref="hr.hr_work_location_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <header>
                        <button string="Lấy vị trí" class="oe_highlight" type="location" name="pre_button_done"/>
                    </header>
                </xpath>
                <xpath expr="//field[@name='location_number']" position="after">
                    <field name="en_longitude"/>
                    <field name="en_latitude"/>
                </xpath>
                <xpath expr="//field[@name='location_number']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='address_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

            </field>
        </record>

    </data>
</odoo>