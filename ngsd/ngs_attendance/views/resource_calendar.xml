<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="resource_calendar_form" model="ir.ui.view">
        <field name="inherit_id" ref="resource.resource_calendar_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Quy tắc chấm công">
                    <group>
                        <group string="Chấm công" name="attendance">
                            <field name="attendance_type"/>
                            <label for="round"/>
                            <div class="o_row">
                                <field name="round" nolabel="1"/>
                                <span>phút</span>
                            </div>
                            <field name="en_auto_checkout"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>