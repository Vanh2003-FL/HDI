<?xml version="1.0"?>
<odoo>
        <record id="explanation_task_timesheet_form" model="ir.ui.view">
            <field name="name">explanation_task_timesheet_form</field>
            <field name="model">explanation.task.timesheet</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="explanation_id" invisible="1"/>
                                <field name="user_id" invisible="1"/>
                                <field name="type"  invisible="1"/>
                                <field name="project_id" attrs="{'invisible': [('type', '!=', 'TSDA')], 'required': [('type', '=', 'TSDA')]}"/>
                                <field name="task_id" attrs="{'invisible': [('type', '!=', 'TSDA')], 'required': [('type', '=', 'TSDA')]}"/>
                                <field name="en_nonproject_task_id" attrs="{'invisible': [('type', '!=', 'TSNDA')], 'required': [('type', '=', 'TSNDA')]}"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="button_confirm" string="Xác nhận" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


</odoo>
