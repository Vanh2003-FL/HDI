<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="report_timekeeping_wizard_form" model="ir.ui.view">
        <field name="model">report.timekeeping.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="en_department_domain" invisible="1"/>
                        <field name="export_option" widget="radio" options="{'horizontal': true}"/>
                        <field name="year" widget="year_picker"
                               attrs="{'invisible': [('export_option', '!=', 'month')], 'required': [('export_option', '=', 'month')]}"/>
                        <field name="month"
                               attrs="{'invisible': [('export_option', '!=', 'month')], 'required': [('export_option', '=', 'month')]}"/>
                        <label for="date_from" string="Thời gian"
                               attrs="{'invisible': [('export_option', '!=', 'custom')]}"/>
                        <div class="o_row" attrs="{'invisible': [('export_option', '!=', 'custom')]}">
                            <field name="date_from" widget="daterange" options="{'related_end_date': 'date_to'}"
                                   attrs="{'invisible': [('export_option', '!=', 'custom')], 'required': [('export_option', '=', 'custom')]}"/>
                            <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                            <field name="date_to" widget="daterange" options="{'related_start_date': 'date_from'}"
                                   attrs="{'invisible': [('export_option', '!=', 'custom')], 'required': [('export_option', '=', 'custom')]}"/>
                        </div>
                        <field name="department_ids" widget="many2many_tags"/>
                        <field name="en_department_ids" widget="many2many_tags"/>
                        <field name="employee_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
                <footer>
                    <button type="object" name="action_view" string="Xác nhận" class="btn-primary"/>
                    <button special="cancel" string="Hủy" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.server" id="report_timekeeping_wizard_action">
        <field name="name">Xuất bảng chấm công</field>
        <field name="model_id" ref="model_report_timekeeping_wizard"/>
        <field name="binding_model_id" ref="model_report_timekeeping_wizard"/>
        <field name="type">ir.actions.server</field>
        <field name="state">code</field>
        <field name="code">
            action = env['report.timekeeping.wizard'].get_view_action()
        </field>
    </record>

</odoo>