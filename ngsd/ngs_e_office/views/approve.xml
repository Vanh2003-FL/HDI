<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="office_approve_flow_search" model="ir.ui.view">
        <field name="model">office.approve.flow</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="name"/>
                <field name="block_ids"/>
                <field name="department_ids"/>
                <field name="en_department_ids"/>
            </search>
        </field>
    </record>
    <record id="office_approve_flow_tree" model="ir.ui.view">
        <field name="model">office.approve.flow</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="block_ids" widget="many2many_tags"/>
                <field name="department_ids" widget="many2many_tags"/>
                <field name="en_department_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>
    <record id="office_approve_flow_form" model="ir.ui.view">
        <field name="model">office.approve.flow</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <div class="oe_title" name="title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="model_id"/>
                        <field name="model" invisible="1"/>
                        <field name="block_ids" widget="many2many_tags"/>
                        <field name="department_ids" widget="many2many_tags"/>
                        <field name="en_department_ids" widget="many2many_tags"/>
                        <field name="domain" widget="domain" options="{'model': 'model'}"/>
                    </group>
                    <notebook>
                        <page string="Quy tắc phê duyệt">
                            <field name="max_line_sequence" invisible="1"/>
                            <field name="rule_ids" context="{'default_sequence':max_line_sequence}">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="visible_sequence"/>
                                    <field name="type"/>
                                    <field name="role_id" invisible="type != 'role' or 1" readonly="type != 'role'"/>
                                    <field name="role_selection" invisible="type != 'role'" readonly="type != 'role'"/>
                                    <field name="user_id" invisible="type != 'person'" readonly="type != 'person'"/>
                                    <field name="en_role_detail" readonly="type != 'person'"/>
                                    <field name="required"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="office_approve_flow_action" model="ir.actions.act_window">
        <field name="res_model">office.approve.flow</field>
        <field name="search_view_id" ref="office_approve_flow_search"/>
        <field name='view_mode'>tree,form</field>
    </record>

</odoo>