<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View cho readonly -->
    <record id="powerbi_dashboard_form_readonly" model="ir.ui.view">
        <field name="name">dashboard.powerbi.form.readonly</field>
        <field name="model">dashboard.powerbi</field>
        <field name="priority" eval="1000"/>
        <field name="arch" type="xml">
            <form string="Dashboard Readonly" create="0" edit="0" delete="0">
                <sheet>
                    <field name="iframe" widget="html" nolabel="1" options="{'sanitize': false}"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Form View cho edit -->
    <record id="powerbi_dashboard_form_edit" model="ir.ui.view">
        <field name="name">dashboard.powerbi.form.edit</field>
        <field name="model">dashboard.powerbi</field>
        <field name="arch" type="xml">
            <form string="Dashboard Edit">
                <sheet>
                    <group>
                        <group>
                            <field name="ref"/>
                            <field name="name"/>
                            <field name="iframe" widget="text"/>
                        </group>
                        <group>
                            <field name="thumbnail" widget="image"/>
                            <field name="groups_id" widget="many2many_tags"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="powerbi_dashboard_tree" model="ir.ui.view">
        <field name="name">dashboard.powerbi.tree</field>
        <field name="model">dashboard.powerbi</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="ref"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="powerbi_dashboard_kanban" model="ir.ui.view">
        <field name="name">dashboard.powerbi.kanban</field>
        <field name="model">dashboard.powerbi</field>
        <field name="arch" type="xml">
            <kanban default_order="sequence" create="0">
                <field name="thumbnail"/>
                <field name="name"/>
                <field name="ref"/>
                <field name="sequence"/>
                <templates>
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click" t-att-data-id="record.id">
                            <div class="o_kanban_image">
                                <field name="thumbnail" widget="image" class="oe_kanban_image"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong>
                                <div><field name="ref"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action cho Kanban View -->
    <record id="powerbi_dashboard_act" model="ir.actions.act_window">
        <field name="name">Dashboard PowerBI</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dashboard.powerbi</field>
        <field name="view_mode">kanban,form</field>
        <field name="context">{'form_view_ref': 'ngs_powerbi.powerbi_dashboard_form_readonly'}</field>
    </record>

    <!-- Action cho Tree View -->
    <record id="powerbi_dashboard_config_act" model="ir.actions.act_window">
        <field name="name">Cấu hình Dashboard PowerBI</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dashboard.powerbi</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'form_view_ref': 'ngs_powerbi.powerbi_dashboard_form_edit'}</field>
    </record>

    <!-- Menu item cho Kanban -->
    <menuitem id="powerbi_dashboard_menu"
              name="PowerBI Dashboard"
              action="powerbi_dashboard_act"
              sequence="10"/>

    <!-- Menu item cho Tree View -->
    <menuitem id="powerbi_dashboard_config_menu"
              parent="powerbi_dashboard_menu"
              name="Cấu hình"
              action="powerbi_dashboard_config_act"
              sequence="20"/>
</odoo>