<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="approve_role_search" model="ir.ui.view">
        <field name="model">en.approve.role</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="name"/>
                <field name="user_ids"/>
            </search>
        </field>
    </record>
    <record id="approve_role_tree" model="ir.ui.view">
        <field name="model">en.approve.role</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>
    <record id="approve_role_form" model="ir.ui.view">
        <field name="model">en.approve.role</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <div>
                            <div class="oe_title">
                                <label for="name"/>
                                <h1>
                                    <field name="name"/>
                                </h1>
                            </div>
                            <notebook>
                                <page name="user" string="Người dùng">
                                    <field name="user_ids" nolabel="1"/>
                                </page>
                            </notebook>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="approve_role_act" model="ir.actions.act_window">
        <field name="res_model">en.approve.role</field>
        <field name="search_view_id" ref="approve_role_search"/>
        <field name='view_mode'>tree,form</field>
    </record>
    <record id="approve_role_menu" model="ir.ui.menu">
        <field name="action" ref="approve_role_act"/>
        <field name="active" eval="False"/>
    </record>

    <record id="approve_flow_search" model="ir.ui.view">
        <field name="model">en.approve.flow</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="name"/>
                <field name="model_id"/>
                <field name="project_ids"/>
                <group expand="0" string="Group By">
                    <filter string="Loại chứng từ" name="model" domain="[]" context="{'group_by':'model_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="approve_flow_tree" model="ir.ui.view">
        <field name="model">en.approve.flow</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="model_id"/>
                <field name="project_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>
    <record id="approve_flow_form" model="ir.ui.view">
        <field name="model">en.approve.flow</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <div class="oe_title" name="title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="model_id"/>
                        <field name="model" invisible="1"/>
                        <field name="project_ids" widget="many2many_tags"/>
                        <field name="domain" widget="domain" options="{'model':'model'}"/>
                    </group>
                    <notebook>
                        <page string="Quy tắc phê duyệt">
                            <field name="max_line_sequence" invisible="1"/>
                            <field name="rule_ids" context="{'default_sequence':max_line_sequence}">
                                <list editable="bottom">
<!--                                    <field name="sequence" widget="handle"/>-->
                                    <field name="visible_sequence"/>
                                    <field name="type"/>
                                    <field name="role_id" invisible="1" readonly="type != 'role'"/>
                                    <field name="role_selection" invisible="type != 'role'" readonly="type != 'role'"/>
                                    <field name="user_id" invisible="type != 'person'" readonly="type != 'person'"/>
                                    <field name="en_role_detail" readonly="type != 'person'"/>
                                    <field name="amount" readonly="parent.model == 'en.hr.overtime' or resource_unit not in ['mm']" invisible="resource_unit not in ['mm']" column_invisible="parent.model == 'en.hr.overtime'"/>
                                    <field name="en_amount" widget="percentage" readonly="parent.model == 'en.hr.overtime' or resource_unit not in ['budget','baseline']" invisible="resource_unit not in ['budget','baseline']" column_invisible="parent.model == 'en.hr.overtime'"/>
                                    <field name="resource_unit" readonly="parent.model == 'en.hr.overtime'" column_invisible="parent.model == 'en.hr.overtime'"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="approve_flow_act" model="ir.actions.act_window">
        <field name="res_model">en.approve.flow</field>
        <field name="search_view_id" ref="approve_flow_search"/>
        <field name='view_mode'>tree,form</field>
    </record>
    <record id="approve_flow_menu" model="ir.ui.menu">
        <field name="action" ref="approve_flow_act"/>
    </record>

    <record id="approve_line_tree" model="ir.ui.view">
        <field name="model">en.approve.line</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence"/>
                <field name="approver_user_ids" widget="many2many_tags"/>
                <field name="user_id"/>
                <field name="date"/>
                <field name="state"/>
            </list>
        </field>
    </record>
    <record id="approve_line_form" model="ir.ui.view">
        <field name="model">en.approve.line</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="sequence"/>
                        <field name="approver_user_ids" widget="many2many_tags"/>
                        <field name="user_id"/>
                        <field name="date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>