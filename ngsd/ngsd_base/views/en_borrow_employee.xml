<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="en_borrow_employee_form" model="ir.ui.view">
        <field name="model">en.borrow.employee</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="approve_ok" invisible="1"/>
                    <field name="is_borrower" invisible="1"/>
                    <field name="is_lender" invisible="1"/>
                    <button string="Gửi duyệt" type="object" name="button_to_approve" attrs="{'invisible':['|','|',('is_borrower', '=', False),('state','!=','draft'),('id', '=', False)]}"/>
                    <button string="Duyệt" type="object" name="button_approved" attrs="{'invisible':['|',('state','!=','to_approve'),('approve_ok','=',False)]}"/>
                    <button string="Từ chối" type="object" name="button_refused" attrs="{'invisible':['|',('state','!=','to_approve'),('approve_ok','=',False)]}"/>
                    <button string="Hủy" type="object" name="button_cancel" attrs="{'invisible':['|','|',('is_borrower', '=', False),('state','!=','draft'),('id', '=', False)]}"/>
                    <button string="Tạo danh sách" type="object" name="new_lender_employee" attrs="{'invisible':['|',('is_lender', '=', False),('state','!=','approved')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved"/>
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button class="oe_stat_button" type="object" name="to_folder" icon="fa-list-alt">
                            <field name="count_bill_borrow" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="" style="width:50%;">
                        <h1>
                            <field name="name" placeholder="Tên phiếu" nolabel="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code" readonly="1"/>
                        </group>
                        <group>
                            <field name="date" attrs="{'readonly': [('is_borrower', '=', False)]}"/>
                        </group>
                    </group>
                    <group>
                        <group string="Thông tin bên mượn">
                            <field name="borrower_id" readonly="1" force_save="1"/>
                            <field name="department_borrower_id"/>
                            <field name="department_borrower_domain" invisible="1"/>
                        </group>
                        <group string="Thông tin bên cho mượn">
                            <field name="lender_id"/>
                            <field name="department_lender_id" attrs="{'readonly': [('is_borrower', '=', False)]}"/>
                            <field name="department_lender_ids" widget="many2many_tags" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Chi tiết mượn">
                            <field name="borrow_employee_detail_ids" attrs="{'readonly': ['|',('is_borrower', '=', False),('state', '!=', 'draft')]}">
                                <list editable="bottom">
                                    <field name="job_position_id"/>
                                    <field name="level_id"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                    <field name="workload" widget="percentage"/>
                                    <field name="description"/>
                                    <button string=" " name="button_en_copy" type="object" icon="fa-clipboard" attrs="{'invisible': ['|',('parent.is_borrower', '=', False),('parent.state', '!=', 'draft')]}"/>
                                </list>
                            </field>
                        </page>
                        <page string="Thông tin phê duyệt">
                            <group>
                                <group>
                                    <field name="en_request_user_id"/>
                                    <field name="en_next_approver_ids" widget="many2many_tags"/>
                                </group>
                                <group>
                                    <field name="en_request_date"/>
                                </group>
                            </group>
                            <field name="en_approve_line_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/><field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="en_borrow_employee_tree" model="ir.ui.view">
        <field name="model">en.borrow.employee</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="date"/>
                <field name="borrower_id"/>
                <field name="department_borrower_id"/>
                <field name="department_borrower_domain" invisible="1"/>
                <field name="lender_id"/>
                <field name="department_lender_id"/>
                <field name="department_lender_ids" invisible="1"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="en_borrow_employee_search" model="ir.ui.view">
       <field name="name">en.borrow.employee.search</field>
       <field name="model">en.borrow.employee</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="name"/>
                <field name="borrower_id"/>
                <field name="department_borrower_id"/>
                <field name="lender_id"/>
                <field name="department_lender_id"/>
                <group expand="0" string="Group By">
                    <filter string="Trung tâm cho mượn" name="group_department_lender" domain="[]" context="{'group_by': 'department_lender_id'}" />
                    <filter string="Trạng thái" name="group_state" domain="[]" context="{'group_by': 'state'}" />
                </group>
            </search>
       </field>
    </record>

    <record id="en_borrow_employee_act" model="ir.actions.act_window">
        <field name="res_model">en.borrow.employee</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
