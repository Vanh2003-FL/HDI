<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="en_experience_tree" model="ir.ui.view">
        <field name="model">en.experience</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="type"/>
                <field name="project_id"/>
            </list>
        </field>
    </record>
    <record id="en_experience_form" model="ir.ui.view">
        <field name="model">en.experience</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field class="text-break" name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="type"/>
                        <field name="project_id"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="en_experience_search" model="ir.ui.view">
        <field name="model">en.experience</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="project_id"/>
                <filter string="Loại bài học" name="group_type" domain="[]" context="{'group_by': 'type'}"/>
            </search>
        </field>
    </record>
    
    <record id="en_experience_action" model="ir.actions.act_window">
        <field name="res_model">en.experience</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="en_experience_menu" model="ir.ui.menu">
        <field name="action" ref="en_experience_action"/>
    </record>
</odoo>