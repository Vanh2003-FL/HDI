<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_job_tree_view" model="ir.ui.view">
            <field name="name">hr.job.tree.view</field>
            <field name="model">hr.job</field>
            <field name="arch" type="xml">
                <list string="Chức danh">
                    <field name="block_id" optional="hide"/>
                    <field name="department_id" optional="show" string="Tên Trung tâm/Ban"/>
                    <field name="en_department_id" optional="hide" invisible="1"/>
                    <field name="cap_bac_level_id" optional="show"/>
                    <field name="ky_hieu_level_id" optional="show"/>
                    <field name="name" optional="show"/>
                    <field name="no_of_employee" optional="hide"/>
                    <field name="no_of_recruitment" optional="hide"/>
                    <field name="expected_employees" optional="hide"/>
                    <field name="no_of_hired_employee" optional="hide"/>
                    <field name="is_published" optional="hide" string="Đã đăng"/>
                </list>
            </field>
        </record>
        <record id="view_hr_job_form_inherit" model="ir.ui.view">
            <field name="name">hr.job.form.inherit</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_form"/>
            <field name="priority">1000</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='website_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='department_id']" position="before">
                    <field name="block_id" string="Khối"/>
                </xpath>
                <xpath expr="//field[@name='department_id']" position="after">
                    <field name="en_department_id" string="Phòng ban" invisible="1"/>
                    <field name="cap_bac_level_id"/>
                    <field name="ky_hieu_level_id" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="hr_boundary_master_ids" readonly="1" invisible="1">
                        <list>
                            <field name="en_department_id"/>
                            <field name="en_name_level_id"/>
                            <field name="hr_boundary"/>
                        </list>
                    </field>
                    <field name="family_id"/>
                    <field name="sub_family_id"/>
                    <field name="level_id"/>
                    <field name="sub_level_id"/>
                </xpath>
                <xpath expr="//field[@name='address_id']" position="after">
                    <field name="job_code_id"/>
                    <field name="hr_symbol_id"/>
                </xpath>
                <xpath expr="//notebook/page[2]" position="after">
                    <page name="Nhân viên" string="Nhân viên">
                        <group>
                            <field name="employee_ids" nolabel="1"  readonly="True" context="{'invisible_header_hr_employee': True}">
                                <list>
                                    <field name="barcode"/>
                                    <field name="name"/>
                                    <field name="en_area_id"/>
                                    <field name="en_block_id"/>
                                    <field name="department_id"/>
                                    <field name="en_department_id"/>
                                </list>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        <record id="filter_hr_job" model="ir.ui.view">
            <field name="name">hr.job.filter</field>
            <field name="model">hr.job</field>
            <field name="arch" type="xml">
                <search string="Chức danh">
                    <field name="block_id" string="Tất cả" filter_domain="['|','|','|','|',('block_id', 'ilike', self), ('department_id', 'ilike', self), ('en_department_id', 'ilike', self), ('cap_bac_level_id', 'ilike', self), ('name', 'ilike', self)]"/>
                    <field name="name" string="Chức danh"/>
                    <field name="block_id" string="Khối"/>
                    <field name="department_id" string="Trung tâm/Ban"/>
                    <field name="en_department_id" string="Phòng"/>
                    <field name="cap_bac_level_id" string="Cấp bậc"/>
                    <filter string="Đã lưu" name="archived" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Khối" name="Khối" domain="[]" context="{'group_by': 'block_id'}"/>
                        <filter string="Trung tâm/Ban" name="Trung tâm/Ban" domain="[]" context="{'group_by': 'department_id'}"/>
                        <filter string="Cấp bậc" name="Cấp bậc" domain="[]" context="{'group_by': 'cap_bac_level_id'}"/>
                        <filter string="Phòng" name="Phòng" domain="[]" context="{'group_by': 'en_department_id'}"/>
                    </group>
                </search>
            </field>
        </record>
         <record id="hr_job_action" model="ir.actions.act_window">
            <field name="name">Chức danh</field>
            <field name="res_model">hr.job</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'list', 'view_id': ref('ngsd_base.hr_job_tree_view')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('hr.view_hr_job_form')})]"/>
            <field name="search_view_id" ref="filter_hr_job"/>
         </record>

        <record id="hr_symbol_tree" model="ir.ui.view">
            <field name="name">hr.symbol.tree</field>
            <field name="model">hr.symbol</field>
            <field name="arch" type="xml">
                <list editable="top">
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="hr_family_tree" model="ir.ui.view">
            <field name="name">hr.family.tree</field>
            <field name="model">hr.family</field>
            <field name="arch" type="xml">
                <list editable="top">
                    <field name="name"/>
                    <field name="parent_id"/>

                </list>
            </field>
        </record>

        <record id="hr_family_form" model="ir.ui.view">
            <field name="name">hr.family.form</field>
            <field name="model">hr.family</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="sub_family"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="job_code_tree" model="ir.ui.view">
            <field name="name">job.code.tree</field>
            <field name="model">job.code</field>
            <field name="arch" type="xml">
                <list editable="top">
                    <field name="name"/>
                </list>
            </field>
        </record>


        <record id="hr_level_tree" model="ir.ui.view">
            <field name="name">hr.level.tree</field>
            <field name="model">hr.level</field>
            <field name="arch" type="xml">
                <list editable="top">
                    <field name="name"/>
                    <field name="parent_id"/>

                </list>
            </field>
        </record>
        <record id="hr_level_form" model="ir.ui.view">
            <field name="name">hr.level.form</field>
            <field name="model">hr.level</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="sub_level"/>
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>
