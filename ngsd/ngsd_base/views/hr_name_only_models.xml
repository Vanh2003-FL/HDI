    <record id="name_block_tree" model="ir.ui.view">
        <field name="model">en.name.block</field>
        <field name="arch" type="xml">
            <list>
                <field name="code"/>
                <field name="name"/>
                <field name="area_id" options="{'no_edit': True, 'no_create': True, 'no_open': True}"/>
                <field name="en_project_implementation_id"/>
                <field name="department_ids" widget="many2many_tags" optional="hide"/>
                <field name="en_department_ids" widget="many2many_tags" optional="hide"/>
            </list>
        </field>
    </record>
    <record id="name_block_form" model="ir.ui.view">
        <field name="name">name.block.form</field>
        <field name="model">en.name.block</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_title">
                    <h1><field name="name" placeholder="Tên..."/></h1>
                </div>
                <group>
                    <field name="code"/>
                    <field name="en_project_implementation_id" options="{'no_edit': True, 'no_create': True, 'no_open': True}"/>
                    <field name="area_id" options="{'no_edit': True, 'no_create': True, 'no_open': True}"/>
                    <field name="en_area_ids"
                       options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"
                       widget="many2many_tags" groups="base.group_system"/>
                </group>
                <notebook>
                    <page string="Trung tâm/Ban">
                        <field name="department_ids">
                            <list>
                                <field name="code"/>
                                <field name="name" string="Trung tâm/Ban"/>
                                <field name="manager_id"/>
                                <field name="count_hr_employee_ids"/>
                                <field name="en_department_ids"/>
                                <field name="block_id"/>
                            </list>
                        </field>
                    </page>
                    <page string="Phòng">
                        <field name="en_department_ids">
                            <list>
                                <field name="code"/>
                                <field name="name"/>
                                <field name="department_id"/>
                                <field name="block_id"/>
                                <field name="manager_id"/>
                                <field name="count_hr_employee"/>
                            </list>
                        </field>
                    </page>
                    <page string="Vị trí">
                        <field name="hr_job_ids">
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>
   <record id="en_name_block_search" model="ir.ui.view">
        <field name="name">en.name.block.search</field>
        <field name="model">en.name.block</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Tất cả" filter_domain="['|', '|', ('name', 'ilike', self), ('code', 'ilike', self), ('area_id', 'ilike', self)]"/>
                <field name="code"/>
                <field name="name"/>
                <field name="area_id"/>
                <filter string="Đã lưu" domain="[('active', '=', False)]" name="archive"/>
                <filter string="Khu vực" name="Khu vực" context="{'group_by':'area_id'}"/>
            </search>
        </field>
   </record>
    <record id="name_block_act" model="ir.actions.act_window">
        <field name="res_model">en.name.block</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids"
                   eval="[(5, 0, 0),
