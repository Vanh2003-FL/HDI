    <record id="risk_kanban" model="ir.ui.view">
        <field name="name">Rủi ro/Cơ hội</field>
        <field name="model">en.risk</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="stage_id"/>
                <field name="risk_level_id"/>
                <field name="creator_id"/>
                <field name="en_create_date"/>
                <field name="date_end"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div>
                                <b>Tên rủi ro/cơ hội</b>: <field name="name"/><br/>
                                <b>Tình trạng</b>: <field name="stage_id"/><br/>
                                <b>Mức độ rủi ro</b>: <field name="risk_level_id"/><br/>
                                <b>Người phản ánh</b>: <field name="creator_id"/><br/>
                                <b>Ngày phản ánh</b>: <field name="en_create_date"/><br/>
