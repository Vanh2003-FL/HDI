<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="kpi_detail_search" model="ir.ui.view">
        <field name="model">en.kpi.detail</field>
        <field name="arch" type="xml">
            <search>
                <field name="year"/>
                <field name="type"/>
                <field name="sale_team_id"/>
                <field name="user_id"/>
                <group expand="0" string="Group By">
                    <filter string="Từ ngày" name="groupby_date_from" domain="[]" context="{'group_by': 'date_from:month'}"/>
                    <filter string="Loại" name="groupby_type" domain="[]" context="{'group_by': 'type'}"/>
                    <filter string="Nhóm kinh doanh" name="groupby_sale_team_id" domain="[]" context="{'group_by': 'sale_team_id'}"/>
                    <filter string="Nhân viên kinh doanh" name="groupby_user_id" domain="[]" context="{'group_by': 'user_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="kpi_detail_tree" model="ir.ui.view">
        <field name="model">en.kpi.detail</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="type"/>
                <field name="sale_team_id"/>
                <field name="user_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
            </list>
        </field>
    </record>

    <record id="kpi_detail_form" model="ir.ui.view">
        <field name="model">en.kpi.detail</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                    </div>
                    <group string="Chỉ tiêu KPI">
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="type"/>
                            <field name="sale_team_id"/>
                            <field name="user_id"/>
                            <label for="date_from" string="Thời gian"/>
                            <div class="o_row">
                                <field name="date_from" widget="daterange" options="{'related_end_date': 'date_to'}"/>
                                <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                                <field name="date_to" widget="daterange" options="{'related_start_date': 'date_from'}"/>
                            </div>
                        </group>
                        <group>
                            <field name="rate" widget="percentage"/>
                            <field name="kpi_sales" widget="monetary"/>
                            <field name="kpi_revenue" widget="monetary"/>
                            <field name="kpi_invoiced" widget="monetary"/>
                        </group>
                    </group>
                    <group>
                        <group string="Kế hoạch KPI">
                            <field name="expected_sales" widget="monetary"/>
                            <field name="expected_revenue" widget="monetary"/>
                            <field name="expected_invoiced" widget="monetary"/>
                        </group>
                        <group string="Thực đạt KPI">
                            <field name="sales" widget="monetary"/>
                            <field name="revenue" widget="monetary"/>
                            <field name="invoiced" widget="monetary"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="kpi_detail_act" model="ir.actions.act_window">
        <field name="res_model">en.kpi.detail</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="kpi_detail_menu" model="ir.ui.menu">
        <field name="action" ref="kpi_detail_act"/>
    </record>
</odoo>