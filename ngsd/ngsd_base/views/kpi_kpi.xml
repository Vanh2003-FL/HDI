<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="kpi_kpi_search" model="ir.ui.view">
        <field name="model">en.kpi.kpi</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="year"/>
                <field name="company_id"/>
                <group expand="0" string="Group By">
                    <filter string="Năm" name="groupby_year" domain="[]" context="{'group_by': 'year'}"/>
                    <filter string="Công ty" name="groupby_company_id" domain="[]" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="kpi_kpi_tree" model="ir.ui.view">
        <field name="model">en.kpi.kpi</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="year" invisible="1"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="distribute_type"/>
                <field name="company_id"/>
            </list>
        </field>
    </record>
    <record id="kpi_kpi_form" model="ir.ui.view">
        <field name="model">en.kpi.kpi</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="button_confirmed" string="Xác nhận" type="object" invisible="state != 'new'"/>
                    <button name="button_cancel" string="Hủy" type="object" invisible="state not in ('new', 'confirmed')"/>
                    <button invisible="state != 'confirmed' or is_detailable != False" string="Tạo phân bổ KPI" name="create_kpi_detail" type="object"/>
                    <button invisible="state != 'confirmed' or is_detailable == False" string="Tạo phân bổ KPI" confirm="Đã tồn tại KPI phân bổ cho chỉ tiêu này, xác nhận hành động sẽ xóa hết tất cả bản ghi đã tồn tại" name="create_kpi_detail" type="object"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <form>
                    <div class="oe_button_box" name="button_box">
                        <button invisible="is_detailable == False"
                                name="to_detail"
                                type="object"
                                string="KPI phân bổ"
                                icon="fa-bar-chart"
                        />
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                    </div>
                    <group>
                        <group>
<!--                            <field name="year" widget="dynamic_dropdown" values="all_years_selection"/>-->
                            <label for="date_from" string="Thời gian"/>
                            <div class="o_row">
                                <field name="date_from" widget="daterange" options="{'related_end_date': 'date_to'}"/>
                                <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                                <field name="date_to" widget="daterange" options="{'related_start_date': 'date_from'}"/>
                            </div>
                            <field name="distribute_type" widget="radio"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                            <field name="currency_id"/>
                            <field name="is_detailable" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="KPI nhóm">
                            <field name="team_kpi_ids" context="{'default_type':'team'}">
                                <list editable="bottom">
                                    <field name="sale_team_id" required="True"/>
                                    <field name="sales" widget="monetary" sum="total_sales"/>
                                    <field name="revenue" widget="monetary" sum="total_revenue"/>
                                    <field name="invoiced" widget="monetary" sum="total_invoiced"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="type" invisible="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="KPI cá nhân">
                            <field name="sale_kpi_ids" context="{'default_type':'sale'}">
                                <list editable="bottom">
                                    <field name="sale_team_id"/>
                                    <field name="user_id" required="True"/>
                                    <field name="sales" widget="monetary" sum="total_sales"/>
                                    <field name="revenue" widget="monetary" sum="total_revenue"/>
                                    <field name="invoiced" widget="monetary" sum="total_invoiced"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="type" invisible="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Tỷ lệ phân bổ">
                            <field name="distribute_line_ids" force_save="1">
                                <list editable="bottom" create="0" delete="0">
                                    <field name="year" readonly="True" force_save="1"/>
                                    <field name="quarter" readonly="True" force_save="1"/>
                                    <field name="month" readonly="True" force_save="1"/>
                                    <field name="rate" widget="percentage" sum="total_rate"/>
                                </list>
                            </field>
                        </page>

                    </notebook>
                </form>
            </form>
        </field>
    </record>
    <record id="kpi_kpi_action" model="ir.actions.act_window">
        <field name="res_model">en.kpi.kpi</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="kpi_kpi_menu" model="ir.ui.menu">
        <field name="action" ref="kpi_kpi_action"/>
    </record>
</odoo>