<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="resource_planning_form" model="ir.ui.view">
        <field name="model">en.resource.planning</field>
        <field name="arch" type="xml">
            <form create="0">
                <header>
                    <button name="button_resource_account_report_wizard_act" string="Thông tin nguồn lực" type="object"/>
                    <field name="en_state" invisible="1"/>
                    <field name="sent_ok" invisible="1"/>
                    <field name="approve_ok" invisible="1"/>
                    <field name="technical_field_27766" invisible="1"/>
                    <button string="Tạo phiên bản mới" groups="ngsd_base.group_pm,ngsd_base.group_vpm" type="object" name="new_resource" invisible="not technical_field_27766"/>
                    <button string="Gửi duyệt" groups="ngsd_base.group_pm,ngsd_base.group_vpm" type="object" name="button_to_approve" invisible="state != 'draft' or not sent_ok"/>
                    <button string="Duyệt" type="object" name="button_approved" invisible="state != 'to_approve' or not approve_ok"/>
                    <button string="Từ chối" type="object" name="button_refused" invisible="state != 'to_approve' or not approve_ok"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved"/>
                    <button name="action_open_tree_for_export" string="Xuất" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button class="oe_stat_button" type="object" name="to_org_chart" icon="fa-pencil-square-o" string="Sơ đồ tổ chức dự án"/>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" class="oe_inline" placeholder="Tên kế hoạch nguồn lực"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_id" readonly="1" force_save="1"/>
                            <field name="project_code"/>
                            <field name="mm_rate" invisible="1"/>
                            <field name="user_id"/>
                            <field name="write_uid"/>
                        </group>
                        <group>
                            <field name="version_number"/>
                            <field name="version_type"/>
                            <field name="parent_id" invisible="version_type != 'plan'"/>
                            <field name="create_date"/>
                            <field name="write_date"/>
                            <field name="reason"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="resource_detail" string="Chi tiết nguồn lực">
                            <field name="order_line">
                                <list editable="bottom" class="allow_list_copy">
                                    <field name="type_id" options="{'no_open':True,'no_create':True,'no_quick_create':True,'no_create_edit':True}"/>
                                    <field name="employee_id" options="{'no_open':True,'no_create':True,'no_quick_create':True,'no_create_edit':True}"/>
                                    <field name="employee_ids" invisible="1"/>
                                    <field name="role_ids" invisible="1"/>
                                    <field name="job_position_ids" invisible="1"/>
                                    <field name="email"/>
                                    <field name="role_id"/>
                                    <field name="job_position_id"/>
                                    <field name="project_stage_id" options="{'no_open':True,'no_create':True,'no_quick_create':True,'no_create_edit':True}"/>
                                    <field name="project_stage_ids" invisible="1"/>
<!--                                    <field name="date_start" force_save="1"/>-->
<!--                                    <field name="date_end" force_save="1"/>-->
                                    <field name="date_start" readonly="not edit_date_start" force_save="1"/>
                                    <field name="date_end" readonly="not edit_date_end" force_save="1"/>
                                    <field name="workload" widget="percentage" readonly="not edit_date_end"/>
                                    <field name="en_md" readonly="not edit_date_end"/>
<!--                                    <field name="en_md_migrate"/>-->
                                    <field name="en_state"/>
                                    <field name="old_line_id" invisible="1" force_save="1"/>
                                    <field name="no_delete_line" invisible="1"/>
                                    <field name="edit_date_start" invisible="1"/>
                                    <field name="edit_date_end" invisible="1"/>
                                    <field name="hours_indate" invisible="1"/>
                                    <field name="mm" invisible="1"/>
                                </list>
                            </field>
                            <group>
                                <field name="confirm_user_approved" invisible="1"/>
                                <field name="en_bmm"/>
                                <field name="hours_total" invisible="1"/>
                                <field name="en_md"/>
                                <field name="resource_total" invisible="1"/>
                                <field name="mm_conversion"/>
                                <field name="increase_resource_total" invisible="1"/>
                                <field name="budget_over" widget="percentage"/>
                                <field name="baseline_over" widget="percentage"/>
                            </group>
                        </page>
                        <page string="Thông tin phê duyệt">
                            <group>
                                <group>
                                    <field name="en_request_user_id"/>
                                    <field name="en_next_approver_ids" widget="many2many_tags"/>
                                </group>
                                <group>
                                    <field name="en_request_date"/>
                                </group>
                            </group>
                            <field name="en_approve_line_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/><field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="resource_detail_form" model="ir.ui.view">
        <field name="model">en.resource.detail</field>
        <field name="arch" type="xml">
            <form create="0">
                <sheet>
                    <group>
                        <group>
<!--                            <field name="en_used_hour"/>-->
                            <field name="order_id"/>
                            <field name="employee_id"/>
                            <field name="employee_ids" invisible="1"/>
                            <field name="email"/>
                            <field name="job_position_id"/>
                            <field name="job_position_ids" invisible="1"/>
                            <field name="date_end"/>
                            <field name="en_state"/>
                        </group>
                        <group>
                            <field name="en_user_id"/>
                            <field name="type_id"/>
                            <field name="en_replacement_staff"/>
                            <field name="role_id"/>
                            <field name="role_ids" invisible="1"/>
                            <field name="date_start"/>
                            <field name="workload"/>
                            <field name="en_md"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="resource_planning_tree" model="ir.ui.view">
        <field name="model">en.resource.planning</field>
        <field name="arch" type="xml">
            <list js_class="list_with_export_hint">
                <field name="name"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="resource_planning_act" model="ir.actions.act_window">
        <field name="res_model">en.resource.planning</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="hr_holidays.open_view_public_holiday" model="ir.actions.act_window">
        <field name="domain">[('is_holiday', '=', True)]</field>
        <field name="context">{'search_default_filter_date': True, 'default_is_holiday': True}</field>
    </record>

    <!--    <record id="resource_planning_menu" model="ir.ui.menu">-->
    <!--        <field name="action" ref="resource_planning_act"/>-->
    <!--    </record>-->
</odoo>