<?xml version="1.0"?>
<odoo>
        <record id="add_workload_popup_form" model="ir.ui.view">
            <field name="name">add_workload_popup_form</field>
            <field name="model">add.workload.popup</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="detail_id"  invisible="1"/>
                                <field name="type"  invisible="1"/>
                                <field name="workload"/>
                                <field name="add_workload" readonly="type == 'confirm'"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="button_confirm" string="Xác nhận" type="object" class="btn-primary"/>
                        <button name="button_cancel" string="từ chối" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


</odoo>
