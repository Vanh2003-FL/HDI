<?xml version="1.0"?>
<odoo>
        <record id="hr_overview_report_popup_form" model="ir.ui.view">
            <field name="name">hr_overview_report_popup_form</field>
            <field name="model">hr.overview.report.popup</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="model"  invisible="1"/>
                                <field name="en_block_domain"  invisible="1"/>
                                <field name="en_department_domain"  invisible="1"/>
                                <field name="en_area_ids" widget="many2many_tags"/>
                                <field name="en_block_ids" widget="many2many_tags" />
                                <field name="en_department_ids" widget="many2many_tags" />
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="button_confirm" string="Xác nhận" type="object" class="btn-primary" data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="hr_overview_report_popup_action" model="ir.actions.act_window">
            <field name="name">Sơ đồ tổ chức phòng ban</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.overview.report.popup</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="hr_overview_report_popup_form"/>
            <field name="target">new</field>
            <field name="context">{'default_model': 'en.name.area'}</field>
        </record>
        <record id="hr_overview_report_employee_popup_action" model="ir.actions.act_window">
            <field name="name">Sơ đồ tổ chức hình cây</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.overview.report.popup</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="hr_overview_report_popup_form"/>
            <field name="target">new</field>
            <field name="context">{'default_model': 'hr.org.chart.report'}</field>
        </record>
        <record id="action_org_chart_department_overview" model="ir.actions.client">
            <field name="name">Sơ đồ tổ chức phòng ban</field>
            <field name="tag">hr_org_chart_overview</field>
            <field name="target">main</field>
            <field name="params">{'model': 'en.name.area'}</field>
        </record>

</odoo>
