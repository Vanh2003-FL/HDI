<odoo>
    <record id="form_view_import_wbs_popup" model="ir.ui.view">
        <field name="name">form_view_import_wbs_popup</field>
        <field name="model">import.wbs.popup</field>
        <field name="arch" type="xml">
            <form string="import">
                <field name="file_name" invisible="1"/>
                <div style="display:inline;">
                    <field name="file" filename="file_name"/>
                    <button string="Nhập file" class="btn-primary ml-3" type="object" name="import_data" invisible="not file"/>
                    <button string="Hủy" class="btn-secondary ml-5" special="cancel"/>
                </div>
                <footer>
                </footer>

            </form>
        </field>
    </record>

    <record id="form_view_import_wbs_popup_act" model="ir.actions.act_window">
        <field name="name">Nhập WBS</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">import.wbs.popup</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>