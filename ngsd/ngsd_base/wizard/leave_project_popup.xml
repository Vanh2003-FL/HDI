<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="leave_project_popup_wizard" model="ir.ui.view">
        <field name="name">leave.project.popup.wizard</field>
        <field name="model">leave.project.popup</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="type"/>
                    <field name="date" attrs="{'invisible': [('type', '!=', 'soon')], 'required': [('type', '=', 'soon')]}"/>
                    <field name="resource_project_id" invisible="1"/>
                </group>

                <footer>
                    <button string="Rời dự án" type="object" name="action_leave" class="btn-primary" />
                    <button string="Hủy" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
