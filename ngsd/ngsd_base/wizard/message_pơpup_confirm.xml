<odoo>
    <data>
        <record id="form_view_message_popup_confirm" model="ir.ui.view">
            <field name="name">form.view.message.popup.confirm</field>
            <field name="model">message.popup.confirm</field>
            <field name="arch" type="xml">
                <form string="message">
                    <div class="text-left">
                        <field name="message"/>
                    </div>
                    <field name="master_id" invisible="1"/>
                    <field name="func" invisible="1"/>
                    <footer>
                        <button name="button_confirm" string="Xác nhận" type="object" class="btn-primary"/>
                        <button special="cancel" string="Hủy" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>