<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="fill_en_change_ids_old_data_cron" model="ir.cron">
        <field name="name">Xử lý dữ liệu cũ: Fill en_change_ids là bản ghi tương ứng với giá trị được chọn ở change</field>
        <field name="model_id" ref="ngsd_crm.model_x_sale_contract_annex"/>
        <field name="state">code</field>
        <field name="code">env['x.sale.contract.annex'].fill_en_change_ids_old_data()</field>
        <field name="interval_number">5</field>
        <field name='interval_type'>minutes</field>
        <field name="numbercall">1</field>
        <field name="nextcall" eval="DateTime.now() - relativedelta(minutes=5)"/>
        <field name="active">1</field>
    </record>
    <record id="fill_contract_guarantee_old_data_cron" model="ir.cron">
        <field name="name">Xử lý dl cũ: tạo sẵn các bản ghi có name=các giá trị được chọn của trường cũ, chọn luôn bản ghi này trong trường Tên bảo lãnh</field>
        <field name="model_id" ref="ngsd_crm.model_x_sale_contract_annex"/>
        <field name="state">code</field>
        <field name="code">env['x.sale.contract.guarantee'].re_create_guarantee()</field>
        <field name="interval_number">5</field>
        <field name='interval_type'>minutes</field>
        <field name="numbercall">1</field>
        <field name="nextcall" eval="DateTime.now() - relativedelta(minutes=5)"/>
        <field name="active">1</field>
    </record>
    <record id="fill_first_date_old_data_cron" model="ir.cron">
        <field name="name">Xử lý dữ liệu cũ: Fill first date</field>
        <field name="model_id" ref="ngsd_crm.model_x_sale_contract_annex"/>
        <field name="state">code</field>
        <field name="code">env.cr.execute('update project_project set first_date = date;')</field>
        <field name="interval_number">5</field>
        <field name='interval_type'>minutes</field>
        <field name="numbercall">1</field>
        <field name="nextcall" eval="DateTime.now() - relativedelta(minutes=5)"/>
        <field name="active">0</field>
    </record>

</odoo>
