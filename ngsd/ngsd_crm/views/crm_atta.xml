<odoo>

    <record id="crm_atta_view_tree" model="ir.ui.view">
        <field name="name">crm_atta_view_tree</field>
        <field name="model">ir.attachment</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="res_name"/>
                <field name="file_size"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <record id="crm_atta_action" model="ir.actions.act_window">
        <field name="name">Quản lý tài liệu</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ir.attachment</field>
        <field name="view_mode">list</field>
        <field name="domain">[('res_model', '=', 'crm.lead')]</field>
    </record>
</odoo>
