<odoo>

    <record id="crm_kpi_view_tree" model="ir.ui.view">
        <field name="name">crm_kpi_view_tree</field>
        <field name="model">crm.kpi</field>
        <field name="arch" type="xml">
            <list>
                <field name="employee_ids" widget="many2many_tags"/>
                <field name="targets_amount"/>
                <field name="type"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </list>
        </field>
    </record>
    <record id="crm_kpi_view_form" model="ir.ui.view">
        <field name="name">crm_kpi_view_from</field>
        <field name="model">crm.kpi</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="add_target_emp" string="Giao chỉ tiêu" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="type"/>
                            <label for="start_date" string="Áp dụng"/>
                            <div>
                                <field name="start_date" style="width: 20%;"/>
                                <span> - </span>
                                <field name="end_date" style="width: 20%;"/>
                            </div>
                            <field name="targets_amount"/>
                            <field name="department_ids" widget="many2many_tags"/>
                            <field name="employee_ids" widget="many2many_tags"/>
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record id="crm_kpi_action" model="ir.actions.act_window">
        <field name="name">Chỉ tiêu</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.kpi</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
