<odoo>
    <record id="crm_support_history_view_form" model="ir.ui.view">
        <field name="name">crm_support_history_view_form</field>
        <field name="model">crm.support.history</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="x_date"/>
                            <field name="technical_field_27310" widget="many2many_tags" invisible="1"/>
                            <field name="x_partner_id" context="{'form_view_ref': 'ngsd_base.ngsd_res_partner_technical_field_27310_form','default_company_type':'contact','default_technical_field_27310':technical_field_27310}"/>
                            <field name="partner_id" invisible="1"/>
                            <field name="x_note"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="crm_support_history_view_tree" model="ir.ui.view">
        <field name="name">crm_support_history_view_tree</field>
        <field name="model">crm.support.history</field>
        <field name="arch" type="xml">
            <list>
                <field name="x_date"/>
                <field name="create_uid" string="Người tạo"/>
                <field name="x_lead_id"/>
                <field name="partner_id" string="Tên khách hàng"/>
                <field name="technical_field_27310" widget="many2many_tags" invisible="1"/>
                <field name="x_partner_id" context="{'form_view_ref': 'ngsd_base.ngsd_res_partner_technical_field_27310_form','default_company_type':'contact','default_technical_field_27310':technical_field_27310}"/>
                <field name="x_note"/>
                <field name="x_is_sale" invisible="1"/>
            </list>
        </field>
    </record>

    <record id="crm_support_history_view__search" model="ir.ui.view">
        <field name="name">crm_support_history_view__search</field>
        <field name="model">crm.support.history</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="x_partner_id"/>
                <filter name="is_sale" string="Sale" domain="[('x_is_sale', '=', True)]"/>
                <filter name="group_by_sale" string="AM" context="{'group_by': 'user_id'}"/>
                <filter name="group_by_x_partner_id" string="Đối tượng" domain="[]" context="{'group_by': 'x_partner_id'}"/>
                <filter name="group_by_x_date" string="Ngày" domain="[]" context="{'group_by': 'x_date'}"/>
                <filter name="group_by_x_lead_id" string="Cơ hội" domain="[]" context="{'group_by': 'x_lead_id'}"/>
            </search>
        </field>
    </record>

    <record id="crm_support_history_action" model="ir.actions.act_window">
        <field name="name">Lịch sử chăm sóc</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.support.history</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_is_sale': 1, 'search_default_group_by_sale': 1}</field>
    </record>
</odoo>
