<odoo>

    <record id="kt_department_view_tree" model="ir.ui.view">
        <field name="name">kt_department_view_tree</field>
        <field name="model">kt.department</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="kt_department_action" model="ir.actions.act_window">
        <field name="name">Phòng kỹ thuật</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">kt.department</field>
        <field name="view_mode">list</field>
    </record>
</odoo>
