<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_crm.res_partner_address_type" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>

    <record id="view_partner_tree" model="ir.ui.view">
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <field name="email" position="after">
                <field name="parent_id"/>
            </field>
            <field name="user_id" position="after">
                <field name="activity_user_ids" widget="many2many_tags"/>
            </field>
        </field>
    </record>

    <record id="ngsd_res_partner_view_form" model="ir.ui.view">
        <field name="inherit_id" ref="ngsd_base.ngsd_res_partner_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="to_x_count_contract" attrs="{'invisible':[('x_count_contract','=',0)]}" type="object" class="oe_stat_button" icon="fa-files-o">
                    <field name="x_count_contract" widget="statinfo"/>
                </button>
            </xpath>
            <xpath expr="//div[hasclass('oe_title')]" position="after">
                <group>
                    <field name="parent_id"/>
                </group>
            </xpath>
            <field name="parent_id" position="replace"/>
        </field>
    </record>

    <record id="ngsd_res_partner_crm_support_history_form" model="ir.ui.view">
        <field name="inherit_id" ref="ngsd_base.ngsd_res_partner_customer_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='contact_addresses']" position="after">
                <page name="support-history" string="Lá»‹ch sá»­ chÄƒm sÃ³c">
                    <field name="x_support_history_ids">
                        <list editable="bottom">
                            <field name="x_date"/>
                            <field name="x_partner_id" domain="['|',('en_internal','=',True),('id','child_of', parent.id)]"/>
                            <field name="x_note"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="res_partner_tree" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <list>
                <field name="x_code"/>
                <field name="name"/>
                <field name="x_short" optional="show"/>
                <field name="phone" optional="show"/>
                <field name="email" optional="show"/>
                <field name="x_gender" attrs="{'invisible':[('company_type','!=','person')]}" optional="hide"/>
                <field name="street" optional="show"/>
                <field name="city" optional="hide"/>
                <field name="industry_id" optional="show"/>
                <field name="activity_user_ids" widget="many2many_tags" optional="show"/>
                <field name="user_id" optional="hide"/>
                <field name="company_type" invisible="1"/>
            </list>
        </field>
    </record>
</odoo>