<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_form_view_inherit" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="priority">99999</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="replace">
                <field name="state" widget="statusbar" statusbar_visible="draft,to_approval,approved,sent,sale,done,cancel" force_save="1"/>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="action_create_contract" string="Tạo hợp đồng" class="btn-primary" type="object"/>
            </xpath>
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button class="oe_stat_button" name="to_contract" type="object" icon="fa-pencil" attrs="{'invisible':[('contract_count','=',0)]}">
                    <div class="o_stat_info">
                        <field name="contract_count" class="o_stat_value"/>
                        <span class="o_stat_text"> Hợp đồng</span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//field[@name='pricelist_id']" position="after">
                <field name="x_sale_contract_ids" invisible="1"/>
                <field name="contract_count" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
