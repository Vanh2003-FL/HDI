<odoo>

    <record id="x_legal_view_tree" model="ir.ui.view">
        <field name="name">x_legal_view_tree</field>
        <field name="model">x.legal</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="x_legal_action" model="ir.actions.act_window">
        <field name="name">Pháp nhân</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">x.legal</field>
        <field name="view_mode">list</field>
    </record>
</odoo>
