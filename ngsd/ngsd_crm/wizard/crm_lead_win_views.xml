<?xml version="1.0"?>
<odoo>
        <record id="crm_lead_win_view_form" model="ir.ui.view">
            <field name="name">crm.lead.win.form</field>
            <field name="model">crm.lead.win</field>
            <field name="arch" type="xml">
                <form string="Contract info">
                    <group class="oe_title">
                        <field name="contract_code" />
                        <field name="date_deadline" />
                    </group>
                    <footer>
                        <button name="action_win_apply" string="Submit" type="object" class="btn-primary" data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="crm_lead_win_action" model="ir.actions.act_window">
            <field name="name">Thông tin hợp đồng</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.lead.win</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="crm_lead_win_view_form"/>
            <field name="target">new</field>
        </record>
</odoo>
