<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="notify_record_message">
        <p style="margin: 0px;">
            <span style="margin-top: 8px;"><t t-out="message"/></span>
        </p>
        <p style="margin-top: 24px; margin-bottom: 16px;">
            <a t-att-href="access_link" style="background-color:#875A7B; padding: 10px; text-decoration: none; color: #fff; border-radius: 5px;">
                Xem <t t-esc="model_description or 'document'"/>
            </a>
        </p>
    </template>
</odoo>