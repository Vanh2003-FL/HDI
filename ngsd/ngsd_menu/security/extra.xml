<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.module.category" id="module_category_extra_rights">
        <field name="name">Quyền bổ sung</field>
        <field name="sequence">50</field>
    </record>
    <record id="group_sub_res_partner_editor" model="res.groups">
        <field name="name">Tạo/sửa liên hệ con</field>
        <field name="category_id" ref="module_category_extra_rights"/>
    </record>
    <record id="access_res_partner_group_sub_res_partner_editor" model="ir.model.access">
        <field name="name">Tạo/sửa khách hàng</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="group_id" ref="group_sub_res_partner_editor"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    <record id="group_sub_res_partner_editor_model_res_partner_rule" model="ir.rule">
        <field name="name">Tạo/sửa liên hệ con</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="domain_force">[('parent_id.is_customer', '=', True), ('parent_id.activity_user_ids', 'in', user.ids)]</field>
        <field name="groups" eval="[(4,ref('group_sub_res_partner_editor'))]"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_read" eval="False"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="group_res_partner_reader" model="res.groups">
        <field name="name">Xem tất cả khách hàng</field>
        <field name="category_id" ref="module_category_extra_rights"/>
    </record>
    <record id="group_res_partner_reader_model_res_partner_rule" model="ir.rule">
        <field name="name">Xem tất cả khách hàng</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4,ref('group_res_partner_reader'))]"/>
    </record>

    <record id="group_res_partner_manager" model="res.groups">
        <field name="name">Full quyền khách hàng</field>
        <field name="category_id" ref="module_category_extra_rights"/>
    </record>
    <record id="access_res_partner_group_res_partner_manager" model="ir.model.access">
        <field name="name">Xem tất cả khách hàng</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="group_id" ref="group_res_partner_manager"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    <record id="group_res_partner_manager_model_res_partner_rule" model="ir.rule">
        <field name="name">Xem tất cả khách hàng</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4,ref('group_res_partner_manager'))]"/>
    </record>
    <record id="group_system_model_en_hr_overtime" model="ir.rule">
        <field name="name">CRUD hr.en.overtime 1=1</field>
        <field name="model_id" ref="ngsd_base.model_en_hr_overtime"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4,ref('base.group_system'))]"/>
    </record>
    <record id="group_access_global_rule_model_project_project_rule" model="ir.rule">
        <field name="name">Project: Xem dự án theo trạng thái</field>
        <field name="model_id" ref="project.model_project_project"/>
        <field name="domain_force">['|',  '|', '|', '|', '|', ('can_view_draft', '=', True), ('en_state', '!=', 'draft'), ('en_project_block_id', '=', user.id), ('en_project_qa_id', '=', user.id), ('en_project_sale_id', '=', user.id), '&amp;', ('en_state', '=', 'draft'), '|', ('create_uid', '=', user.id), ('en_resource_project_ids.employee_id.user_id', '=', user.id)]</field>
    </record>

</odoo>