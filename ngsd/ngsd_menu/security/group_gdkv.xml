<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ngsd_base.group_gdkv" model="res.groups">
        <field name="menu_access" eval="[
        (4,ref('ngsd_menu.qlda_qlda_menu')),
        (4,ref('ngsd_menu.qlda_qlda_nv_menu')),
        (4,ref('ngsd_menu.qlda_qlda_nv_nvct_menu')),
        (4,ref('account_reports.menu_resource_action_report')),
        (4,ref('hr_timesheet.timesheet_menu_activity_all')),
        (4,ref('hr_timesheet.timesheet_menu_activity_mine')),
        (4,ref('account_reports.menu_project_action_report')),
        (4,ref('ngsd_base.requested_hr_overtime_menu')),
        (4,ref('ngsd_base.hr_overtime_menu')),
        (4,ref('hr_attendance.menu_hr_attendance_view_attendances')),
        ]"/>
    </record>

    <record id="group_gdkv_model_documents_document_rule" model="ir.rule">
        <field name="name">Xem tất cả tài liệu</field>
        <field name="model_id" ref="documents.model_documents_document"/>
        <field name="domain_force">[('folder_id.en_project_id.en_area_id.en_project_implementation_id', '=', user.id)]</field>
        <field name="groups" eval="[(4,ref('ngsd_base.group_gdkv'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    <record id="group_gdkv_model_documents_folder_rule" model="ir.rule">
        <field name="name">Xem tất cả thư mục</field>
        <field name="model_id" ref="documents.model_documents_folder"/>
        <field name="domain_force">[('en_project_id.en_area_id.en_project_implementation_id', '=', user.id)]</field>
        <field name="groups" eval="[(4,ref('ngsd_base.group_gdkv'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    <record id="group_gdkv_model_borrow_employee_rule" model="ir.rule">
        <field name="name">Xem tất cả bản ghi thuộc khu vực mình</field>
        <field name="model_id" ref="ngsd_base.model_en_borrow_employee"/>
        <field name="domain_force">['|', ('department_borrower_id.block_id.area_id', '=', user.employee_id.en_area_id.id), ('department_lender_id.block_id.area_id', '=', user.employee_id.en_area_id.id)]</field>
        <field name="groups" eval="[(4,ref('ngsd_base.group_gdkv'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    <record id="group_gdkv_model_lender_employee_rule" model="ir.rule">
        <field name="name">Xem tất cả bản ghi thuộc khu vực mình</field>
        <field name="model_id" ref="ngsd_base.model_en_lender_employee"/>
        <field name="domain_force">['|', ('department_borrower_id.block_id.area_id', '=', user.employee_id.en_area_id.id), ('department_lender_id.block_id.area_id', '=', user.employee_id.en_area_id.id)]</field>
        <field name="groups" eval="[(4,ref('ngsd_base.group_gdkv'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
</odoo>
