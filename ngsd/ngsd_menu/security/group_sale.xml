<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="group_ngsd_sale_model_project_project_rule" model="ir.rule">
        <field name="name">Xem dự án mình là Sales</field>
        <field name="model_id" ref="project.model_project_project"/>
        <field name="domain_force">[('en_project_sale_id', '=', user.id)]</field>
        <field name="groups" eval="[(4,ref('ngsd_base.ngsd_sale')),(4,ref('ngsd_base.group_tvda'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="group_sale_model_en_wbs_rule" model="ir.rule">
        <field name="name">Xem tất cả WBS</field>
        <field name="model_id" ref="ngsd_base.model_en_wbs"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4,ref('ngsd_base.ngsd_sale'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    <record id="group_sale_model_en_resource_planning_rule" model="ir.rule">
        <field name="name">Xem tất cả KHNL</field>
        <field name="model_id" ref="ngsd_base.model_en_resource_planning"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4,ref('ngsd_base.ngsd_sale'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

</odoo>