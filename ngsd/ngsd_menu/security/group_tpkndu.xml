<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="ngsd_base.group_tpkndu" model="res.groups">
        <field name="menu_access" eval="[
        (4,ref('hr_holidays.menu_hr_holidays_dashboard')),
        (4,ref('hr_timesheet.timesheet_menu_activity_all')),
        (4,ref('hr_attendance.menu_hr_attendance_view_attendances')),
        ]"/>
    </record>

    <record id="group_tpkndu_model_hr_employee_rule" model="ir.rule">
        <field name="name">Nhân viên phòng mình</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="domain_force">[('en_department_id','=',user.employee_id.en_department_id.id)]</field>
        <field name="groups" eval="[(4,ref('ngsd_base.group_tpkndu'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    <record id="group_tpkndu_nonproject_task_rule" model="ir.rule">
        <field name="name">Xem Công việc ngoài dự án thuộc phòng mình</field>
        <field name="model_id" ref="ngsd_base.model_en_nonproject_task"/>
        <field name="domain_force">[('en_pic_id.employee_id.en_department_id','=',user.employee_id.en_department_id.id)]</field>
        <field name="groups" eval="[(4,ref('ngsd_base.group_tpkndu'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    <record id="group_tpkndu_timesheet_my_en_department_rule" model="ir.rule">
        <field name="name">Xem Timesheet nhân viên thuộc phòng mình</field>
        <field name="model_id" ref="ngsd_base.model_account_analytic_line"/>
        <field name="domain_force">[('employee_id.en_department_id','=',user.employee_id.en_department_id.id), ('employee_id.en_department_id','!=', False)]</field>
        <field name="groups" eval="[(4,ref('ngsd_base.group_tpkndu'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    <record id="group_tpkndu_overtime_plan_nonproject_rule" model="ir.rule">
        <field name="name">Xem Kế hoạch OT ngoài dự án thuộc phòng mình</field>
        <field name="model_id" ref="ngsd_base.model_en_overtime_plan"/>
        <field name="domain_force">[('create_uid.employee_id.en_department_id','=',user.employee_id.en_department_id.id), ('en_work_inproject', '=', False)]</field>
        <field name="groups" eval="[(4,ref('ngsd_base.group_tpkndu'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    <record id="group_tpkndu_hr_leave_rule" model="ir.rule">
        <field name="name">Xem Nghỉ phép thuộc phòng mình</field>
        <field name="model_id" ref="hr_holidays.model_hr_leave"/>
        <field name="domain_force">[('employee_id.en_department_id','=',user.employee_id.en_department_id.id), ('employee_id.en_department_id','!=', False)]</field>
        <field name="groups" eval="[(4,ref('ngsd_base.group_tpkndu'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    <record id="group_tpkndu_hr_overtime_rule" model="ir.rule">
        <field name="name">Xem OT thuộc phòng mình</field>
        <field name="model_id" ref="ngsd_base.model_en_hr_overtime"/>
        <field name="domain_force">[('employee_id.en_department_id','=',user.employee_id.en_department_id.id), ('employee_id.en_department_id','!=', False)]</field>
        <field name="groups" eval="[(4,ref('ngsd_base.group_tpkndu'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    <record id="group_tpkndu_project_task_odoobot" model="ir.rule">
        <field name="name">Xem Task khi phê duyệt nghỉ phép</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="domain_force">[('en_handler','=', 1)]</field>
        <field name="groups" eval="[(4,ref('ngsd_base.group_tpkndu')), (4,ref('ngsd_base.group_tppmo'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
</odoo>
