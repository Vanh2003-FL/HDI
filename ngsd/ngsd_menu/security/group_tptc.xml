<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="ngsd_base.group_tptc" model="res.groups">
        <field name="menu_access" eval="[
        (4,ref('ngsd_base.hr_overtime_menu')),
        (4,ref('hr_holidays.menu_hr_holidays_dashboard')),
        (4,ref('ngsd_menu.qlda_qlda_menu')),
        (4,ref('account_reports.menu_project_action_report')),
        (4,ref('account_reports.menu_resource_action_report')),
        (4,ref('hr_holidays.menu_hr_holidays_approvals')),
        (4,ref('ngsd_base.requested_hr_overtime_menu')),
        ]"/>
    </record>

    <record id="group_tptc_model_project_project_rule" model="ir.rule">
        <field name="name">Xem tất cả dự án</field>
        <field name="model_id" ref="project.model_project_project"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4,ref('ngsd_base.group_tptc'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="group_tptc_model_hr_leave_rule" model="ir.rule">
        <field name="name">Tất cả nghỉ phép</field>
        <field name="model_id" ref="hr_holidays.model_hr_leave"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4,ref('ngsd_base.group_tptc'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="group_cbf_model_hr_employee_rule" model="ir.rule">
        <field name="name">Tất cả nhân viên</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4,ref('ngsd_base.group_cbf'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="group_tptc_model_en_resource_planning_rule" model="ir.rule">
        <field name="name">Tất cả Kế hoạch nguồn lực</field>
        <field name="model_id" ref="ngsd_base.model_en_resource_planning"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4,ref('ngsd_base.group_tptc'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>
</odoo>