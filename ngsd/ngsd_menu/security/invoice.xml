<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="group_contract_leader_model_account_move_rule" model="ir.rule">
        <field name="name">Xem hóa đơn của đội mình</field>
        <field name="groups" eval="[(4,ref('group_contract_leader'))]"/>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="domain_force">['|', '|', ('team_id.user_ids', '=', user.id), ('invoice_user_id.crm_team_ids.user_ids', '=', user.id), ('contract_id.user_id.crm_team_ids.user_ids', '=', user.id)]</field>
    </record>

    <record id="group_contract_officer_model_account_move_rule" model="ir.rule">
        <field name="name">Xem tất cả hóa đơn</field>
        <field name="groups" eval="[(4,ref('group_contract_officer'))]"/>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="domain_force">[]</field>
    </record>

    <record id="access_model_account_move_group_contract_manager" model="ir.model.access">
        <field name="name">Tạo, xem, sửa hóa đơn</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="group_id" ref="group_contract_manager"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    <record id="group_contract_manager_model_account_move_rule" model="ir.rule">
        <field name="name">Xem tất cả hóa đơn</field>
        <field name="groups" eval="[(4,ref('group_contract_manager'))]"/>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="domain_force">[]</field>
    </record>


</odoo>