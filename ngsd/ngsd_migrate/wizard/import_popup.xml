<odoo>
    <record id="form_view_import_migrate_popup" model="ir.ui.view">
        <field name="name">form_view_import_migrate_popup</field>
        <field name="model">import.migrate.popup</field>
        <field name="arch" type="xml">
            <form string="import">
                <sheet>
                    <group>
                    </group>
                    <group>
                        <group>
                            <field name="model_id"/>
                            <field name="file_name" invisible="1"/>
                            <field name="file" filename="file_name"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Nhập file" class="btn-primary" type="object" name="import_data" attrs="{'invisible': [('file', '=', False)]}"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="import_migrate_popup_act" model="ir.actions.act_window">
        <field name="name">Nhập migrate</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">import.migrate.popup</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="import_migrate_popup_menu"
        name="Import dữ liệu"
        action="import_migrate_popup_act"
        sequence="185"/>

</odoo>